// View refund details
async function viewRefundDetails(refundId) {
    const modal = document.getElementById('refundDetailModal');
    const loading = document.getElementById('refundLoading');
    const content = document.getElementById('refundContent');
    
    // Show modal with loading state
    modal.style.display = 'block';
    loading.style.display = 'flex';
    content.style.display = 'none';
    
    try {
        // Call through PageModel handler to use server-side authentication
        const response = await fetch(`?handler=RefundDetail&refundId=${refundId}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json'
            }
        });
        
        if (!response.ok) {
            throw new Error('Failed to load refund details');
        }
        
        const result = await response.json();
        
        if (!result.success) {
            throw new Error(result.message || 'Failed to load refund details');
        }
        
        // Parse the nested JSON response
        const apiResponse = JSON.parse(result.data);
        const refund = apiResponse.data;
        
        // Hide loading, show content
        loading.style.display = 'none';
        content.style.display = 'block';
        
        // Populate status banner
        populateStatusBanner(refund);
        
        // Populate order information
        document.getElementById('refundOrderCode').textContent = refund.orderCode || '-';
        document.getElementById('refundCreatedDate').textContent = refund.createdAt ? 
            new Date(refund.createdAt).toLocaleString('vi-VN', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            }) : '-';
        document.getElementById('refundProcessedDate').textContent = refund.processedAt ? 
            new Date(refund.processedAt).toLocaleString('vi-VN', { 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            }) : 'Pending';
        
        // Populate amount breakdown
        document.getElementById('refundOriginalAmount').textContent = formatCurrency(refund.originalDepositAmount);
        
        const penaltyRow = document.getElementById('penaltyRow');
        if (refund.totalPenaltyAmount > 0) {
            penaltyRow.style.display = 'flex';
            document.getElementById('refundPenaltyAmount').textContent = '-' + formatCurrency(refund.totalPenaltyAmount);
        } else {
            penaltyRow.style.display = 'none';
        }
        
        document.getElementById('refundTotalAmount').textContent = formatCurrency(refund.refundAmount);
        
        // Populate violations (if any)
        const violationsSection = document.getElementById('violationsSection');
        const violationsList = document.getElementById('violationsList');
        
        if (refund.violations && refund.violations.length > 0) {
            violationsSection.style.display = 'block';
            violationsList.innerHTML = refund.violations.map(v => `
                <div class="violation-item">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <div class="violation-content">
                        <div class="violation-type">${v.violationType || 'Violation'}</div>
                        <div class="violation-description">${v.description || 'No description provided'}</div>
                        <div class="violation-penalty">Penalty: ${formatCurrency(v.penaltyAmount)}</div>
                    </div>
                </div>
            `).join('');
        } else {
            violationsSection.style.display = 'none';
        }
        
        // Populate bank account information
        const bankInfoContent = document.getElementById('bankInfoContent');
        const noBankInfo = document.getElementById('noBankInfo');
        
        if (refund.bankInfo && refund.bankInfo.bankName) {
            bankInfoContent.style.display = 'block';
            noBankInfo.style.display = 'none';
            
            document.getElementById('refundBankName').textContent = refund.bankInfo.bankName || '-';
            document.getElementById('refundAccountHolder').textContent = refund.bankInfo.accountHolderName || '-';
            document.getElementById('refundAccountNumber').textContent = refund.bankInfo.accountNumber || '-';
            
            const routingNumberRow = document.getElementById('routingNumberRow');
            if (refund.bankInfo.routingNumber) {
                routingNumberRow.style.display = 'flex';
                document.getElementById('refundRoutingNumber').textContent = refund.bankInfo.routingNumber;
            } else {
                routingNumberRow.style.display = 'none';
            }
        } else {
            bankInfoContent.style.display = 'none';
            noBankInfo.style.display = 'flex';
        }
        
        // Populate admin notes (if any)
        const adminNotesSection = document.getElementById('adminNotesSection');
        if (refund.notes) {
            adminNotesSection.style.display = 'block';
            document.getElementById('refundAdminNotes').textContent = refund.notes;
        } else {
            adminNotesSection.style.display = 'none';
        }
        
    } catch (error) {
        console.error('Error loading refund details:', error);
        alert('Failed to load refund details. Please try again.');
        modal.style.display = 'none';
    }
}

function populateStatusBanner(refund) {
    const banner = document.getElementById('refundStatusBanner');
    const title = document.getElementById('refundStatusTitle');
    const description = document.getElementById('refundStatusDescription');
    const icon = banner.querySelector('.status-icon');
    
    // Remove existing status classes
    banner.classList.remove('completed', 'initiated', 'failed');
    
    const status = refund.status.toLowerCase();
    
    if (status === 'completed') {
        banner.classList.add('completed');
        title.textContent = 'Refund Completed ✓';
        description.textContent = 'Your deposit has been successfully refunded to your bank account.';
        icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />';
    } else if (status === 'initiated') {
        banner.classList.add('initiated');
        title.textContent = 'Refund In Progress';
        description.textContent = 'Your refund request is being processed by our admin team. Please allow 3-5 business days.';
        icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />';
    } else if (status === 'failed') {
        banner.classList.add('failed');
        title.textContent = 'Refund Failed';
        description.textContent = 'There was an issue processing your refund. Please contact our support team for assistance.';
        icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
    }
}

