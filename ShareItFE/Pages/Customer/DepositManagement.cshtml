@page
@model ShareItFE.Pages.Customer.DepositManagementModel
@{
    ViewData["Title"] = "Deposit & Refund Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/customer-dashboard.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Deposit & Refund Management</h1>
            <p class="dashboard-subtitle">Track your deposit status and manage accounts for receiving refunds</p>
        </div>
    </div>

    <!-- Tab Navigation -->
    <div class="tab-navigation">
        <a href="/Customer/Dashboard" class="tab-link">
            <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            Spending Overview
        </a>
        <a href="/Customer/DepositManagement" class="tab-link active">
            <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Deposit Management
        </a>
    </div>

    <!-- Alert Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            @Model.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-error">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            @Model.ErrorMessage
        </div>
    }

    <!-- Statistics Cards -->
    <div class="stats-grid deposit-stats">
        <!-- Deposits Refunded -->
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <p class="stat-label">Deposits Refunded</p>
                    <h3 class="stat-value">@Model.Stats.DepositsRefunded.ToString("N0")₫</h3>
                </div>
                <div class="stat-icon green">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Pending Refunds -->
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <p class="stat-label">Pending Refunds</p>
                    <h3 class="stat-value">@Model.Stats.PendingRefunds.ToString("N0")₫</h3>
                </div>
                <div class="stat-icon yellow">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Refund Issues -->
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <p class="stat-label">Refund Issues</p>
                    <h3 class="stat-value">@Model.Stats.RefundIssues</h3>
                </div>
                <div class="stat-icon red">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Refund Account Management Section -->
    <div class="section-container">
        <div class="section-header">
            <div>
                <h2 class="section-title">Refund Account Management</h2>
                <p class="section-subtitle">Manage your bank accounts designated for receiving deposit refunds</p>
            </div>
            <button class="add-btn" onclick="showAddBankModal()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Refund Account
            </button>
        </div>

        @if (Model.BankAccounts.Any())
        {
            <div class="accounts-grid">
                @foreach (var account in Model.BankAccounts)
                {
                    <div class="account-card @(account.IsPrimary ? "primary" : "")">
                        @if (account.IsPrimary)
                        {
                            <span class="primary-badge">Primary</span>
                        }
                        <div class="account-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                        </div>
                        <div class="account-info">
                            <h4 class="account-bank">@account.BankName</h4>
                            <p class="account-number">Account: ****@account.Last4Digits</p>
                            <p class="account-routing">Holder: @account.AccountHolderName</p>
                            @if (!string.IsNullOrEmpty(account.RoutingNumber))
                            {
                                <p class="account-routing">Routing: @account.RoutingNumber</p>
                            }
                        </div>
                        <div class="account-actions">
                            @if (!account.IsPrimary)
                            {
                                <form method="post" asp-page-handler="SetPrimaryBankAccount" class="inline-form">
                                    <input type="hidden" name="accountId" value="@account.Id" />
                                    <button type="submit" class="action-btn primary-btn">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M5 13l4 4L19 7" />
                                        </svg>
                                        Set Primary
                                    </button>
                                </form>
                            }
                            <button class="action-btn edit-btn" onclick="editBankAccount('@account.Id', '@account.BankName', '@account.AccountNumber', '@account.AccountHolderName', '@(account.RoutingNumber ?? "")')">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                                </svg>
                                Edit
                            </button>
                            <form method="post" asp-page-handler="DeleteBankAccount" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this account?')">
                                <input type="hidden" name="accountId" value="@account.Id" />
                                <button type="submit" class="action-btn delete-btn">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6" />
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                    </svg>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                </div>
                <h3>No Refund Accounts</h3>
                <p>Add a bank account to receive deposit refunds</p>
            </div>
        }
    </div>

    <!-- Deposit History Section -->
    <div class="section-container">
        <div class="section-header">
            <h2 class="section-title">Deposit History</h2>
            <div class="section-actions">
                <button class="filter-action-btn" onclick="alert('Filter feature coming soon!')">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                    </svg>
                    Filter
                </button>
                <button class="filter-action-btn" onclick="alert('Export feature coming soon!')">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Export
                </button>
            </div>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ORDER / ITEM</th>
                        <th>DEPOSIT AMOUNT</th>
                        <th>REFUND METHOD</th>
                        <th>REFUND AMOUNT</th>
                        <th>STATUS</th>
                        <th>REFUND DATE</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var deposit in Model.DepositHistory)
                    {
                        var statusClass = deposit.Status.ToString().ToLower() switch
                        {
                            "completed" => "status-completed",
                            "pending" => "status-pending",
                            "initiated" => "status-initiated",
                            "failed" => "status-failed",
                            _ => "status-pending"
                        };

                        <tr>
                            <td>
                                <div class="item-cell">
                                    <div class="item-name">@deposit.ItemName</div>
                                    <div class="item-code">@deposit.OrderCode</div>
                                </div>
                            </td>
                            <td class="amount-cell">@deposit.DepositAmount.ToString("N0")₫</td>
                            <td>
                                <div class="method-cell">
                                    <svg class="method-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                                    </svg>
                                    @deposit.RefundMethod
                                </div>
                            </td>
                            <td class="amount-cell">@deposit.RefundAmount.ToString("N0")₫</td>
                            <td>
                                <span class="status-badge @statusClass">
                                    @if (deposit.Status == BusinessObject.Enums.TransactionStatus.completed)
                                    {
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                        </svg>
                                        <span>Completed</span>
                                    }
                                    else if (deposit.Status == BusinessObject.Enums.TransactionStatus.initiated)
                                    {
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        <span>Initiated</span>
                                    }
                                    else if (deposit.Status == BusinessObject.Enums.TransactionStatus.failed)
                                    {
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                        </svg>
                                        <span>Failed</span>
                                    }
                                </span>
                            </td>
                            <td class="date-cell">@deposit.RefundDate?.ToString("yyyy-MM-dd")</td>
                            <td>
                                <button class="action-btn" title="View Details" onclick="alert('View details feature coming soon!')">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                    </svg>
                                </button>
                                <button class="action-btn" title="More Actions">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bank Account Modal -->
    <div id="bankAccountModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Add Bank Account</h3>
                <button type="button" class="close-btn" onclick="closeBankModal()">&times;</button>
            </div>
            <form id="bankAccountForm" method="post" asp-page-handler="CreateBankAccount">
                <input type="hidden" id="accountId" name="accountId" />
                <div class="form-group">
                    <label for="bankName">Bank Name</label>
                    <input type="text" id="bankName" name="bankName" required />
                </div>
                <div class="form-group">
                    <label for="accountNumber">Account Number</label>
                    <input type="text" id="accountNumber" name="accountNumber" required />
                </div>
                <div class="form-group">
                    <label for="accountHolderName">Account Holder Name</label>  
                    <input type="text" id="accountHolderName" name="accountHolderName" required />
                </div>
                <div class="form-group">
                    <label for="routingNumber">Routing Number (Optional)</label>
                    <input type="text" id="routingNumber" name="routingNumber" />
                </div>
                <div class="form-group">
                    <label class="checkbox-label">
                        <input type="checkbox" id="setAsPrimary" name="setAsPrimary" value="true" />
                        Set as primary account
                    </label>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn-secondary" onclick="closeBankModal()">Cancel</button>
                    <button type="submit" class="btn-primary">Save Account</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function showAddBankModal() {
    document.getElementById('modalTitle').textContent = 'Add Refund Account';
    document.getElementById('bankAccountForm').action = '?handler=CreateBankAccount';
    document.getElementById('accountId').value = '';
    document.getElementById('bankName').value = '';
    document.getElementById('accountNumber').value = '';
    document.getElementById('accountHolderName').value = '';
    document.getElementById('routingNumber').value = '';
    document.getElementById('setAsPrimary').checked = false;
    document.getElementById('bankAccountModal').style.display = 'block';
}

function editBankAccount(id, bankName, accountNumber, accountHolderName, routingNumber) {
    document.getElementById('modalTitle').textContent = 'Edit Refund Account';
    document.getElementById('bankAccountForm').action = '?handler=UpdateBankAccount';
    document.getElementById('accountId').value = id;
    document.getElementById('bankName').value = bankName;
    document.getElementById('accountNumber').value = accountNumber;
    document.getElementById('accountHolderName').value = accountHolderName;
    document.getElementById('routingNumber').value = routingNumber || '';
    document.getElementById('setAsPrimary').checked = false;
    document.getElementById('bankAccountModal').style.display = 'block';
}

function closeBankModal() {
    document.getElementById('bankAccountModal').style.display = 'none';
}

// Close modal when clicking outside
window.onclick = function(event) {
    const modal = document.getElementById('bankAccountModal');
    if (event.target == modal) {
        modal.style.display = 'none';
    }
}
</script>

<style>
.modal {
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
}

.modal-content {
    background-color: white;
    margin: 5% auto;
    padding: 0;
    border-radius: 8px;
    width: 90%;
    max-width: 500px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.modal-header {
    padding: 1rem 1.5rem;
    border-bottom: 1px solid #e5e7eb;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.modal-header h3 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
}

.close-btn {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: #6b7280;
}

.close-btn:hover {
    color: #374151;
}

#bankAccountForm {
    padding: 1.5rem;
}

.form-group {
    margin-bottom: 1rem;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: #374151;
}

.form-group input[type="text"] {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 0.875rem;
}

.form-group input[type="text"]:focus {
    outline: none;
    border-color: #6366f1;
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.checkbox-label {
    display: flex;
    align-items: center;
    cursor: pointer;
}

.checkbox-label input[type="checkbox"] {
    margin-right: 0.5rem;
}

.modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    margin-top: 1.5rem;
}

.btn-secondary {
    padding: 0.5rem 1rem;
    border: 1px solid #d1d5db;
    background-color: white;
    color: #374151;
    border-radius: 0.375rem;
    cursor: pointer;
    font-weight: 500;
}

.btn-secondary:hover {
    background-color: #f3f4f6;
    color: #1f2937;
    border-color: #9ca3af;
}

.btn-primary {
    padding: 0.5rem 1rem;
    background-color: #6366f1;
    color: white;
    border: none;
    border-radius: 0.375rem;
    cursor: pointer;
}

.btn-primary:hover {
    background-color: #5b59f6;
}

.inline-form {
    display: inline-block;
}

.action-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.875rem;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    border: 1px solid;
}

.action-btn svg {
    width: 1rem;
    height: 1rem;
    stroke-width: 2;
}

.primary-btn {
    background-color: #eff6ff;
    color: #1e40af;
    border-color: #bfdbfe;
}

.primary-btn:hover {
    background-color: #dbeafe;
    border-color: #93c5fd;
}

.edit-btn {
    background-color: #f0fdf4;
    color: #15803d;
    border-color: #bbf7d0;
}

.edit-btn:hover {
    background-color: #dcfce7;
    border-color: #86efac;
}

.delete-btn {
    background-color: #fef2f2;
    color: #b91c1c;
    border-color: #fecaca;
}

.delete-btn:hover {
    background-color: #fee2e2;
    border-color: #fca5a5;
}

.empty-state {
    text-align: center;
    padding: 3rem 1rem;
    color: #6b7280;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.empty-icon {
    margin: 0 auto 1rem;
    width: 48px;
    height: 48px;
    color: #9ca3af;
    display: flex;
    align-items: center;
    justify-content: center;
}

.empty-icon svg {
    width: 48px;
    height: 48px;
}

.empty-state h3 {
    margin-bottom: 0.5rem;
    color: #374151;
    font-size: 1.25rem;
    font-weight: 600;
}

.empty-state p {
    color: #6b7280;
    margin: 0;
}

.alert {
    padding: 1rem;
    margin-bottom: 1rem;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.alert svg {
    width: 1.25rem;
    height: 1.25rem;
    flex-shrink: 0;
}

.alert-success {
    background-color: #d1fae5;
    color: #065f46;
    border: 1px solid #a7f3d0;
}

.alert-error {
    background-color: #fee2e2;
    color: #991b1b;
    border: 1px solid #fca5a5;
}
</style>

