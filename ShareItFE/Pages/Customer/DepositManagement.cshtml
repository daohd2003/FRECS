@page
@model ShareItFE.Pages.Customer.DepositManagementModel
@{
    ViewData["Title"] = "Deposit & Refund Management";
}

@section Styles {
    <link rel="stylesheet" href="~/css/customer-dashboard.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Deposit & Refund Management</h1>
            <p class="dashboard-subtitle">Track your deposit status and manage accounts for receiving refunds</p>
        </div>
    </div>

    <!-- Tab Navigation -->
    <div class="tab-navigation">
        <a href="/Customer/Dashboard" class="tab-link">
            <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            Spending Overview
        </a>
        <a href="/Customer/DepositManagement" class="tab-link active">
            <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
            Deposit Management
        </a>
    </div>

    <!-- Alert Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            @Model.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-error">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            @Model.ErrorMessage
        </div>
    }

    <!-- Statistics Cards -->
    <div class="stats-grid deposit-stats">
        <!-- Deposits Refunded -->
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <p class="stat-label">Deposits Refunded</p>
                    <h3 class="stat-value">@Model.Stats.DepositsRefunded.ToString("N0")₫</h3>
                </div>
                <div class="stat-icon green">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Pending Refunds -->
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <p class="stat-label">Pending Refunds</p>
                    <h3 class="stat-value">@Model.Stats.PendingRefunds.ToString("N0")₫</h3>
                </div>
                <div class="stat-icon yellow">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Refund Issues -->
        <div class="stat-card">
            <div class="stat-content">
                <div class="stat-info">
                    <p class="stat-label">Refund Issues</p>
                    <h3 class="stat-value">@Model.Stats.RefundIssues</h3>
                </div>
                <div class="stat-icon red">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Refund Account Management Section -->
    <div class="section-container">
        <div class="section-header">
            <div>
                <h2 class="section-title">Refund Account Management</h2>
                <p class="section-subtitle">Manage your bank accounts designated for receiving deposit refunds</p>
            </div>
            <button class="add-btn" onclick="showAddBankModal()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                Add Refund Account
            </button>
        </div>

        @if (Model.BankAccounts.Any())
        {
            <div class="accounts-grid">
                @foreach (var account in Model.BankAccounts)
                {
                    <div class="account-card @(account.IsPrimary ? "primary" : "")">
                        @if (account.IsPrimary)
                        {
                            <span class="primary-badge">Primary</span>
                        }
                        <div class="account-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                        </div>
                        <div class="account-info">
                            <h4 class="account-bank">@account.BankName</h4>
                            <p class="account-number">Account: ****@account.Last4Digits</p>
                            <p class="account-routing">Holder: @account.AccountHolderName</p>
                            @if (!string.IsNullOrEmpty(account.RoutingNumber))
                            {
                                <p class="account-routing">Routing: @account.RoutingNumber</p>
                            }
                        </div>
                        <div class="account-actions">
                            @if (!account.IsPrimary)
                            {
                                <form method="post" asp-page-handler="SetPrimaryBankAccount" class="inline-form">
                                    <input type="hidden" name="accountId" value="@account.Id" />
                                    <button type="submit" class="action-btn primary-btn">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M5 13l4 4L19 7" />
                                        </svg>
                                        Set Primary
                                    </button>
                                </form>
                            }
                            <button class="action-btn edit-btn" onclick="editBankAccount('@account.Id', '@account.BankName', '@account.AccountNumber', '@account.AccountHolderName', '@(account.RoutingNumber ?? "")')">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
                                </svg>
                                Edit
                            </button>
                            <form method="post" asp-page-handler="DeleteBankAccount" class="inline-form" onsubmit="return confirm('Are you sure you want to delete this account?')">
                                <input type="hidden" name="accountId" value="@account.Id" />
                                <button type="submit" class="action-btn delete-btn">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6" />
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                                    </svg>
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                </div>
                <h3>No Refund Accounts</h3>
                <p>Add a bank account to receive deposit refunds</p>
            </div>
        }
    </div>

    <!-- Deposit History Section -->
    <div class="section-container">
        <div class="section-header">
            <h2 class="section-title">Deposit History</h2>
            <div class="section-actions">
                <button class="filter-action-btn" onclick="alert('Filter feature coming soon!')">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                    </svg>
                    Filter
                </button>
                <button class="filter-action-btn" onclick="alert('Export feature coming soon!')">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    Export
                </button>
            </div>
        </div>

        <div class="table-container">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>ORDER / ITEM</th>
                        <th>DEPOSIT AMOUNT</th>
                        <th>REFUND METHOD</th>
                        <th>REFUND AMOUNT</th>
                        <th>STATUS</th>
                        <th>REFUND DATE</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                     @if (Model.DepositRefunds.Any())
                    {
                        foreach (var refund in Model.DepositRefunds.OrderByDescending(r => r.CreatedAt))
                        {
                            var statusClass = refund.Status.ToString().ToLower() switch
                            {
                                "completed" => "status-completed",
                                "pending" => "status-pending",
                                "initiated" => "status-initiated",
                                "failed" => "status-failed",
                                _ => "status-pending"
                            };

                            <tr>
                                <td>
                                    <div class="item-cell">
                                        <div class="item-name">Deposit Refund</div>
                                        <div class="item-code">@refund.OrderCode</div>
                                    </div>
                                </td>
                                <td class="amount-cell">@refund.OriginalDepositAmount.ToString("N0")₫</td>
                                <td>
                                    <div class="method-cell">
                                        <svg class="method-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                                        </svg>
                                        @if (!string.IsNullOrEmpty(refund.CustomerBankName))
                                        {
                                            <span>@refund.CustomerBankName</span>
                                        }
                                        else
                                        {
                                            <span>Bank Transfer</span>
                                        }
                                    </div>
                                </td>
                                <td class="amount-cell">
                                    <span>@refund.RefundAmount.ToString("N0")₫</span>
                                    @if (refund.TotalPenaltyAmount > 0)
                                    {
                                        <small class="text-muted d-block" style="font-size: 0.75rem; color: #dc3545;">
                                            (Penalty: -@refund.TotalPenaltyAmount.ToString("N0")₫)
                                        </small>
                                    }
                                </td>
                                <td>
                                    <span class="status-badge @statusClass">
                                        @if (refund.Status == BusinessObject.Enums.TransactionStatus.completed)
                                        {
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                            </svg>
                                            <span>Completed</span>
                                        }
                                        else if (refund.Status == BusinessObject.Enums.TransactionStatus.initiated)
                                        {
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                            </svg>
                                            <span>Initiated</span>
                                        }
                                        else if (refund.Status == BusinessObject.Enums.TransactionStatus.failed)
                                        {
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                            </svg>
                                            <span>Failed</span>
                                        }
                                    </span>
                                </td>
                                <td class="date-cell">
                                    @if (refund.ProcessedAt.HasValue)
                                    {
                                        @refund.ProcessedAt.Value.ToString("yyyy-MM-dd")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <button class="action-btn" title="View Details" onclick="viewRefundDetails('@refund.Id')">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center" style="padding: 3rem;">
                                <div style="color: #6c757d;">
                                    <svg style="width: 48px; height: 48px; margin: 0 auto 1rem; opacity: 0.5;" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                                    </svg>
                                    <h3 style="margin-bottom: 0.5rem;">No Deposit Refund History</h3>
                                    <p>Your deposit refund history will appear here when available.</p>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Refund Detail Modal -->
    <div id="refundDetailModal" class="modal" style="display: none;">
        <div class="modal-content refund-detail-modal">
            <div class="modal-header">
                <h3>Deposit Refund Details</h3>
                <button type="button" class="close-btn" onclick="closeRefundDetailModal()">&times;</button>
            </div>
            <div class="modal-body">
                <!-- Loading State -->
                <div id="refundLoading" class="loading-state">
                    <svg class="spinner" viewBox="0 0 50 50">
                        <circle cx="25" cy="25" r="20" fill="none" stroke-width="5"></circle>
                    </svg>
                    <p>Loading refund details...</p>
                </div>

                <!-- Refund Details Content -->
                <div id="refundContent" style="display: none;">
                    <!-- Refund Status Banner -->
                    <div id="refundStatusBanner" class="refund-status-banner">
                        <svg class="status-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <div>
                            <h4 id="refundStatusTitle">Refund Status</h4>
                            <p id="refundStatusDescription">Description</p>
                        </div>
                    </div>

                    <!-- Order Information -->
                    <div class="detail-section">
                        <h4 class="section-title">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                            </svg>
                            Order Information
                        </h4>
                        <div class="detail-grid">
                            <div class="detail-item">
                                <span class="detail-label">Order Code</span>
                                <span class="detail-value" id="refundOrderCode">-</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Request Created</span>
                                <span class="detail-value" id="refundCreatedDate">-</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Processed Date</span>
                                <span class="detail-value" id="refundProcessedDate">-</span>
                            </div>
                        </div>
                    </div>

                    <!-- Amount Breakdown -->
                    <div class="detail-section">
                        <h4 class="section-title">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            Amount Breakdown
                        </h4>
                        <div class="amount-breakdown">
                            <div class="amount-row">
                                <span>Original Deposit</span>
                                <span class="amount-value" id="refundOriginalAmount">0₫</span>
                            </div>
                            <div class="amount-row penalty" id="penaltyRow" style="display: none;">
                                <span>
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                                    </svg>
                                    Penalty Deduction
                                </span>
                                <span class="amount-value penalty-amount" id="refundPenaltyAmount">0₫</span>
                            </div>
                            <div class="amount-row total">
                                <span>Final Refund Amount</span>
                                <span class="amount-value total-amount" id="refundTotalAmount">0₫</span>
                            </div>
                        </div>
                    </div>

                    <!-- Violations (if any) -->
                    <div class="detail-section" id="violationsSection" style="display: none;">
                        <h4 class="section-title">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                            Rental Violations & Penalties
                        </h4>
                        <div id="violationsList" class="violations-list">
                            <!-- Populated by JavaScript -->
                        </div>
                    </div>

                    <!-- Bank Account Information -->
                    <div class="detail-section">
                        <h4 class="section-title">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                            </svg>
                            Your Refund Bank Account
                        </h4>
                        <div id="bankInfoContent" class="bank-info-box">
                            <div class="bank-info-row">
                                <span class="bank-label">Bank Name</span>
                                <span class="bank-value" id="refundBankName">-</span>
                            </div>
                            <div class="bank-info-row">
                                <span class="bank-label">Account Holder</span>
                                <span class="bank-value" id="refundAccountHolder">-</span>
                            </div>
                            <div class="bank-info-row">
                                <span class="bank-label">Account Number</span>
                                <span class="bank-value account-number" id="refundAccountNumber">-</span>
                            </div>
                            <div class="bank-info-row" id="routingNumberRow" style="display: none;">
                                <span class="bank-label">Routing Number</span>
                                <span class="bank-value" id="refundRoutingNumber">-</span>
                            </div>
                        </div>
                        <div id="noBankInfo" class="no-bank-info" style="display: none;">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                            <p>No bank account registered for this refund. Please add a bank account.</p>
                        </div>
                    </div>

                    <!-- Admin Notes (if any) -->
                    <div class="detail-section" id="adminNotesSection" style="display: none;">
                        <h4 class="section-title">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                            </svg>
                            Admin Notes
                        </h4>
                        <div class="admin-notes-box">
                            <p id="refundAdminNotes">-</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="closeRefundDetailModal()">Close</button>
            </div>
        </div>
    </div>

    <!-- Bank Account Modal -->
    <div id="bankAccountModal" class="modal" style="display: none;">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="modalTitle">Add Bank Account</h3>
                <button type="button" class="close-btn" onclick="closeBankModal()">&times;</button>
            </div>
            <form id="bankAccountForm" method="post" asp-page-handler="CreateBankAccount">
                <input type="hidden" id="accountId" name="accountId" />
                <div class="form-group">
                    <label for="bankName">Bank Name</label>
