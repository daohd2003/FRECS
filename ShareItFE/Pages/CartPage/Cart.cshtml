@page
@model ShareItFE.Pages.CartPage.CartModel
@{
    ViewData["Title"] = "Giỏ hàng của tôi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/discount-code-modal.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}

<div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @* Toast Messages *@
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div id="toast-success" class="toast-message bg-success text-white p-3 position-fixed top-0 end-0 m-3 rounded">
                @Model.SuccessMessage
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div id="toast-error" class="toast-message bg-danger text-white p-3 position-fixed top-0 end-0 m-3 rounded">
                @TempData["ErrorMessage"]
            </div>
        }

        @* Empty Cart State *@
        @if (Model.Cart == null || !Model.Cart.Items.Any())
        {
            <div class="min-h-screen bg-gray-50 flex items-center justify-center">
                <div class="text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-24 w-24 text-gray-300 mx-auto mb-6"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z" /><path d="M3 6h18" /><path d="M16 10a4 4 0 0 1-8 0" /></svg>
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Continue shopping</h2>
                    <p class="text-gray-600 mb-8">Discover great outfits for your special occasions</p>
                    <a asp-page="/Products/Products" class="bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
                        Browse Collection
                    </a>
                </div>
            </div>
        }
        @* Cart Content *@
        else
        {
            <div class="flex items-center space-x-4 mb-8">
                <a asp-page="/Products/Products" class="flex items-center space-x-2 text-gray-600 hover:text-purple-600 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5"><path d="M19 12H5" /><path d="M12 19l-7-7 7-7" /></svg>
                    <span>Continue shopping</span>
                </a>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                @* Cart Items List *@
                <div class="lg:col-span-2 space-y-6">
                    <div class="bg-white rounded-lg shadow-sm">
                        <div class="p-6 border-b border-gray-200">
                            <h1 class="text-2xl font-bold text-gray-900">Shopping Cart</h1>
                            <p class="text-gray-600">@Model.Cart.Items.Count @(Model.Cart.Items.Count == 1 ? "product" : "products")</p>
                        </div>

                        @* Global rental schedule section - only show if there are rental items *@
                        @if (Model.Cart?.Items != null && Model.Cart.Items.Any(item => item.TransactionType == BusinessObject.Enums.TransactionType.rental))
                        {
                            <div class="p-6 border-b border-gray-200">
                                @* Global rental schedule for rental items only *@
                                @{
                                    var firstRentalItem = Model.Cart.Items.First(item => item.TransactionType == BusinessObject.Enums.TransactionType.rental);
                                }
                                <form id="global-schedule-form" method="post" asp-page-handler="UpdateCartSchedule" class="grid grid-cols-1 md:grid-cols-3 items-end gap-4 md:gap-6" onsubmit="saveScrollPosition()">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="itemId" value="@firstRentalItem.ItemId" />
                                    <div class="flex flex-col w-full">
                                        <label class="text-sm font-medium text-gray-700 mb-2">Start Date (rental items)</label>
                                        <input id="globalStartDate" type="date" name="startDate" value="@firstRentalItem.StartDate?.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" class="h-10 px-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                                    </div>
                                    <div class="flex flex-col w-full">
                                        <label class="text-sm font-medium text-gray-700 mb-2">Rental Days (rental items)</label>
                                        <div class="inline-flex items-center space-x-2">
                                            <button type="submit" name="action" value="decreaseDays" class="h-10 px-3 border border-gray-300 rounded-lg hover:bg-gray-50" aria-label="Decrease rental days">
                                                <i class="bi bi-dash-lg w-4 h-4"></i>
                                            </button>
                                            <input id="globalRentalDays" type="number" name="rentalDays" value="@firstRentalItem.RentalDays" min="1" class="h-10 w-24 text-center px-3 border border-gray-300 rounded-lg" />
                                            <button type="submit" name="action" value="increaseDays" class="h-10 px-3 border border-gray-300 rounded-lg hover:bg-gray-50" aria-label="Increase rental days">
                                                <i class="bi bi-plus-lg w-4 h-4"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="flex md:justify-end">
                                        <button type="submit" name="action" value="apply" class="h-10 bg-gray-900 text-white px-6 rounded-lg hover:bg-gray-800 transition-colors">Apply to rental items</button>
                                    </div>
                                </form>
                            </div>
                        }

                        <div class="divide-y divide-gray-200">
                            @foreach (var item in Model.Cart.Items)
                            {
                                <div class="p-6">
                                    <div class="flex items-start space-x-4">
                                        <img src="@(item.PrimaryImageUrl ?? "/images/placeholder.jpg")"
                                             alt="@item.ProductName"
                                             class="w-24 h-32 object-cover rounded-lg" />

                                        <div class="flex-1 min-w-0">
                                            <h3 class="text-lg font-semibold text-gray-900 mb-1">
                                                @item.ProductName
                                            </h3>
                                            <p class="text-gray-600 mb-2">Size: @item.ProductSize</p>
                                            
                                            @* Show transaction type *@
                                            <div class="text-sm mb-2">
                                                <span class="text-gray-600 mr-2">Type:</span>
                                                @if (item.TransactionType == BusinessObject.Enums.TransactionType.purchase)
                                                {
                                                    <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-medium">Purchase</span>
                                                }
                                                else
                                                {
                                                    <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded-full text-xs font-medium">Rental</span>
                                                }
                                            </div>
                                            
                                            @* Show rental dates only for rental items *@
                                            @if (item.TransactionType == BusinessObject.Enums.TransactionType.rental && item.StartDate.HasValue && item.EndDate.HasValue)
                                            {
                                                <div class="text-sm text-gray-500 mb-3">
                                                    <span>From @item.StartDate.Value.ToString("dd-MM-yyyy") To @item.EndDate.Value.ToString("dd-MM-yyyy")</span>
                                                </div>
                                            }

                                            <div class="flex items-center">
                                                @* Added a flex container for controls ************ NEW ************ *@
                                                @* Controls for Quantity *@
                                                <div class="flex flex-col">
                                                    <label class="text-xs text-gray-500 mb-1">Quantity</label>
                                                    <div class="inline-flex items-center space-x-2">
                                                        <button type="button" onclick="updateQuantityAjax('@item.ItemId', @item.Quantity, @(item.RentalDays ?? 1), @item.PricePerUnit, 'decrease', '@item.TransactionType', @(item.TransactionType == BusinessObject.Enums.TransactionType.purchase ? item.AvailablePurchaseStock : item.AvailableRentalStock))" class="p-1 border border-gray-300 rounded hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-purple-500" aria-label="Giảm số lượng">
                                                            <i class="bi bi-dash-lg w-4 h-4"></i>
                                                        </button>
                                                        <span class="text-sm font-medium w-12 text-center" id="quantity-@item.ItemId">
                                                            @item.Quantity
                                                        </span>
                                                        <button type="button" onclick="updateQuantityAjax('@item.ItemId', @item.Quantity, @(item.RentalDays ?? 1), @item.PricePerUnit, 'increase', '@item.TransactionType', @(item.TransactionType == BusinessObject.Enums.TransactionType.purchase ? item.AvailablePurchaseStock : item.AvailableRentalStock))" class="p-1 border border-gray-300 rounded hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-purple-500" aria-label="Tăng số lượng">
                                                            <i class="bi bi-plus-lg w-4 h-4"></i>
                                                        </button>
                                                    </div>
                                                </div>

                                                @* Show rental days only for rental items *@
                                                @if (item.TransactionType == BusinessObject.Enums.TransactionType.rental)
                                                {
                                                    <div class="vertical-divider"></div>
                                                    <div class="flex flex-col">
                                                        <label class="text-xs text-gray-500 mb-1">Number of rental days</label>
                                                        <span class="text-sm font-medium min-w-[3rem] text-center">@item.RentalDays</span>
                                                    </div>
                                                }

                                                @* Remove Button *@
                                                <div class="ml-auto-remove-btn">
                                                    <button type="button" onclick="if(confirm('Are you sure you want to remove this product from cart?')) { removeItemFromCart('@item.ItemId'); }" class="flex items-center space-x-1 text-red-600 hover:text-red-700 transition-colors px-2 py-1 rounded" aria-label="Remove product">
                                                        <i class="bi bi-trash-fill h-5 w-5"></i>
                                                        <span class="text-sm">Delete</span>
                                                    </button>
                                                </div>
                                            </div> @* End of new flex container for controls ************ NEW ************ *@
                                        </div>

                                        @* Item Total Price Display *@
                                        <div class="text-right">
                                            <div class="text-lg font-bold text-purple-600" id="total-price-@item.ItemId">
                                                @item.TotalItemPrice.ToString("N0") VND
                                            </div>
                                            <div class="text-sm text-gray-500">
                                                @if (item.TransactionType == BusinessObject.Enums.TransactionType.purchase)
                                                {
                                                    <span>@item.PricePerUnit.ToString("N0") VND each</span>
                                                }
                                                else
                                                {
                                                    <span>@item.PricePerUnit.ToString("N0") VND/day</span>
                                                    @if (item.TotalDepositAmount > 0)
                                                    {
                                                        <div class="text-xs text-orange-600 mt-1">
                                                            +@item.TotalDepositAmount.ToString("N0") VND deposit
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    @* Discount Code Section *@
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <div class="flex justify-between items-center mb-4">
                            <h3 class="text-lg font-semibold text-gray-900">Discount Code</h3>
                            <button type="button" id="selectDiscountBtn" class="text-purple-600 hover:text-purple-700 font-medium flex items-center space-x-2">
                                <i class="bi bi-ticket-perforated"></i>
                                <span>Select Discount</span>
                            </button>
                        </div>
                        <div id="selectedDiscountDisplay" class="hidden">
                            <div class="flex items-center justify-between p-3 bg-purple-50 border border-purple-200 rounded-lg">
                                <div class="flex items-center space-x-3">
                                    <i class="bi bi-check-circle-fill text-purple-600"></i>
                                    <div>
                                        <p class="font-semibold text-gray-900" id="selectedDiscountCode"></p>
                                        <p class="text-sm text-gray-600" id="selectedDiscountDescription"></p>
                                    </div>
                                </div>
                                <button type="button" id="removeDiscountBtn" class="text-red-600 hover:text-red-700">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </div>
                        </div>
                        <div id="noDiscountDisplay" class="text-gray-500 text-sm">
                            No discount code applied
                        </div>
                    </div>
                </div>

                @* Order Summary Section *@
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-lg shadow-sm p-6 sticky top-8">
                        <h2 class="text-xl font-bold text-gray-900 mb-6">Order Summary</h2>

                        <div class="space-y-4 mb-6">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Subtotal</span>
                                <span class="font-semibold" id="cart-subtotal">@Model.Subtotal.ToString("N0") VND</span>
                            </div>

                            <div class="flex justify-between">
                                <span class="text-gray-600">Shipping fee</span>
                                <span class="font-semibold">FREE</span>
                            </div>

                            <div class="flex justify-between">
                                <span class="text-gray-600">Discount</span>
                                <span class="font-semibold text-green-600" id="cart-discount">0 VND</span>
                            </div>

                            @* Security Deposit for rental items *@
                            @if (Model.TotalDeposit > 0)
                            {
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Security Deposit <span class="text-xs text-gray-500">(refundable)</span></span>
                                    <span class="font-semibold text-orange-600" id="cart-deposit">@Model.TotalDeposit.ToString("N0") VND</span>
                                </div>
                            }

                            <div class="border-t pt-4">
                                <div class="flex justify-between text-lg font-bold">
                                    <span>Total <span class="text-sm font-normal text-gray-500">(incl. deposit)</span></span>
                                    <span class="text-purple-600" id="cart-total">@Model.Total.ToString("N0") VND</span>
                                </div>
                            </div>
                        </div>

                        @* @if (Model.DeliveryFee > 0)
                            {
                                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                                    <p class="text-sm text-blue-800">
                                        Thêm @((100000 - Model.Subtotal).ToString("N0")) VND nữa để được miễn phí giao hàng!
                                    </p>
                                </div>
                            } *@

                        @* Policy Agreement Section *@
                        <div class="mb-6">
                            <input type="checkbox" id="hasAgreedToPolicies" name="HasAgreedToPolicies" value="true"
                                   class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded">
                            <label for="hasAgreedToPolicies" class="ml-2 text-sm text-gray-700">
                                I have read and agree to the <a href="/rental-and-sales-policy" target="_blank" class="text-purple-600 hover:underline">Rental and Sales Policy</a>.
                            </label>
                            <div id="policy-error" class="text-red-600 text-sm mt-1 hidden">
                                Please read the rental and purchase policy carefully and tick the checkbox to continue.
                            </div>
                        </div>

                        <a href="#" onclick="handleMakePayment(event)"
                           id="makePaymentButton"
                           class="w-full bg-purple-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-purple-700 transition-colors text-center block mb-4 flex items-center justify-center space-x-2">
                            <i class="bi bi-lock-fill h-5 w-5"></i>
                            <span>Make payment</span>
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

@* Discount Code Selection Modal *@
