@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toastSuccess = document.getElementById('toast-success');
            const toastError = document.getElementById('toast-error');

            if (toastSuccess) {
                setTimeout(() => { toastSuccess.style.display = 'none'; }, 4000);
            }
            if (toastError) {
                setTimeout(() => { toastError.style.display = 'none'; }, 4000);
            }

            // Policy checkbox is now unchecked by default
            // Users must manually check the agreement checkbox

            // Restore scroll position after quantity update
            restoreScrollPosition();

            // Auto-submit global schedule on change
            const globalForm = document.getElementById('global-schedule-form');
            const startInput = document.getElementById('globalStartDate');
            const daysInput = document.getElementById('globalRentalDays');
            if (globalForm && startInput && daysInput) {
                const submit = () => globalForm.requestSubmit();
                startInput.addEventListener('change', submit);
                daysInput.addEventListener('change', () => {
                    const v = parseInt(daysInput.value || '1', 10);
                    if (v < 1) daysInput.value = '1';
                    submit();
                });
            }
        });

        // Also try to restore scroll position on window load as backup
        window.addEventListener('load', () => {
            restoreScrollPosition();
        });

        function handleMakePayment(event) {
            event.preventDefault();

            const policyCheckbox = document.getElementById('hasAgreedToPolicies');
            const errorDiv = document.getElementById('policy-error');

            if (!policyCheckbox.checked) {
                errorDiv.classList.remove('hidden');
                return false;
            }

            // Hide error message if shown
            errorDiv.classList.add('hidden');

            // Redirect to checkout page
            window.location.href = '@Url.Page("/CheckoutPage/Checkout")';
        }

        // Function to save scroll position before form submission
        function saveScrollPosition() {
            localStorage.setItem('cartScrollPosition', window.pageYOffset);
            localStorage.setItem('cartScrollTimestamp', Date.now().toString());
            return true; // Allow form submission to continue
        }

        // Function to restore scroll position after page load
        function restoreScrollPosition() {
            const scrollPosition = localStorage.getItem('cartScrollPosition');
            const timestamp = localStorage.getItem('cartScrollTimestamp');
            
            if (scrollPosition && timestamp) {
                // Only restore if the timestamp is recent (within 5 seconds)
                const timeDiff = Date.now() - parseInt(timestamp);
                if (timeDiff < 5000) {
                    setTimeout(() => {
                        window.scrollTo(0, parseInt(scrollPosition));
                        localStorage.removeItem('cartScrollPosition');
                        localStorage.removeItem('cartScrollTimestamp');
                    }, 50);
                } else {
                    localStorage.removeItem('cartScrollPosition');
                    localStorage.removeItem('cartScrollTimestamp');
                }
            }
        }


        // Function to update quantity via AJAX without page reload
        async function updateQuantityAjax(itemId, currentQuantity, rentalDays, pricePerUnit, action, transactionType, availableStock) {
            try {
                // Disable buttons to prevent multiple clicks
                const buttons = document.querySelectorAll(`button[onclick*="${itemId}"]`);
                buttons.forEach(btn => btn.disabled = true);

                // Calculate new quantity
                let newQuantity = currentQuantity;
                if (action === 'increase') {
                    newQuantity = currentQuantity + 1;
                    
                    // Check stock validation for increase
                    if (availableStock > 0 && newQuantity > availableStock) {
                        showToast(`Cannot add more items. Only ${availableStock} units available in stock.`, 'error');
                        buttons.forEach(btn => btn.disabled = false);
                        return;
                    }
                } else if (action === 'decrease') {
                    newQuantity = currentQuantity - 1;
                    if (newQuantity < 1) {
                        // If quantity becomes 0, remove the item
                        if (confirm('Remove this item from cart?')) {
                            await removeItemFromCart(itemId);
                        }
                        buttons.forEach(btn => btn.disabled = false);
                        return;
                    }
                }

                const formData = new FormData();
                formData.append('itemId', itemId);
                formData.append('currentQuantity', currentQuantity);
                formData.append('action', action);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                const response = await fetch('@Url.Page("/CartPage/Cart", "UpdateQuantity")', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    // Update quantity display
                    const quantitySpan = document.getElementById(`quantity-${itemId}`);
                    if (quantitySpan) {
                        quantitySpan.textContent = newQuantity;
                    }

                    // Update button onclick handlers with new quantity
                    buttons.forEach(btn => {
                        const onclick = btn.getAttribute('onclick');
                        if (onclick.includes('decrease')) {
                            btn.setAttribute('onclick', `updateQuantityAjax('${itemId}', ${newQuantity}, ${rentalDays || 1}, ${pricePerUnit}, 'decrease', '${transactionType}', ${availableStock})`);
                        } else if (onclick.includes('increase')) {
                            btn.setAttribute('onclick', `updateQuantityAjax('${itemId}', ${newQuantity}, ${rentalDays || 1}, ${pricePerUnit}, 'increase', '${transactionType}', ${availableStock})`);
                        }
                    });

                    // Update item total price
                    const itemTotalElement = document.getElementById(`total-price-${itemId}`);
                    if (itemTotalElement) {
                        const newTotal = (pricePerUnit * (rentalDays || 1) * newQuantity);
                        itemTotalElement.textContent = newTotal.toLocaleString() + ' VND';
                    }

                    // Recalculate cart totals (you might need to fetch this from server or calculate client-side)
                    updateCartTotals();
                    
                    // Update product count in header (in case quantity affects count display)
                    updateProductCount();

                    // Show success message
                    showToast('Product quantity updated successfully!', 'success');
                } else {
                    const errorText = await response.text();
                    console.error('Error updating quantity:', errorText);
                    showToast('Failed to update quantity. Please try again.', 'error');
                }
            } catch (error) {
                console.error('Error updating quantity:', error);
                showToast('Failed to update quantity. Please try again.', 'error');
            } finally {
                // Re-enable buttons
                const buttons = document.querySelectorAll(`button[onclick*="${itemId}"]`);
                buttons.forEach(btn => btn.disabled = false);
            }
        }

        // Function to update cart totals (simple version - might need server call for accuracy)
        function updateCartTotals() {
            let newSubtotal = 0;
            let newDeposit = 0;
            
            // Calculate new subtotal and deposit from all item totals
            document.querySelectorAll('[id^="total-price-"]').forEach(element => {
                const priceText = element.textContent.replace(/[^\d]/g, '');
                newSubtotal += parseInt(priceText) || 0;
            });

            // Calculate total deposit (this is a simplified approach - ideally would need server call for accuracy)
            // For now, we'll make a server call to get accurate totals
            fetch('@Url.Page("/CartPage/Cart")')
                .then(response => response.text())
                .then(html => {
                    // Parse the response to extract deposit amount
                    const parser = new DOMParser();
                    const doc = parser.parseFromString(html, 'text/html');
                    const depositElement = doc.getElementById('cart-deposit');
                    
                    if (depositElement) {
                        const depositText = depositElement.textContent.replace(/[^\d]/g, '');
                        newDeposit = parseInt(depositText) || 0;
                        
                        // Update deposit display
                        const currentDepositElement = document.getElementById('cart-deposit');
                        if (currentDepositElement) {
                            currentDepositElement.textContent = newDeposit.toLocaleString() + ' VND';
                        }
                        
                        // Update total with new deposit
                        const totalElement = document.getElementById('cart-total');
                        if (totalElement) {
                            const newTotal = newSubtotal + newDeposit;
                            totalElement.textContent = newTotal.toLocaleString() + ' VND';
                        }
                    }
                })
                .catch(error => console.log('Could not update deposit:', error));

            // Update subtotal display
            const subtotalElement = document.getElementById('cart-subtotal');
            if (subtotalElement) {
                subtotalElement.textContent = newSubtotal.toLocaleString() + ' VND';
            }

            // Total is updated in the fetch callback above to include accurate deposit calculation
        }

        // Function to update product count in cart header
        function updateProductCount() {
            const remainingItems = document.querySelectorAll('[id^="quantity-"]');
            const productCount = remainingItems.length;
            
            // Update the cart header with new count
            const cartHeaderElement = document.querySelector('.text-gray-600');
            if (cartHeaderElement && cartHeaderElement.textContent.includes('product')) {
                cartHeaderElement.textContent = `${productCount} ${productCount === 1 ? 'product' : 'products'}`;
            }
        }

        // Function to show toast messages
        function showToast(message, type) {
            // Create toast element
            const toast = document.createElement('div');
            toast.className = `toast-message ${type === 'success' ? 'bg-success' : 'bg-danger'} text-white p-3 position-fixed top-0 end-0 m-3 rounded`;
            toast.textContent = message;
            
            document.body.appendChild(toast);
            
            // Remove after 3 seconds
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // Function to remove item from cart via AJAX
        async function removeItemFromCart(itemId) {
            try {
                const formData = new FormData();
                formData.append('itemId', itemId);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                const response = await fetch('@Url.Page("/CartPage/Cart", "RemoveFromCart")', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    // Remove the item from DOM
                    const itemElement = document.querySelector(`[id="quantity-${itemId}"]`).closest('.p-6');
                    if (itemElement) {
                        itemElement.style.transition = 'opacity 0.3s ease';
                        itemElement.style.opacity = '0';
                        setTimeout(() => {
                            itemElement.remove();
                            // Update cart totals after removing item
                            updateCartTotals();
                            
                            // Update product count in header
                            updateProductCount();
                            
                            // Check if cart is empty and reload if needed
                            const remainingItems = document.querySelectorAll('[id^="quantity-"]');
                            if (remainingItems.length === 0) {
                                window.location.reload(); // Reload to show empty cart state
                            }
                        }, 300);
                    }

                    showToast('Product removed from cart successfully!', 'success');
                } else {
                    const errorText = await response.text();
                    console.error('Error removing item:', errorText);
                    showToast('Failed to remove product. Please try again.', 'error');
                }
            } catch (error) {
                console.error('Error removing item:', error);
                showToast('Failed to remove product. Please try again.', 'error');
            }
        }

        // ===== Discount Code Modal Logic =====
        (function initDiscountCodeModal() {
            let selectedDiscountCode = null;
            let availableDiscountCodes = [];
            let allDiscountCodes = [];
            const subtotal = @Model.Subtotal;
            const apiBaseUrl = '@Model.ApiBaseUrl';
            const hasRentalItems = @Model.HasRentalItems.ToString().ToLower();
            const hasPurchaseItems = @Model.HasPurchaseItems.ToString().ToLower();

            console.log('Discount code logic initialized');
            console.log('Has rental items:', hasRentalItems);
            console.log('Has purchase items:', hasPurchaseItems);

            // Restore discount from session (if exists)
            @if (Model.SelectedDiscountCode != null)
            {
                <text>
                selectedDiscountCode = {
                    id: '@Model.SelectedDiscountCode.Id',
                    code: '@Model.SelectedDiscountCode.Code',
                    discountType: '@Model.SelectedDiscountCode.DiscountType',
                    value: @Model.SelectedDiscountCode.Value,
                    usageType: '@Model.SelectedDiscountCode.UsageType'
                };
                
                console.log('Restored discount from session:', selectedDiscountCode);
                
                // Update UI to show selected discount
                document.getElementById('selectedDiscountCode').textContent = selectedDiscountCode.code;
                const valueDisplay = selectedDiscountCode.discountType === 'Percentage' 
                    ? `Save ${selectedDiscountCode.value}%` 
                    : `Save ${selectedDiscountCode.value.toLocaleString()} VND`;
                document.getElementById('selectedDiscountDescription').textContent = valueDisplay;
                
                document.getElementById('selectedDiscountDisplay').classList.remove('hidden');
                document.getElementById('noDiscountDisplay').classList.add('hidden');
                
                // Calculate and display discount
                updateDiscountCalculation();
                </text>
            }
            else
            {
                <text>
                console.log('No discount code in session');
                </text>
            }

        // Open discount code modal
        const selectBtn = document.getElementById('selectDiscountBtn');
        console.log('Select button found:', selectBtn);
        
        if (selectBtn) {
            selectBtn.addEventListener('click', async () => {
                console.log('Select discount button clicked');
                const modal = document.getElementById('discountCodeModal');
                console.log('Modal element:', modal);
                
                if (modal) {
                    modal.classList.remove('hidden');
                    console.log('Modal should be visible now');
                    await loadAvailableDiscountCodes();
                } else {
                    console.error('Modal element not found!');
                }
            });
        } else {
            console.error('Select discount button not found!');
        }

        // Close modal
        document.getElementById('closeDiscountModal')?.addEventListener('click', () => {
            document.getElementById('discountCodeModal').classList.add('hidden');
        });

        // Close modal when clicking outside
        document.getElementById('discountCodeModal')?.addEventListener('click', (e) => {
            if (e.target.id === 'discountCodeModal') {
                e.target.classList.add('hidden');
            }
        });

        // Load available discount codes
        async function loadAvailableDiscountCodes() {
            const listContainer = document.getElementById('discountCodesList');
            
            try {
                const response = await fetch('@Url.Page("/CartPage/Cart", "AvailableDiscountCodes")');

                if (!response.ok) throw new Error('Failed to load discount codes');

                const data = await response.json();
                allDiscountCodes = data.data || [];
                availableDiscountCodes = allDiscountCodes;

                if (availableDiscountCodes.length === 0) {
                    listContainer.innerHTML = `
                        <div class="flex items-center justify-center py-12">
                            <div class="text-center">
                                <i class="bi bi-ticket-perforated text-4xl text-gray-400 mb-3"></i>
                                <p class="text-gray-500 font-medium">No discount codes available</p>
                                <p class="text-gray-400 text-sm">Check back later for promotions!</p>
                            </div>
                        </div>
                    `;
                    return;
                }

                renderDiscountCodes(availableDiscountCodes);

            } catch (error) {
                console.error('Error loading discount codes:', error);
                listContainer.innerHTML = `
                    <div class="flex items-center justify-center py-12">
                        <div class="text-center">
                            <i class="bi bi-exclamation-circle text-4xl text-red-400 mb-3"></i>
                            <p class="text-red-500 font-medium">Failed to load discount codes</p>
                            <p class="text-gray-400 text-sm">Please try again later</p>
                        </div>
                    </div>
                `;
            }
        }

        // Render discount codes with filtering and sorting
        function renderDiscountCodes(codes) {
            const listContainer = document.getElementById('discountCodesList');
            
            // Sort by discount value (descending)
            const sortedCodes = [...codes].sort((a, b) => {
                const valueA = a.discountType === 'Percentage' ? a.value : a.value / 1000; // Normalize for comparison
                const valueB = b.discountType === 'Percentage' ? b.value : b.value / 1000;
                return valueB - valueA;
            });

            // Separate by usage type
            const purchaseCodes = sortedCodes.filter(code => code.usageType === 'Purchase');
            const rentalCodes = sortedCodes.filter(code => code.usageType === 'Rental');

            let html = '';

            // Render Purchase Codes Section
            if (purchaseCodes.length > 0) {
                html += `
                    <div class="mb-4">
                        <h4 class="text-sm font-semibold text-gray-700 mb-3 flex items-center">
                            <i class="bi bi-bag-check text-blue-600 mr-2"></i>
                            Purchase Discount Codes
                        </h4>
                        <div class="space-y-3">
                            ${purchaseCodes.map(code => renderDiscountCard(code, !hasPurchaseItems)).join('')}
                        </div>
                    </div>
                `;
            }

            // Render Rental Codes Section
            if (rentalCodes.length > 0) {
                html += `
                    <div>
                        <h4 class="text-sm font-semibold text-gray-700 mb-3 flex items-center">
                            <i class="bi bi-calendar-check text-green-600 mr-2"></i>
                            Rental Discount Codes
                        </h4>
                        <div class="space-y-3">
                            ${rentalCodes.map(code => renderDiscountCard(code, !hasRentalItems)).join('')}
                        </div>
                    </div>
                `;
            }

            listContainer.innerHTML = html;

            // Add event listeners
            listContainer.querySelectorAll('.discount-code-item').forEach(item => {
                if (item.dataset.disabled === 'false' && item.dataset.incompatible === 'false') {
                    item.addEventListener('click', function() {
                        selectDiscount(this.dataset.discountId);
                    });
                }
            });
        }

        // Render individual discount card
        function renderDiscountCard(code, isIncompatible) {
            const isExpired = new Date(code.expirationDate) < new Date();
            const isFullyUsed = code.usedCount >= code.quantity;
            const isDisabled = isExpired || isFullyUsed || code.status !== 'Active';
            const isFinallyDisabled = isDisabled || isIncompatible;
            
            const valueDisplay = code.discountType === 'Percentage' 
                ? `${code.value}%` 
                : `${code.value.toLocaleString()} VND`;

            return `
                <div class="border rounded-lg p-4 ${isFinallyDisabled ? 'opacity-50 bg-gray-50' : 'hover:border-purple-500 cursor-pointer discount-code-item'}" 
                     data-discount-id="${code.id}" data-disabled="${isDisabled}" data-incompatible="${isIncompatible}"
                     data-code="${code.code.toLowerCase()}" data-usage-type="${code.usageType}">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <div class="flex items-center space-x-2 mb-2">
                                <span class="font-bold text-lg text-purple-600">${code.code}</span>
                                <span class="text-xs px-2 py-1 rounded ${code.usageType === 'Purchase' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800'}">
                                    ${code.usageType}
                                </span>
                            </div>
                            <p class="text-gray-600 text-sm mb-1">
                                ${code.discountType} discount: <span class="font-semibold text-gray-900">${valueDisplay}</span>
                            </p>
                            <p class="text-gray-500 text-xs">
                                Expires: ${new Date(code.expirationDate).toLocaleDateString('vi-VN')} | 
                                Used: ${code.usedCount}/${code.quantity}
                            </p>
                            ${isExpired ? '<p class="text-red-600 text-xs mt-1 font-medium">Expired</p>' : ''}
                            ${isFullyUsed ? '<p class="text-red-600 text-xs mt-1 font-medium">Fully used</p>' : ''}
                            ${!isDisabled && isIncompatible ? '<p class="text-orange-600 text-xs mt-1 font-medium">Not applicable for current cart items</p>' : ''}
                        </div>
                        ${!isFinallyDisabled ? `
                            <button class="text-purple-600 font-medium px-4 py-2 rounded-lg border border-purple-600 hover:bg-purple-50">
                                Apply
                            </button>
                        ` : `
                            <button class="text-gray-400 font-medium px-4 py-2 rounded-lg border border-gray-300 cursor-not-allowed" disabled>
                                ${isIncompatible && !isDisabled ? 'Incompatible' : 'Unavailable'}
                            </button>
                        `}
                    </div>
                </div>
            `;
        }

        // Search functionality
        document.getElementById('discountSearchInput')?.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase().trim();
            
            if (searchTerm === '') {
                renderDiscountCodes(allDiscountCodes);
            } else {
                const filtered = allDiscountCodes.filter(code => 
                    code.code.toLowerCase().includes(searchTerm)
                );
                renderDiscountCodes(filtered);
            }
        });

        // Select discount code
        async function selectDiscount(discountId) {
            const discount = allDiscountCodes.find(d => d.id === discountId);
            if (!discount) return;

            selectedDiscountCode = discount;
            
            // Save to session
            try {
                const response = await fetch('@Url.Page("/CartPage/Cart", "SaveDiscountCode")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    },
                    body: JSON.stringify({
                        id: discount.id,
                        code: discount.code,
                        discountType: discount.discountType,
                        value: discount.value,
                        usageType: discount.usageType
                    })
                });

                if (!response.ok) {
                    console.error('Failed to save discount code to session');
                }
            } catch (error) {
                console.error('Error saving discount code:', error);
            }
            
            // Update UI
            document.getElementById('selectedDiscountCode').textContent = discount.code;
            const valueDisplay = discount.discountType === 'Percentage' 
                ? `Save ${discount.value}%` 
                : `Save ${discount.value.toLocaleString()} VND`;
            document.getElementById('selectedDiscountDescription').textContent = valueDisplay;
            
            document.getElementById('selectedDiscountDisplay').classList.remove('hidden');
            document.getElementById('noDiscountDisplay').classList.add('hidden');
            
            // Calculate and update discount
            updateDiscountCalculation();
            
            // Close modal
            document.getElementById('discountCodeModal').classList.add('hidden');
            
            showToast('Discount code applied successfully!', 'success');
        }

        // Remove discount
        document.getElementById('removeDiscountBtn')?.addEventListener('click', async () => {
            selectedDiscountCode = null;
            
            // Remove from session
            try {
                await fetch('@Url.Page("/CartPage/Cart", "RemoveDiscountCode")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                });
            } catch (error) {
                console.error('Error removing discount code:', error);
            }
            
            document.getElementById('selectedDiscountDisplay').classList.add('hidden');
            document.getElementById('noDiscountDisplay').classList.remove('hidden');
            updateDiscountCalculation();
            showToast('Discount code removed', 'info');
        });

        // Calculate discount amount
        function updateDiscountCalculation() {
            let discountAmount = 0;
            
            if (selectedDiscountCode) {
                if (selectedDiscountCode.discountType === 'Percentage') {
                    discountAmount = Math.round(subtotal * (selectedDiscountCode.value / 100));
                } else {
                    discountAmount = selectedDiscountCode.value;
                }
                
                // Ensure discount doesn't exceed subtotal
                discountAmount = Math.min(discountAmount, subtotal);
            }
            
            // Update discount display
            document.getElementById('cart-discount').textContent = discountAmount > 0 
                ? `-${discountAmount.toLocaleString()} VND` 
                : '0 VND';
            
            // Update total
            const deposit = @Model.TotalDeposit;
            const newTotal = subtotal - discountAmount + deposit;
            document.getElementById('cart-total').textContent = newTotal.toLocaleString() + ' VND';
        }
        })(); // End of initDiscountCodeModal IIFE
    </script>
}