                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                });
            } catch (error) {
                console.error('Error removing discount code:', error);
            }
            
            document.getElementById('selectedDiscountDisplay').classList.add('hidden');
            document.getElementById('noDiscountDisplay').classList.remove('hidden');
            updateDiscountCalculation();
            
            if (showMessage) {
                showToast('Discount code removed', 'info');
            }
        }
        
        // Remove discount button click handler
        document.getElementById('removeDiscountBtn')?.addEventListener('click', async () => {
            await removeDiscountCode(true);
        });
        
        // Expose removeDiscountCode globally for cart updates
        window.removeDiscountIfNeeded = async function(newRentalSubtotal, newPurchaseSubtotal) {
            if (selectedDiscountCode) {
                // Check if discount code should be removed
                if (selectedDiscountCode.usageType === 'Rental' && newRentalSubtotal === 0) {
                    await removeDiscountCode(false);
                    showToast('Discount code removed: No rental items in cart', 'info');
                } else if (selectedDiscountCode.usageType === 'Purchase' && newPurchaseSubtotal === 0) {
                    await removeDiscountCode(false);
                    showToast('Discount code removed: No purchase items in cart', 'info');
                }
            }
        };

        // Calculate discount amount based on discount code usage type
        function updateDiscountCalculation(useCurrentSubtotals = false, currentRental = null, currentPurchase = null, currentTotal = null, currentDeposit = null) {
            let discountCodeAmount = 0;
            
            // Use provided subtotals if available (from quantity update), otherwise use initial values
            const effectiveRentalSubtotal = useCurrentSubtotals && currentRental !== null ? currentRental : rentalSubtotal;
            const effectivePurchaseSubtotal = useCurrentSubtotals && currentPurchase !== null ? currentPurchase : purchaseSubtotal;
            const effectiveSubtotal = useCurrentSubtotals && currentTotal !== null ? currentTotal : subtotal;
            const effectiveDeposit = useCurrentSubtotals && currentDeposit !== null ? currentDeposit : @Model.TotalDeposit;
            
            if (selectedDiscountCode) {
                // Determine which subtotal to apply discount to based on UsageType
                let applicableSubtotal = 0;
                
                if (selectedDiscountCode.usageType === 'Rental') {
                    applicableSubtotal = effectiveRentalSubtotal;
                } else if (selectedDiscountCode.usageType === 'Purchase') {
                    applicableSubtotal = effectivePurchaseSubtotal;
                }
                
                // Calculate discount amount
                if (selectedDiscountCode.discountType === 'Percentage') {
                    discountCodeAmount = Math.round(applicableSubtotal * (selectedDiscountCode.value / 100));
                } else {
                    discountCodeAmount = selectedDiscountCode.value;
                }
                
                // Ensure discount doesn't exceed applicable subtotal
                discountCodeAmount = Math.min(discountCodeAmount, applicableSubtotal);
            }
            
            // Update discount code display
            document.getElementById('cart-discount').textContent = discountCodeAmount > 0 
                ? `-${discountCodeAmount.toLocaleString()} VND` 
                : '0 VND';
            
            // Calculate total discount (discount code + auto discount: Item Rental Discount + Loyalty Discount)
            let totalDiscount = discountCodeAmount;
            
            // Get auto discount from DOM if autoDiscountData is not available
            if (autoDiscountData) {
                totalDiscount += autoDiscountData.totalAutoDiscount || 0;
            } else {
                // Fallback: read auto discount values from DOM
                const itemRentalText = document.getElementById('item-rental-discount')?.textContent || '0';
                const loyaltyText = document.getElementById('loyalty-discount')?.textContent || '0';
                const itemRentalAmount = parseInt(itemRentalText.replace(/[^0-9]/g, '')) || 0;
                const loyaltyAmount = parseInt(loyaltyText.replace(/[^0-9]/g, '')) || 0;
                totalDiscount += itemRentalAmount + loyaltyAmount;
            }
            
            // Update total
            const newTotal = effectiveSubtotal - totalDiscount + effectiveDeposit;
            document.getElementById('cart-total').textContent = newTotal.toLocaleString() + ' VND';
        }
        
        // Expose function globally for quantity updates
        window.recalculateDiscount = function(newRentalSubtotal, newPurchaseSubtotal, newSubtotal, newDeposit) {
            updateDiscountCalculation(true, newRentalSubtotal, newPurchaseSubtotal, newSubtotal, newDeposit);
        };
        
        })(); // End of initDiscountCodeModal IIFE

        // ===== Policy Modal Functions =====
        let policyLoaded = false;

        async function openPolicyModal() {
            const modal = document.getElementById('policyModal');
            modal.classList.remove('hidden');
            modal.style.display = 'flex';
            document.body.style.overflow = 'hidden'; // Prevent background scroll
            
            if (!policyLoaded) {
                await loadPolicyContent();
            }
        }

        function closePolicyModal() {
            const modal = document.getElementById('policyModal');
            modal.classList.add('hidden');
            modal.style.display = 'none';
            document.body.style.overflow = ''; // Restore scroll
        }

        function acceptPolicy() {
            document.getElementById('hasAgreedToPolicies').checked = true;
            document.getElementById('policy-error').classList.add('hidden');
            closePolicyModal();
            showToast('Policy accepted!', 'success');
        }

        async function loadPolicyContent() {
            const contentDiv = document.getElementById('policyContent');
            try {
                const apiUrl = window.apiSettings?.baseUrl || '@Model.ApiBaseUrl';
                const policyName = encodeURIComponent('Rental and Sales Policy');
                const response = await fetch(`${apiUrl}/policy-configs/by-name/${policyName}`, {
                    method: 'GET',
                    headers: { 'Content-Type': 'application/json' }
                });

                if (response.ok) {
                    const result = await response.json();
                    const policy = result.data;
                    
                    if (policy && policy.content) {
                        contentDiv.innerHTML = `
                            <div class="prose prose-sm max-w-none text-gray-700">
                                ${policy.content}
                            </div>
                        `;
                        policyLoaded = true;
                    } else {
                        contentDiv.innerHTML = '<p class="text-gray-500 text-center py-8">Rental and Sales Policy is not available at the moment.</p>';
                    }
                } else {
                    contentDiv.innerHTML = '<p class="text-gray-500 text-center py-8">Rental and Sales Policy is not available at the moment.</p>';
                }
            } catch (error) {
                console.error('Error loading policy:', error);
                contentDiv.innerHTML = '<p class="text-red-500 text-center py-8">Failed to load policy. Please try again.</p>';
            }
        }

        // Close policy modal when clicking outside
        document.getElementById('policyModal')?.addEventListener('click', (e) => {
            if (e.target.id === 'policyModal') {
                closePolicyModal();
            }
        });
    </script>
