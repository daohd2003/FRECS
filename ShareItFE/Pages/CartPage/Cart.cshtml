@page
@model ShareItFE.Pages.CartPage.CartModel
@{
    ViewData["Title"] = "Giỏ hàng của tôi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}

<div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @* Toast Messages *@
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div id="toast-success" class="toast-message bg-success text-white p-3 position-fixed top-0 end-0 m-3 rounded">
                @Model.SuccessMessage
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div id="toast-error" class="toast-message bg-danger text-white p-3 position-fixed top-0 end-0 m-3 rounded">
                @TempData["ErrorMessage"]
            </div>
        }

        @* Empty Cart State *@
        @if (Model.Cart == null || !Model.Cart.Items.Any())
        {
            <div class="min-h-screen bg-gray-50 flex items-center justify-center">
                <div class="text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-24 w-24 text-gray-300 mx-auto mb-6"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z" /><path d="M3 6h18" /><path d="M16 10a4 4 0 0 1-8 0" /></svg>
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Continue shopping</h2>
                    <p class="text-gray-600 mb-8">Discover great outfits for your special occasions</p>
                    <a asp-page="/Products/Products" class="bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
                        Browse Collection
                    </a>
                </div>
            </div>
        }
        @* Cart Content *@
        else
        {
            <div class="flex items-center space-x-4 mb-8">
                <a asp-page="/Products/Products" class="flex items-center space-x-2 text-gray-600 hover:text-purple-600 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5"><path d="M19 12H5" /><path d="M12 19l-7-7 7-7" /></svg>
                    <span>Continue shopping</span>
                </a>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                @* Cart Items List *@
                <div class="lg:col-span-2 space-y-6">
                    <div class="bg-white rounded-lg shadow-sm">
                        <div class="p-6 border-b border-gray-200">
                            <h1 class="text-2xl font-bold text-gray-900">Shopping Cart</h1>
                            <p class="text-gray-600">@Model.Cart.Items.Count @(Model.Cart.Items.Count == 1 ? "product" : "products")</p>
                        </div>

                        @* Global rental schedule section - only show if there are rental items *@
                        @if (Model.Cart?.Items != null && Model.Cart.Items.Any(item => item.TransactionType == BusinessObject.Enums.TransactionType.rental))
                        {
                            <div class="p-6 border-b border-gray-200">
                                @* Global rental schedule for rental items only *@
                                @{
                                    var firstRentalItem = Model.Cart.Items.First(item => item.TransactionType == BusinessObject.Enums.TransactionType.rental);
                                }
                                <form id="global-schedule-form" method="post" asp-page-handler="UpdateCartSchedule" class="grid grid-cols-1 md:grid-cols-3 items-end gap-4 md:gap-6" onsubmit="saveScrollPosition()">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="itemId" value="@firstRentalItem.ItemId" />
                                    <div class="flex flex-col w-full">
                                        <label class="text-sm font-medium text-gray-700 mb-2">Start Date (rental items)</label>
                                        <input id="globalStartDate" type="date" name="startDate" value="@firstRentalItem.StartDate?.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" class="h-10 px-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                                    </div>
                                    <div class="flex flex-col w-full">
                                        <label class="text-sm font-medium text-gray-700 mb-2">Rental Days (rental items)</label>
                                        <div class="inline-flex items-center space-x-2">
                                            <button type="submit" name="action" value="decreaseDays" class="h-10 px-3 border border-gray-300 rounded-lg hover:bg-gray-50" aria-label="Decrease rental days">
                                                <i class="bi bi-dash-lg w-4 h-4"></i>
                                            </button>
                                            <input id="globalRentalDays" type="number" name="rentalDays" value="@firstRentalItem.RentalDays" min="1" class="h-10 w-24 text-center px-3 border border-gray-300 rounded-lg" />
                                            <button type="submit" name="action" value="increaseDays" class="h-10 px-3 border border-gray-300 rounded-lg hover:bg-gray-50" aria-label="Increase rental days">
                                                <i class="bi bi-plus-lg w-4 h-4"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="flex md:justify-end">
                                        <button type="submit" name="action" value="apply" class="h-10 bg-gray-900 text-white px-6 rounded-lg hover:bg-gray-800 transition-colors">Apply to rental items</button>
                                    </div>
                                </form>
                            </div>
                        }

                        <div class="divide-y divide-gray-200">
                            @foreach (var item in Model.Cart.Items)
                            {
                                <div class="p-6">
                                    <div class="flex items-start space-x-4">
                                        <img src="@(item.PrimaryImageUrl ?? "/images/placeholder.jpg")"
                                             alt="@item.ProductName"
                                             class="w-24 h-32 object-cover rounded-lg" />

                                        <div class="flex-1 min-w-0">
                                            <h3 class="text-lg font-semibold text-gray-900 mb-1">
                                                @item.ProductName
                                            </h3>
                                            <p class="text-gray-600 mb-2">Size: @item.ProductSize</p>
                                            
                                            @* Show transaction type *@
                                            <div class="text-sm mb-2">
                                                <span class="text-gray-600 mr-2">Type:</span>
                                                @if (item.TransactionType == BusinessObject.Enums.TransactionType.purchase)
                                                {
                                                    <span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-medium">Purchase</span>
                                                }
                                                else
                                                {
                                                    <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded-full text-xs font-medium">Rental</span>
                                                }
                                            </div>
                                            
                                            @* Show rental dates only for rental items *@
                                            @if (item.TransactionType == BusinessObject.Enums.TransactionType.rental && item.StartDate.HasValue && item.EndDate.HasValue)
                                            {
                                                <div class="text-sm text-gray-500 mb-3">
                                                    <span>From @item.StartDate.Value.ToString("dd-MM-yyyy") To @item.EndDate.Value.ToString("dd-MM-yyyy")</span>
                                                </div>
                                            }

                                            <div class="flex items-center">
                                                @* Added a flex container for controls ************ NEW ************ *@
                                                @* Controls for Quantity *@
                                                <div class="flex flex-col">
                                                    <label class="text-xs text-gray-500 mb-1">Quantity</label>
                                                    <div class="inline-flex items-center space-x-2">
                                                        <button type="button" onclick="updateQuantityAjax('@item.ItemId', @item.Quantity, @(item.RentalDays ?? 1), @item.PricePerUnit, 'decrease', '@item.TransactionType', @(item.TransactionType == BusinessObject.Enums.TransactionType.purchase ? item.AvailablePurchaseStock : item.AvailableRentalStock))" class="p-1 border border-gray-300 rounded hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-purple-500" aria-label="Giảm số lượng">
                                                            <i class="bi bi-dash-lg w-4 h-4"></i>
                                                        </button>
                                                        <span class="text-sm font-medium w-12 text-center" id="quantity-@item.ItemId">
                                                            @item.Quantity
                                                        </span>
                                                        <button type="button" onclick="updateQuantityAjax('@item.ItemId', @item.Quantity, @(item.RentalDays ?? 1), @item.PricePerUnit, 'increase', '@item.TransactionType', @(item.TransactionType == BusinessObject.Enums.TransactionType.purchase ? item.AvailablePurchaseStock : item.AvailableRentalStock))" class="p-1 border border-gray-300 rounded hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-purple-500" aria-label="Tăng số lượng">
                                                            <i class="bi bi-plus-lg w-4 h-4"></i>
                                                        </button>
                                                    </div>
                                                </div>

                                                @* Show rental days only for rental items *@
                                                @if (item.TransactionType == BusinessObject.Enums.TransactionType.rental)
                                                {
                                                    <div class="vertical-divider"></div>
                                                    <div class="flex flex-col">
                                                        <label class="text-xs text-gray-500 mb-1">Number of rental days</label>
                                                        <span class="text-sm font-medium min-w-[3rem] text-center">@item.RentalDays</span>
                                                    </div>
                                                }

                                                @* Remove Button *@
                                                <div class="ml-auto-remove-btn">
                                                    <button type="button" onclick="if(confirm('Are you sure you want to remove this product from cart?')) { removeItemFromCart('@item.ItemId'); }" class="flex items-center space-x-1 text-red-600 hover:text-red-700 transition-colors px-2 py-1 rounded" aria-label="Remove product">
                                                        <i class="bi bi-trash-fill h-5 w-5"></i>
                                                        <span class="text-sm">Delete</span>
                                                    </button>
                                                </div>
                                            </div> @* End of new flex container for controls ************ NEW ************ *@
                                        </div>

                                        @* Item Total Price Display *@
                                        <div class="text-right">
                                            <div class="text-lg font-bold text-purple-600" id="total-price-@item.ItemId">
                                                @item.TotalItemPrice.ToString("N0") VND
                                            </div>
                                            <div class="text-sm text-gray-500">
                                                @if (item.TransactionType == BusinessObject.Enums.TransactionType.purchase)
                                                {
                                                    <span>@item.PricePerUnit.ToString("N0") VND each</span>
                                                }
                                                else
                                                {
                                                    <span>@item.PricePerUnit.ToString("N0") VND/day</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    @* Promo Code Section *@
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4">Promo code</h3>
                        <div class="flex space-x-4">
                            <input type="text" placeholder="Enter promo code"
                                   class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                            <button type="button" class="bg-gray-900 text-white px-6 py-2 rounded-lg hover:bg-gray-800 transition-colors">
                                Apply
                            </button>
                        </div>
                    </div>
                </div>

                @* Order Summary Section *@
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-lg shadow-sm p-6 sticky top-8">
                        <h2 class="text-xl font-bold text-gray-900 mb-6">Order Summary</h2>

                        <div class="space-y-4 mb-6">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Subtotal</span>
                                <span class="font-semibold" id="cart-subtotal">@Model.Subtotal.ToString("N0") VND</span>
                            </div>

                            <div class="flex justify-between">
                                <span class="text-gray-600">Shipping fee</span>
                                <span class="font-semibold">FREE</span>
                            </div>

                            <div class="flex justify-between">
                                <span class="text-gray-600">Discount</span>
                                <span class="font-semibold">0 VND</span>
                            </div>

                            <div class="border-t pt-4">
                                <div class="flex justify-between text-lg font-bold">
                                    <span>Total</span>
                                    <span class="text-purple-600" id="cart-total">@Model.Total.ToString("N0") VND</span>
                                </div>
                            </div>
                        </div>

                        @* @if (Model.DeliveryFee > 0)
                            {
                                <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                                    <p class="text-sm text-blue-800">
                                        Thêm @((100000 - Model.Subtotal).ToString("N0")) VND nữa để được miễn phí giao hàng!
                                    </p>
                                </div>
                            } *@

                        @* Policy Agreement Section *@
                        <div class="mb-6">
                            <input type="checkbox" id="hasAgreedToPolicies" name="HasAgreedToPolicies" value="true"
                                   class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded">
                            <label for="hasAgreedToPolicies" class="ml-2 text-sm text-gray-700">
                                I have read and agree to the <a href="/rental-and-sales-policy" target="_blank" class="text-purple-600 hover:underline">Rental and Sales Policy</a>.
                            </label>
                            <div id="policy-error" class="text-red-600 text-sm mt-1 hidden">
                                Please read the rental and purchase policy carefully and tick the checkbox to continue.
                            </div>
                        </div>

                        <a href="#" onclick="handleMakePayment(event)"
                           id="makePaymentButton"
                           class="w-full bg-purple-600 text-white py-3 px-6 rounded-lg font-semibold hover:bg-purple-700 transition-colors text-center block mb-4 flex items-center justify-center space-x-2">
                            <i class="bi bi-lock-fill h-5 w-5"></i>
                            <span>Make payment</span>
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const toastSuccess = document.getElementById('toast-success');
            const toastError = document.getElementById('toast-error');

            if (toastSuccess) {
                setTimeout(() => { toastSuccess.style.display = 'none'; }, 4000);
            }
            if (toastError) {
                setTimeout(() => { toastError.style.display = 'none'; }, 4000);
            }

            // Policy checkbox is now unchecked by default
            // Users must manually check the agreement checkbox

            // Restore scroll position after quantity update
            restoreScrollPosition();

            // Auto-submit global schedule on change
            const globalForm = document.getElementById('global-schedule-form');
            const startInput = document.getElementById('globalStartDate');
            const daysInput = document.getElementById('globalRentalDays');
            if (globalForm && startInput && daysInput) {
                const submit = () => globalForm.requestSubmit();
                startInput.addEventListener('change', submit);
                daysInput.addEventListener('change', () => {
                    const v = parseInt(daysInput.value || '1', 10);
                    if (v < 1) daysInput.value = '1';
                    submit();
                });
            }
        });

        // Also try to restore scroll position on window load as backup
        window.addEventListener('load', () => {
            restoreScrollPosition();
        });

        function handleMakePayment(event) {
            event.preventDefault();

            const policyCheckbox = document.getElementById('hasAgreedToPolicies');
            const errorDiv = document.getElementById('policy-error');

            if (!policyCheckbox.checked) {
                errorDiv.classList.remove('hidden');
                return false;
            }

            // Hide error message if shown
            errorDiv.classList.add('hidden');

            // Redirect to checkout page
            window.location.href = '@Url.Page("/CheckoutPage/Checkout")';
        }

        // Function to save scroll position before form submission
        function saveScrollPosition() {
            localStorage.setItem('cartScrollPosition', window.pageYOffset);
            localStorage.setItem('cartScrollTimestamp', Date.now().toString());
            return true; // Allow form submission to continue
        }

        // Function to restore scroll position after page load
        function restoreScrollPosition() {
            const scrollPosition = localStorage.getItem('cartScrollPosition');
            const timestamp = localStorage.getItem('cartScrollTimestamp');
            
            if (scrollPosition && timestamp) {
                // Only restore if the timestamp is recent (within 5 seconds)
                const timeDiff = Date.now() - parseInt(timestamp);
                if (timeDiff < 5000) {
                    setTimeout(() => {
                        window.scrollTo(0, parseInt(scrollPosition));
                        localStorage.removeItem('cartScrollPosition');
                        localStorage.removeItem('cartScrollTimestamp');
                    }, 50);
                } else {
                    localStorage.removeItem('cartScrollPosition');
                    localStorage.removeItem('cartScrollTimestamp');
                }
            }
        }


        // Function to update quantity via AJAX without page reload
        async function updateQuantityAjax(itemId, currentQuantity, rentalDays, pricePerUnit, action, transactionType, availableStock) {
            try {
                // Disable buttons to prevent multiple clicks
                const buttons = document.querySelectorAll(`button[onclick*="${itemId}"]`);
                buttons.forEach(btn => btn.disabled = true);

                // Calculate new quantity
                let newQuantity = currentQuantity;
                if (action === 'increase') {
                    newQuantity = currentQuantity + 1;
                    
                    // Check stock validation for increase
                    if (availableStock > 0 && newQuantity > availableStock) {
                        showToast(`Cannot add more items. Only ${availableStock} units available in stock.`, 'error');
                        buttons.forEach(btn => btn.disabled = false);
                        return;
                    }
                } else if (action === 'decrease') {
                    newQuantity = currentQuantity - 1;
                    if (newQuantity < 1) {
                        // If quantity becomes 0, remove the item
                        if (confirm('Remove this item from cart?')) {
                            await removeItemFromCart(itemId);
                        }
                        buttons.forEach(btn => btn.disabled = false);
                        return;
                    }
                }

                const formData = new FormData();
                formData.append('itemId', itemId);
                formData.append('currentQuantity', currentQuantity);
                formData.append('action', action);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                const response = await fetch('@Url.Page("/CartPage/Cart", "UpdateQuantity")', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    // Update quantity display
                    const quantitySpan = document.getElementById(`quantity-${itemId}`);
                    if (quantitySpan) {
                        quantitySpan.textContent = newQuantity;
                    }

                    // Update button onclick handlers with new quantity
                    buttons.forEach(btn => {
                        const onclick = btn.getAttribute('onclick');
                        if (onclick.includes('decrease')) {
                            btn.setAttribute('onclick', `updateQuantityAjax('${itemId}', ${newQuantity}, ${rentalDays || 1}, ${pricePerUnit}, 'decrease', '${transactionType}', ${availableStock})`);
                        } else if (onclick.includes('increase')) {
                            btn.setAttribute('onclick', `updateQuantityAjax('${itemId}', ${newQuantity}, ${rentalDays || 1}, ${pricePerUnit}, 'increase', '${transactionType}', ${availableStock})`);
                        }
                    });

                    // Update item total price
                    const itemTotalElement = document.getElementById(`total-price-${itemId}`);
                    if (itemTotalElement) {
                        const newTotal = (pricePerUnit * (rentalDays || 1) * newQuantity);
                        itemTotalElement.textContent = newTotal.toLocaleString() + ' VND';
                    }

                    // Recalculate cart totals (you might need to fetch this from server or calculate client-side)
                    updateCartTotals();
                    
                    // Update product count in header (in case quantity affects count display)
                    updateProductCount();

                    // Show success message
                    showToast('Product quantity updated successfully!', 'success');
                } else {
                    const errorText = await response.text();
                    console.error('Error updating quantity:', errorText);
                    showToast('Failed to update quantity. Please try again.', 'error');
                }
            } catch (error) {
                console.error('Error updating quantity:', error);
                showToast('Failed to update quantity. Please try again.', 'error');
            } finally {
                // Re-enable buttons
                const buttons = document.querySelectorAll(`button[onclick*="${itemId}"]`);
                buttons.forEach(btn => btn.disabled = false);
            }
        }

        // Function to update cart totals (simple version - might need server call for accuracy)
        function updateCartTotals() {
            let newSubtotal = 0;
            
            // Calculate new subtotal from all item totals
            document.querySelectorAll('[id^="total-price-"]').forEach(element => {
                const priceText = element.textContent.replace(/[^\d]/g, '');
                newSubtotal += parseInt(priceText) || 0;
            });

            // Update subtotal display
            const subtotalElement = document.getElementById('cart-subtotal');
            if (subtotalElement) {
                subtotalElement.textContent = newSubtotal.toLocaleString() + ' VND';
            }

            // Update total display (assuming no additional fees)
            const totalElement = document.getElementById('cart-total');
            if (totalElement) {
                totalElement.textContent = newSubtotal.toLocaleString() + ' VND';
            }
        }

        // Function to update product count in cart header
        function updateProductCount() {
            const remainingItems = document.querySelectorAll('[id^="quantity-"]');
            const productCount = remainingItems.length;
            
            // Update the cart header with new count
            const cartHeaderElement = document.querySelector('.text-gray-600');
            if (cartHeaderElement && cartHeaderElement.textContent.includes('product')) {
                cartHeaderElement.textContent = `${productCount} ${productCount === 1 ? 'product' : 'products'}`;
            }
        }

        // Function to show toast messages
        function showToast(message, type) {
            // Create toast element
            const toast = document.createElement('div');
            toast.className = `toast-message ${type === 'success' ? 'bg-success' : 'bg-danger'} text-white p-3 position-fixed top-0 end-0 m-3 rounded`;
            toast.textContent = message;
            
            document.body.appendChild(toast);
            
            // Remove after 3 seconds
            setTimeout(() => {
                toast.remove();
            }, 3000);
        }

        // Function to remove item from cart via AJAX
        async function removeItemFromCart(itemId) {
            try {
                const formData = new FormData();
                formData.append('itemId', itemId);
                formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);

                const response = await fetch('@Url.Page("/CartPage/Cart", "RemoveFromCart")', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    // Remove the item from DOM
                    const itemElement = document.querySelector(`[id="quantity-${itemId}"]`).closest('.p-6');
                    if (itemElement) {
                        itemElement.style.transition = 'opacity 0.3s ease';
                        itemElement.style.opacity = '0';
                        setTimeout(() => {
                            itemElement.remove();
                            // Update cart totals after removing item
                            updateCartTotals();
                            
                            // Update product count in header
                            updateProductCount();
                            
                            // Check if cart is empty and reload if needed
                            const remainingItems = document.querySelectorAll('[id^="quantity-"]');
                            if (remainingItems.length === 0) {
                                window.location.reload(); // Reload to show empty cart state
                            }
                        }, 300);
                    }

                    showToast('Product removed from cart successfully!', 'success');
                } else {
                    const errorText = await response.text();
                    console.error('Error removing item:', errorText);
                    showToast('Failed to remove product. Please try again.', 'error');
                }
            } catch (error) {
                console.error('Error removing item:', error);
                showToast('Failed to remove product. Please try again.', 'error');
            }
        }
    </script>
}