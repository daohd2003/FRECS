@page
@model ShareItFE.Pages.CartPage.CartModel
@{
    ViewData["Title"] = "Giỏ hàng của tôi";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/discount-code-modal.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        .help-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 16px;
            height: 16px;
            border-radius: 50%;
            background: #64b5f6;
            color: #ffffff;
            font-weight: 600;
            font-size: 11px;
            cursor: help;
            margin-left: 4px;
            transition: all 0.2s ease;
        }
        .help-icon:hover {
            background: #42a5f5;
            transform: scale(1.15);
        }
    </style>
}

<div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @* Toast Messages *@
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div id="toast-success" class="toast-message bg-success text-white p-3 position-fixed top-0 end-0 m-3 rounded">
                @Model.SuccessMessage
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div id="toast-error" class="toast-message bg-danger text-white p-3 position-fixed top-0 end-0 m-3 rounded">
                @TempData["ErrorMessage"]
            </div>
        }

        @* Empty Cart State *@
        @if (Model.Cart == null || !Model.Cart.Items.Any())
        {
            <div class="min-h-screen bg-gray-50 flex items-center justify-center">
                <div class="text-center">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-24 w-24 text-gray-300 mx-auto mb-6"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z" /><path d="M3 6h18" /><path d="M16 10a4 4 0 0 1-8 0" /></svg>
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Continue shopping</h2>
                    <p class="text-gray-600 mb-8">Discover great outfits for your special occasions</p>
                    <a asp-page="/Products/Products" class="bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
                        Browse Collection
                    </a>
                </div>
            </div>
        }
        @* Cart Content *@
        else
        {
            <div class="flex items-center space-x-4 mb-8">
                <a asp-page="/Products/Products" class="flex items-center space-x-2 text-gray-600 hover:text-purple-600 transition-colors">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5"><path d="M19 12H5" /><path d="M12 19l-7-7 7-7" /></svg>
                    <span>Continue shopping</span>
                </a>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                @* Cart Items List *@
                <div class="lg:col-span-2 space-y-6">
                    <div class="bg-white rounded-lg shadow-sm">
                        <div class="p-6 pb-3 border-b border-gray-200">
                            <h1 class="text-2xl font-bold text-gray-900">Shopping Cart</h1>
                            <p class="text-gray-600">@Model.Cart.Items.Count @(Model.Cart.Items.Count == 1 ? "product" : "products")</p>
                        </div>

                        @* Global rental schedule section - only show if there are rental items *@
                        @if (Model.Cart?.Items != null && Model.Cart.Items.Any(item => item.TransactionType == BusinessObject.Enums.TransactionType.rental))
                        {
                            <div class="p-6 pt-3 border-b border-gray-200">
                                @* Global rental schedule for rental items only *@
                                @{
                                    var firstRentalItem = Model.Cart.Items.First(item => item.TransactionType == BusinessObject.Enums.TransactionType.rental);
                                }
                                <form id="global-schedule-form" method="post" asp-page-handler="UpdateCartSchedule" class="grid grid-cols-1 md:grid-cols-4 items-end gap-4 md:gap-6" onsubmit="saveScrollPosition()">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="itemId" value="@firstRentalItem.ItemId" />
                                    <div class="flex flex-col w-full">
                                        <label class="text-sm font-medium text-gray-700 mb-2">Start Date (rental items)</label>
                                        <input id="globalStartDate" type="date" name="startDate" value="@firstRentalItem.StartDate?.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" class="h-10 px-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                                    </div>
                                    <div class="flex flex-col w-full">
                                        <label class="text-sm font-medium text-gray-700 mb-2">Rental Days (rental items)</label>
                                        <div class="inline-flex items-center space-x-2">
                                            <button type="submit" name="action" value="decreaseDays" class="h-10 px-3 border border-gray-300 rounded-lg hover:bg-gray-50" aria-label="Decrease rental days">
                                                <i class="bi bi-dash-lg w-4 h-4"></i>
                                            </button>
                                            <input id="globalRentalDays" type="number" name="rentalDays" value="@firstRentalItem.RentalDays" min="1" max="7" class="h-10 w-24 text-center px-3 border border-gray-300 rounded-lg" />
                                            <button type="submit" name="action" value="increaseDays" class="h-10 px-3 border border-gray-300 rounded-lg hover:bg-gray-50" aria-label="Increase rental days">
                                                <i class="bi bi-plus-lg w-4 h-4"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="flex flex-col w-full">
                                        <label class="text-sm font-medium text-gray-700 mb-2">Rental Period</label>
                                        <div id="rentalPeriodDisplay" class="h-10 px-4 flex items-center bg-purple-100 text-purple-800 font-semibold rounded-lg w-fit" style="margin-top: -2%;">
                                            @if (firstRentalItem.StartDate.HasValue && firstRentalItem.EndDate.HasValue)
                                            {
                                                @firstRentalItem.StartDate.Value.ToString("dd/MM/yyyy") <span class="mx-2">→</span> @firstRentalItem.EndDate.Value.ToString("dd/MM/yyyy")
                                            }
                                        </div>
                                    </div>
                                    <div class="flex flex-col w-full">
                                        <button type="submit" name="action" value="apply" class="h-10 bg-gray-900 text-white px-6 rounded-lg hover:bg-gray-800 transition-colors w-fit">Apply to rental items</button>
                                    </div>
                                </form>
                            </div>
                        }

                        <div class="divide-y divide-gray-200">
                            @foreach (var item in Model.Cart.Items)
                            {
                                <div class="p-6">
                                    <div class="flex items-start space-x-4">
                                        <img src="@(item.PrimaryImageUrl ?? "/images/placeholder.jpg")"
                                             alt="@item.ProductName"
                                             class="w-24 h-32 object-cover rounded-lg" />

                                        <div class="flex-1 min-w-0">
                                            <h3 class="text-lg font-semibold text-gray-900 mb-1">
                                                @item.ProductName
                                            </h3>
                                            <p class="text-gray-600 mb-2">Size: @item.ProductSize</p>
                                            
                                            @* Show transaction type *@
                                            <div class="text-sm mb-2">
                                                <span class="text-gray-600 mr-1">Type:</span>@if (item.TransactionType == BusinessObject.Enums.TransactionType.purchase)
                                                {<span class="bg-green-100 text-green-800 px-2 py-1 rounded-full text-xs font-medium">Purchase</span>}
                                                else
                                                {<span class="bg-purple-100 text-purple-800 px-2 py-1 rounded-full text-xs font-medium">Rental</span>}
                                            </div>
                                            
                                            <div class="flex items-center">
                                                @* Added a flex container for controls ************ NEW ************ *@
                                                @* Controls for Quantity *@
                                                <div class="flex flex-col">
                                                    <label class="text-xs text-gray-500 mb-1">Quantity</label>
                                                    <div class="inline-flex items-center space-x-2">
                                                        <button type="button" onclick="updateQuantityAjax('@item.ItemId', @item.Quantity, @(item.RentalDays ?? 1), @item.PricePerUnit, 'decrease', '@item.TransactionType', @(item.TransactionType == BusinessObject.Enums.TransactionType.purchase ? item.AvailablePurchaseStock : item.AvailableRentalStock))" class="p-1 border border-gray-300 rounded hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-purple-500" aria-label="Giảm số lượng">
                                                            <i class="bi bi-dash-lg w-4 h-4"></i>
                                                        </button>
                                                        <span class="text-sm font-medium w-12 text-center" id="quantity-@item.ItemId">
                                                            @item.Quantity
                                                        </span>
                                                        <button type="button" onclick="updateQuantityAjax('@item.ItemId', @item.Quantity, @(item.RentalDays ?? 1), @item.PricePerUnit, 'increase', '@item.TransactionType', @(item.TransactionType == BusinessObject.Enums.TransactionType.purchase ? item.AvailablePurchaseStock : item.AvailableRentalStock))" class="p-1 border border-gray-300 rounded hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-purple-500" aria-label="Tăng số lượng">
                                                            <i class="bi bi-plus-lg w-4 h-4"></i>
                                                        </button>
                                                    </div>
                                                </div>

                                                @* Remove Button *@
                                                <div class="ml-auto-remove-btn">
                                                    <button type="button" onclick="if(confirm('Are you sure you want to remove this product from cart?')) { removeItemFromCart('@item.ItemId'); }" class="flex items-center space-x-1 text-red-600 hover:text-red-700 transition-colors px-2 py-1 rounded" aria-label="Remove product">
                                                        <i class="bi bi-trash-fill h-5 w-5"></i>
                                                        <span class="text-sm">Delete</span>
                                                    </button>
                                                </div>
                                            </div> @* End of new flex container for controls ************ NEW ************ *@
                                        </div>

                                        @* Item Total Price Display *@
                                        <div class="text-right">
                                            <div class="text-lg font-bold text-purple-600" id="total-price-@item.ItemId">
                                                @item.TotalItemPrice.ToString("N0") VND
                                            </div>
                                            <div class="text-sm text-gray-500">
                                                @if (item.TransactionType == BusinessObject.Enums.TransactionType.purchase)
                                                {
                                                    <span>@item.PricePerUnit.ToString("N0") VND each</span>
                                                }
                                                else
                                                {
                                                    <span>@item.PricePerUnit.ToString("N0") VND/day</span>
                                                    @if (item.TotalDepositAmount > 0)
                                                    {
                                                        <div class="text-xs text-orange-600 mt-1" id="deposit-@item.ItemId" data-deposit-per-unit="@item.DepositPerUnit">
                                                            +@item.TotalDepositAmount.ToString("N0") VND deposit
                                                        </div>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    @* Discount Code Section *@
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <div class="flex justify-between items-center mb-4">
                            <h3 class="text-lg font-semibold text-gray-900">Discount Code</h3>
                            <button type="button" id="selectDiscountBtn" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg font-medium flex items-center space-x-2 transition-all duration-200 shadow-sm hover:shadow-md">
                                <i class="bi bi-ticket-perforated text-lg"></i>
                                <span>Select Discount</span>
                            </button>
                        </div>
                        <div id="selectedDiscountDisplay" class="hidden">
                            <div class="relative flex items-center justify-between p-4 bg-gradient-to-r from-purple-50 via-purple-50 to-indigo-50 border-4 border-purple-400 rounded-xl shadow-lg ring-2 ring-purple-200 ring-offset-2">
                                <!-- Decorative corner accent -->
                                <div class="absolute -top-1 -left-1 w-4 h-4 bg-purple-500 rounded-full"></div>
                                <div class="absolute -top-1 -right-1 w-4 h-4 bg-purple-500 rounded-full"></div>
                                <div class="absolute -bottom-1 -left-1 w-4 h-4 bg-purple-500 rounded-full"></div>
                                <div class="absolute -bottom-1 -right-1 w-4 h-4 bg-purple-500 rounded-full"></div>
                                
                                <div class="flex items-center gap-3 flex-1 min-w-0 relative z-10">
                                    <!-- Icon -->
                                    <div class="flex-shrink-0 w-12 h-12 rounded-full bg-gradient-to-br from-purple-500 to-purple-600 flex items-center justify-center shadow-md border-2 border-white">
                                        <i class="bi bi-check-lg text-white text-xl font-bold"></i>
                                    </div>
                                    <!-- Discount Info -->
                                    <div class="flex-1 min-w-0">
                                        <div class="flex items-center gap-2 flex-wrap">
                                            <span class="font-bold text-gray-900 text-lg uppercase tracking-wide" id="selectedDiscountCode"></span>
                                            <span class="text-purple-400 font-bold text-xl">|</span>
                                            <span class="text-purple-700 font-semibold text-base flex items-center gap-1">
                                                <i class="bi bi-tag-fill text-sm"></i>
                                                <span id="selectedDiscountDescription"></span>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <!-- Remove Button -->
                                <button type="button" id="removeDiscountBtn" class="flex items-center space-x-1 text-red-600 hover:text-red-700 transition-colors px-2 py-1 rounded" aria-label="Remove discount code">
                                    <i class="bi bi-trash-fill h-5 w-5"></i>
                                    <span class="text-sm">Remove</span>
                                </button>
                            </div>
                        </div>
                        <div id="noDiscountDisplay" class="text-gray-500 text-sm italic flex items-center space-x-2">
                            <i class="bi bi-info-circle"></i>
                            <span>No discount code applied</span>
                        </div>
                    </div>
                </div>

                @* Order Summary Section *@
                <div class="lg:col-span-1">
                    <div class="bg-white rounded-lg shadow-sm p-6 sticky top-8">
                        <h2 class="text-xl font-bold text-gray-900 mb-6">Order Summary</h2>

                        <div class="space-y-4 mb-6">
                            <div class="flex justify-between">
                                <span class="text-gray-600">Subtotal</span>
                                <span class="font-semibold" id="cart-subtotal">@Model.Subtotal.ToString("N0") VND</span>
                            </div>

                            <div class="flex justify-between">
                                <span class="text-gray-600">Shipping fee</span>
                                <span class="font-semibold">FREE</span>
                            </div>

                            <div class="flex justify-between">
                                <span class="text-gray-600">Discount Code</span>
                                <span class="font-semibold text-green-600" id="cart-discount">0 VND</span>
                            </div>

                            @* Auto Discount for rental items *@
                            @if (Model.HasRentalItems)
                            {
                                <div id="auto-discount-section">
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600 flex items-center gap-1">
                                            Item Rental Discount
                                            <span class="text-xs text-gray-500" id="item-rental-percent">(@Model.ItemRentalCountDiscountPercent%)</span>
                                            <span class="help-icon" data-bs-toggle="tooltip" title="1% discount per 3 times product has been rented, max 30%. These products have been rented @Model.TotalItemRentalCount time(s) total.">?</span>
                                        </span>
                                        <span class="font-semibold text-green-600" id="item-rental-discount">
                                            @if (Model.ItemRentalCountDiscount > 0)
                                            {
                                                <text>-@Model.ItemRentalCountDiscount.ToString("N0") VND</text>
                                            }
                                            else
                                            {
                                                <text>0 VND</text>
                                            }
                                        </span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600 flex items-center gap-1">
                                            Loyalty Discount
                                            <span class="text-xs text-gray-500" id="loyalty-percent">(@Model.LoyaltyDiscountPercent%)</span>
                                            <span class="help-icon" data-bs-toggle="tooltip" title="2% discount per previous completed rental × number of items, max 15%. You have @Model.PreviousRentalCount previous rental(s).">?</span>
                                        </span>
                                        <span class="font-semibold text-green-600" id="loyalty-discount">
                                            @if (Model.LoyaltyDiscount > 0)
                                            {
                                                <text>-@Model.LoyaltyDiscount.ToString("N0") VND</text>
                                            }
                                            else
                                            {
                                                <text>0 VND</text>
                                            }
                                        </span>
                                    </div>
                                </div>
                            }

                            @* Security Deposit for rental items *@
                            @if (Model.TotalDeposit > 0)
                            {
                                <div class="flex justify-between">
                                    <span class="text-gray-600">Security Deposit <span class="text-xs text-gray-500">(refundable)</span></span>
                                    <span class="font-semibold text-orange-600" id="cart-deposit">@Model.TotalDeposit.ToString("N0") VND</span>
                                </div>
                            }

                            <div class="border-t pt-4">
                                <div class="flex justify-between text-lg font-bold">
                                    <span>Total <span class="text-sm font-normal text-gray-500">(incl. deposit)</span></span>
                                    <span class="text-purple-600" id="cart-total">@Model.Total.ToString("N0") VND</span>
                                </div>
                            </div>
                        </div>

                        @* Policy Agreement Section *@
                        <div class="mb-6">
                            <input type="checkbox" id="hasAgreedToPolicies" name="HasAgreedToPolicies" value="true"
                                   class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded"
                                   @(Model.Total > 50_000_000 ? "disabled" : "")>
                            <label for="hasAgreedToPolicies" class="ml-2 text-sm @(Model.Total > 50_000_000 ? "text-gray-400" : "text-gray-700")">
                                I have read and agree to the <a href="#" onclick="event.preventDefault(); openPolicyModal();" class="@(Model.Total > 50_000_000 ? "text-gray-400 pointer-events-none" : "text-purple-600 hover:underline cursor-pointer")">Rental and Sales Policy</a>.
                            </label>
                            <div id="policy-error" class="text-red-600 text-sm mt-1 hidden">
                                Please read the rental and purchase policy carefully and tick the checkbox to continue.
                            </div>
                        </div>

                        <a href="#" onclick="handleMakePayment(event)"
                           id="makePaymentButton"
                           class="w-full py-3 px-6 rounded-lg font-semibold transition-colors text-center block mb-4 flex items-center justify-center space-x-2 @(Model.Total > 50_000_000 ? "bg-gray-300 text-gray-500 cursor-not-allowed" : "bg-purple-600 text-white hover:bg-purple-700")">
                            <i class="bi bi-lock-fill h-5 w-5"></i>
                            <span>Make payment</span>
                        </a>

                    </div>
                </div>
            </div>
        }
    </div>
</div>



@* Discount Code Selection Modal *@
<div id="discountCodeModal" class="fixed inset-0 bg-black bg-opacity-50 hidden flex items-center justify-center p-4" style="z-index: 9999;">
    <div class="bg-white rounded-xl max-w-3xl w-full max-h-[85vh] overflow-hidden shadow-2xl" style="margin: auto;">
        <div class="p-6 border-b border-gray-200">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-bold text-gray-900">Select Discount Code</h3>
                <button type="button" id="closeDiscountModal" class="text-gray-400 hover:text-gray-600">
                    <i class="bi bi-x-lg text-2xl"></i>
                </button>
            </div>
            <!-- Search Box -->
            <div class="relative">
                <i class="bi bi-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                <input type="text" id="discountSearchInput" placeholder="Search discount code..." 
                       class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500">
            </div>
        </div>
        <div class="p-6 overflow-y-auto max-h-[calc(85vh-200px)]">
            <div id="discountCodesList" class="space-y-4">
                <!-- Discount codes will be loaded here -->
                <div class="flex items-center justify-center py-8">
                    <div class="text-center">
                        <i class="bi bi-hourglass-split text-4xl text-gray-400 mb-2"></i>
                        <p class="text-gray-500">Loading available discounts...</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* Policy Modal - placed at root level for proper z-index stacking *@
<div id="policyModal" class="hidden" style="position: fixed; top: 0; left: 0; right: 0; bottom: 0; background-color: rgba(0,0,0,0.5); z-index: 99999; display: none; align-items: center; justify-content: center; padding: 1rem;">
    <div style="background: white; border-radius: 0.75rem; max-width: 56rem; width: 100%; max-height: 90vh; overflow: hidden; box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25); margin: auto;">
        <div style="padding: 1.5rem; border-bottom: 1px solid #e5e7eb; display: flex; justify-content: space-between; align-items: center;">
            <h3 style="font-size: 1.25rem; font-weight: 700; color: #111827;">Rental and Sales Policy</h3>
            <button type="button" onclick="closePolicyModal()" style="color: #9ca3af; cursor: pointer; background: none; border: none; font-size: 1.5rem;">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
        <div id="policyContent" style="padding: 1.5rem; overflow-y: auto; max-height: calc(90vh - 140px);">
            <div style="display: flex; justify-content: center; align-items: center; padding: 2rem;">
                <div style="width: 2rem; height: 2rem; border: 2px solid #9333ea; border-top-color: transparent; border-radius: 50%; animation: spin 1s linear infinite;"></div>
                <span style="margin-left: 0.75rem; color: #6b7280;">Loading policy...</span>
            </div>
        </div>
        <div style="padding: 1rem; border-top: 1px solid #e5e7eb; display: flex; justify-content: flex-end; gap: 0.75rem;">
            <button type="button" onclick="closePolicyModal()" style="padding: 0.5rem 1.5rem; background: #e5e7eb; color: #374151; border-radius: 0.5rem; border: none; cursor: pointer;">
                Close
            </button>
            <button type="button" onclick="acceptPolicy()" style="padding: 0.5rem 1.5rem; background: #9333ea; color: white; border-radius: 0.5rem; border: none; cursor: pointer;">
                I Accept
            </button>
        </div>
    </div>
</div>
<style>
    @@keyframes spin {
        to { transform: rotate(360deg); }
    }
</style>

@section Scripts {
    <script>
        // Auto discount data - initialize from server-side values
        let autoDiscountData = @Html.Raw(Json.Serialize(new {
            itemRentalCountDiscountAmount = Model.ItemRentalCountDiscount,
            itemRentalCountDiscountPercent = Model.ItemRentalCountDiscountPercent,
            loyaltyDiscountAmount = Model.LoyaltyDiscount,
            loyaltyDiscountPercent = Model.LoyaltyDiscountPercent,
            totalAutoDiscount = Model.ItemRentalCountDiscount + Model.LoyaltyDiscount,
            previousRentalCount = Model.PreviousRentalCount,
            totalItemRentalCount = Model.TotalItemRentalCount
        }));

        document.addEventListener('DOMContentLoaded', () => {
            const toastSuccess = document.getElementById('toast-success');
            const toastError = document.getElementById('toast-error');

            if (toastSuccess) {
                setTimeout(() => { toastSuccess.style.display = 'none'; }, 4000);
            }
            if (toastError) {
                setTimeout(() => { toastError.style.display = 'none'; }, 4000);
            }

            // Initialize Bootstrap tooltips for help icons
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
            tooltipTriggerList.forEach(el => new bootstrap.Tooltip(el));

            // Policy checkbox is now unchecked by default
            // Users must manually check the agreement checkbox

            // Restore scroll position after quantity update
            restoreScrollPosition();

            // Auto discount is now loaded from server-side (Model)

            // Auto-submit global schedule on change
            const globalForm = document.getElementById('global-schedule-form');
