        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin: 20px 0;
    }
    
    .payment-method-option {
        cursor: pointer;
    }
    
    .payment-method-card {
        border: 2px solid #e0e0e0;
