                    const violationId = $(this).data('violation-id');
                    $(`#rejection-form-${violationId}`).addClass('hidden');
                    $(`.reject-violation-btn[data-violation-id="${violationId}"]`).prop('disabled', false);
                });
                
                $('.confirm-rejection-btn').on('click', function() {
                    const violationId = $(this).data('violation-id');
                    const notes = $(`#rejection-notes-${violationId}`).val().trim();
                    
                    if (!notes) {
                        alert('Please provide a reason for rejection.');
                        return;
                    }
                    
                    respondToViolation(violationId, false, notes);
                });
                
                // Handle message provider button
                $('.message-provider-btn').on('click', function() {
                    const violationId = $(this).data('violation-id');
                    const productId = $(this).data('product-id');
                    
                    if (!productId) {
                        alert('Unable to find product information. Please try again.');
                        return;
                    }
                    
                    startConversationWithProvider(productId, violationId);
                });

                // Handle escalate to admin button
                $('.escalate-to-admin-btn').on('click', function() {
                    const violationId = $(this).data('violation-id');
                    $(`#escalation-form-${violationId}`).removeClass('hidden');
                    $(this).prop('disabled', true);
                });

                $('.cancel-escalation-btn').on('click', function() {
                    const violationId = $(this).data('violation-id');
                    $(`#escalation-form-${violationId}`).addClass('hidden');
                    $(`.escalate-to-admin-btn[data-violation-id="${violationId}"]`).prop('disabled', false);
                });

                $('.confirm-escalation-btn').on('click', function() {
                    const violationId = $(this).data('violation-id');
                    const reason = $(`#escalation-reason-${violationId}`).val().trim();
                    
                    if (!confirm('Are you sure you want to escalate this dispute to admin? This action cannot be undone.')) {
                        return;
                    }
                    
                    escalateToAdmin(violationId, reason);
                });
            }

            async function respondToViolation(violationId, isAccepted, customerNotes = '') {
                try {
                    console.log('Responding to violation:', { violationId, isAccepted, customerNotes });
                    
                    // Try Razor Pages handler first
                    const formData = new FormData();
                    formData.append('customerNotes', customerNotes || '');

                    let response = await fetch(`/Order/Details?handler=RespondToViolation&violationId=${violationId}&isAccepted=${isAccepted}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                        },
                        body: formData
                    });
                    
                    console.log('Razor Pages response status:', response.status);
                    
                    // If Razor Pages handler fails, try direct API call
                    if (response.status === 404) {
                        console.log('Razor Pages handler not found, trying direct API call...');
                        
                        const apiFormData = new FormData();
                        apiFormData.append('IsAccepted', isAccepted);
                        if (customerNotes) {
                            apiFormData.append('CustomerNotes', customerNotes);
                        }
                        
                        response = await fetch(`@Model.ApiBaseUrl/rental-violations/${violationId}/respond`, {
                            method: 'POST',
                            headers: {
                                'Authorization': `Bearer @(Request.Cookies["AccessToken"])`
                            },
                            body: apiFormData
                        });
                        
                        console.log('Direct API response status:', response.status);
                    }

                    // Check HTTP status code instead of result.success
                    if (response.ok) {
                        const result = await response.json();
                        console.log('Success response:', result);
                        alert(result.message || 'Violation response submitted successfully!');
                        // Reload the page to reflect changes
                        location.reload();
                    } else {
                        const result = await response.json();
                        console.log('Error response:', result);
                        alert('Error: ' + (result.message || 'Failed to submit response'));
                    }
                } catch (error) {
                    console.error('Error responding to violation:', error);
                    alert('An error occurred. Please try again.');
                }
            }

            async function escalateToAdmin(violationId, reason = '') {
                try {
                    console.log('Escalating to admin:', { violationId, reason });
                    
                    const response = await fetch(`@Model.ApiBaseUrl/rental-violations/${violationId}/escalate`, {
                        method: 'POST',
                        headers: {
                            'Authorization': `Bearer @(Request.Cookies["AccessToken"])`,
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            reason: reason || null
                        })
                    });

                    if (response.ok) {
                        const result = await response.json();
                        console.log('Success response:', result);
                        alert(result.message || 'Dispute has been escalated to admin for review.');
                        // Reload the page to reflect changes
                        location.reload();
                    } else {
                        const result = await response.json();
                        console.log('Error response:', result);
                        alert('Error: ' + (result.message || 'Failed to escalate dispute'));
                    }
                } catch (error) {
                    console.error('Error escalating to admin:', error);
                    alert('An error occurred. Please try again.');
                }
            }

            // Function to start conversation with provider using floating chat
            async function startConversationWithProvider(productId, violationId) {
                try {
                    console.log('Starting conversation with provider for productId:', { productId, violationId });
                    
                    // Show loading state
                    const button = $(`.message-provider-btn[data-violation-id="${violationId}"]`);
                    const originalHtml = button.html();
                    button.html('<i class="fas fa-spinner fa-spin"></i>').prop('disabled', true);
                    
                    // Get product info first to get provider ID
                    const productResponse = await fetch(`@Model.ApiBaseUrl/products/${productId}`, {
                        method: 'GET',
                        headers: {
                            'Authorization': `Bearer @(Request.Cookies["AccessToken"])`,
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    if (!productResponse.ok) {
                        throw new Error('Failed to get product information');
                    }
                    
                    const productResult = await productResponse.json();
                    const providerId = productResult.data?.providerId;
                    
                    if (!providerId) {
                        throw new Error('Provider ID not found in product data');
                    }
                    
                    console.log('Found provider ID:', providerId);
                    
                    // Get provider info
                    const userInfoResponse = await fetch(`@Model.ApiBaseUrl/users/${providerId}`, {
                        method: 'GET',
                        headers: {
                            'Authorization': `Bearer @(Request.Cookies["AccessToken"])`,
                            'Content-Type': 'application/json'
                        }
                    });
                    
                    let providerName = 'Provider';
                    let providerAvatar = null;
                    
                    if (userInfoResponse.ok) {
                        const userInfo = await userInfoResponse.json();
                        providerName = userInfo.data?.fullName || userInfo.data?.userName || 'Provider';
                        providerAvatar = userInfo.data?.avatar;
                    }
                    
                    // Find or create conversation with provider
                    const response = await fetch('@Model.ApiBaseUrl/conversations/find-or-create', {
                        method: 'POST',
                        headers: {
                            'Authorization': `Bearer @(Request.Cookies["AccessToken"])`,
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            recipientId: providerId
                        })
                    });
                    
                    if (response.ok) {
                        const result = await response.json();
                        console.log('Conversation result:', result);
                        
                        // Use floating chat manager to open chat
                        if (window.floatingChatManager) {
                            window.floatingChatManager.openChat(providerId, providerName, providerAvatar);
                        } else if (window.openFloatingChat) {
                            window.openFloatingChat(providerId, providerName, providerAvatar);
                        } else {
                            // Fallback: redirect to messages page
                            window.open('/customer/messages', '_blank');
                        }
                        
                        // Reset button
                        button.html(originalHtml).prop('disabled', false);
                        
                    } else {
                        throw new Error('Failed to create conversation');
                    }
                    
                } catch (error) {
                    console.error('Error starting conversation:', error);
                    alert('Unable to start conversation: ' + error.message);
                    
                    // Reset button
                    const button = $(`.message-provider-btn[data-violation-id="${violationId}"]`);
                    button.html('<i class="bi bi-chat-dots"></i>').prop('disabled', false);
                }
            }

            // Image Modal for Evidence Photos
            function openImageModal(imageUrl, title) {
                // Remove existing modal if any
                $('#image-modal').remove();
                
                // Create image modal
                const imageModal = `
                    <div id="image-modal" class="modal-overlay" style="display: flex; align-items: center; justify-content: center; z-index: 9999;">
                        <div class="image-modal-content" style="max-width: 90vw; max-height: 90vh; position: relative; background: white; border-radius: 12px; overflow: hidden; box-shadow: 0 20px 60px rgba(0,0,0,0.3);">
                            <div class="image-modal-header" style="padding: 16px 20px; background: #343a40; color: white; display: flex; justify-content: space-between; align-items: center;">
                                <h5 style="margin: 0; font-weight: 600;">${title}</h5>
                                <button onclick="closeImageModal()" style="background: none; border: none; color: white; font-size: 24px; cursor: pointer; padding: 0; width: 32px; height: 32px; display: flex; align-items: center; justify-content: center; border-radius: 50%; transition: background 0.3s;">&times;</button>
                            </div>
                            <div class="image-modal-body" style="padding: 0; text-align: center; background: #f8f9fa;">
                                <img src="${imageUrl}" alt="${title}" style="max-width: 100%; max-height: 70vh; object-fit: contain; display: block; margin: 0 auto;">
                            </div>
                        </div>
                    </div>
                `;
                
                $('body').append(imageModal);
                $('#image-modal').removeClass('hidden');
                
                // Close on click outside
                $('#image-modal').on('click', function(e) {
                    if (e.target === this) {
                        closeImageModal();
                    }
                });
            }

            function closeImageModal() {
                $('#image-modal').remove();
            }

            // Handle ESC key to close image modal
            $(document).on('keydown', function(e) {
                if (e.key === 'Escape') {
                    closeImageModal();
                }
            });
        });
    </script>
