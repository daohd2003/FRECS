@page "{id:guid}"
@model ShareItFE.Pages.Order.DetailsModel
@{
    ViewData["Title"] = Model.Order != null ? $"Order Details - {Model.Order.OrderCode}" : "Order Details";

    // --- Helper functions ---
    Func<BusinessObject.Enums.OrderStatus, string> GetStatusColor = status =>
    {
        return status switch
        {
            BusinessObject.Enums.OrderStatus.pending => "status-pending",
            BusinessObject.Enums.OrderStatus.approved => "status-approved",
            BusinessObject.Enums.OrderStatus.in_transit => "status-in-transit",
            BusinessObject.Enums.OrderStatus.in_use => "status-in-use",
            BusinessObject.Enums.OrderStatus.returning => "status-returning",
            BusinessObject.Enums.OrderStatus.returned => "status-returned",
            BusinessObject.Enums.OrderStatus.cancelled => "status-cancelled",
            _ => "status-default"
        };
    };
    var totalRentalDays = Model.Order != null ? (Model.Order.RentalEndDate - Model.Order.RentalStartDate).Days + 1 : 0;
    var hasRentalItems = Model.Order?.Items?.Any(item => item.TransactionType == BusinessObject.Enums.TransactionType.rental) ?? false;
    var isPurchaseOnly = Model.Order?.Items?.All(item => item.TransactionType == BusinessObject.Enums.TransactionType.purchase) ?? false;
    
    Func<string, string> FormatPaymentMethod = method =>
    {
        return method?.ToLower() switch
        {
            "vnpay" => "Payment via VNPay",
            "sepay" => "Payment via SEPay",
            _ => method ?? "Không xác định"
        };
    };

}

@section Styles {
    <link rel="stylesheet" href="~/css/order-details.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}

<div class="page-container">
    <div class="page-header">
        <a asp-page="/Profile" asp-route-tab="orders" class="back-link">
            <i class="bi bi-arrow-left"></i>
            <span>Back to Orders</span>
        </a>
    </div>

    @if (Model.Order != null)
    {
        <div class="order-detail-grid">
        <div class="main-content">
            <div class="card">
                <div class="order-title">
                    <div>
                        <h1>Order @Model.Order.OrderCode</h1>
                        <p>Placed on @Model.Order.OrderDate.ToString("MMMM d, yyyy 'at' h:mm tt")</p>
                    </div>
                    <span class="status-badge @GetStatusColor(Model.Order.Status)">
                        @Model.Order.Status.ToString().Replace("_", " ")
                    </span>
                </div>
            </div>

            <div class="card">
                <h2 class="card-title">Order Items (@Model.Order.Items.Count)</h2>
                <div class="item-list">
                    @foreach (var item in Model.Order.Items)
                    {
                        <div class="item-card">
                            <a asp-page="/Products/Details" asp-route-id="@item.ProductId" title="View product details">
                                <img src="@(item.PrimaryImageUrl ?? "/images/placeholder.jpg")" alt="@item.ProductName" class="item-image" />
                            </a>
                            <div class="item-details">
                                <h3>
                                    <a asp-page="/Products/Details" asp-route-id="@item.ProductId" class="product-link">
                                        @item.ProductName
                                    </a>
                                </h3>
                                <div class="item-meta">
                                    @if (!string.IsNullOrEmpty(item.Size))
                                    {<span>Size: @item.Size</span>}
                                    @if (!string.IsNullOrEmpty(item.Color))
                                    {<span>Color: @item.Color</span>}
                                    <span>Quantity: @item.Quantity</span>
                                </div>
                            </div>
                            <div class="item-price-actions">
                                <div class="item-price">
                                    @if (item.TransactionType == BusinessObject.Enums.TransactionType.purchase)
                                    {
                                        <span>₫@item.PricePerDay.ToString("N0")</span>
                                        <small class="text-muted">(Purchase)</small>
                                    }
                                    else
                                    {
                                        <span>₫@item.PricePerDay.ToString("N0") / day</span>
                                        <small class="text-muted">(@(item.RentalDays ?? 0) days)</small>
                                        @if (item.DepositPerUnit > 0)
                                        {
                                            <div style="font-size: 0.75rem; color: #ea6833; margin-top: 2px;">
                                                +₫@((item.DepositPerUnit * item.Quantity).ToString("N0")) deposit
                                            </div>
                                        }
                                    }
                                </div>
                                @* Show Review button based on transaction type and order status *@
                                @{
                                    var canReview = false;
                                    if (item.TransactionType == BusinessObject.Enums.TransactionType.rental)
                                    {
                                        canReview = Model.Order.Status == BusinessObject.Enums.OrderStatus.returned;
                                    }
                                    else if (item.TransactionType == BusinessObject.Enums.TransactionType.purchase)
                                    {
                                        canReview = Model.Order.Status == BusinessObject.Enums.OrderStatus.in_use ||
                                                   Model.Order.Status == BusinessObject.Enums.OrderStatus.returning ||
                                                   Model.Order.Status == BusinessObject.Enums.OrderStatus.returned ||
                                                   Model.Order.Status == BusinessObject.Enums.OrderStatus.returned_with_issue;
                                    }
                                }
                                @if (canReview)
                                {
                                    <div class="item-actions">
                                        <a asp-page="/Products/Detail" asp-route-id="@item.ProductId" asp-route-fromOrder="true"
                                           class="btn btn-sm btn-success review-btn">
                                            <i class="bi bi-star"></i> Review
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card">
                <h2 class="card-title">Order Status</h2>
                <div class="actions-grid">
                    <a href="/Contact" class="btn btn-primary"><i class="bi bi-chat-dots"></i> Contact Support</a>

                    @if (isPurchaseOnly)
                    {
                        <!-- Purchase-only workflow -->
                        
                        <!-- Pay Now Button (for pending orders) -->
                        @if (Model.Order.Status == BusinessObject.Enums.OrderStatus.pending)
                        {
                            <button class="btn btn-success pay-now-btn" data-order-id="@Model.Order.Id" data-order-amount="@Model.Order.TotalAmount">
                                <i class="bi bi-credit-card"></i> Pay Now
                            </button>
                        }
                        
                        @if (Model.Order.Status == BusinessObject.Enums.OrderStatus.in_transit)
                        {
                            <button class="btn btn-success confirm-delivery-btn" data-order-id="@Model.Order.Id">
                                <i class="bi bi-check-circle"></i> Confirm Received
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-disabled" disabled>
                                <i class="bi bi-check-circle"></i> Confirm Received
                            </button>
                        }
                        
                        <!-- Cancel Order Button (for purchase-only orders) -->
                        @if (Model.Order.Status != BusinessObject.Enums.OrderStatus.returned)
                        {
                            @if (Model.Order.Status == BusinessObject.Enums.OrderStatus.pending)
                            {
                                <button class="btn btn-danger cancel-order-btn" data-order-id="@Model.Order.Id">
                                    <i class="bi bi-x-circle"></i> Cancel Order
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-disabled" disabled>
                                    <i class="bi bi-x-circle"></i> Cancel Order
                                </button>
                            }
                        }
                    }
                    else
                    {
                        <!-- Rental workflow (including mixed orders) -->
                        
                        <!-- Pay Now Button (for pending orders) -->
                        @if (Model.Order.Status == BusinessObject.Enums.OrderStatus.pending)
                        {
                            <button class="btn btn-success pay-now-btn" data-order-id="@Model.Order.Id" data-order-amount="@Model.Order.TotalAmount">
                                <i class="bi bi-credit-card"></i> Pay Now
                            </button>
                        }
                        
                        <!-- Rent Again Button (for returned orders) -->
                        @if (Model.Order.Status == BusinessObject.Enums.OrderStatus.returned)
                        {
                            <button type="button" class="btn btn-primary rent-again-btn" data-order-id="@Model.Order.Id">
                                <i class="bi bi-arrow-repeat"></i> Rent Again
                            </button>
                        }
                        else
                        {
                            <!-- Confirm Received Button -->
                            @if (Model.Order.Status == BusinessObject.Enums.OrderStatus.in_transit)
                            {
                                <button class="btn btn-success confirm-delivery-btn" data-order-id="@Model.Order.Id">
                                    <i class="bi bi-check-circle"></i> Confirm Received
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-disabled" disabled>
                                    <i class="bi bi-check-circle"></i> Confirm Received
                                </button>
                            }

                            @* Hide Mark as Returning for purchase-only orders *@
                            @if (!isPurchaseOnly)
                            {
                                <!-- Mark as Returning Button (only for rental) -->
                                @if (Model.Order.Status == BusinessObject.Enums.OrderStatus.in_use)
                                {
                                    <button class="btn btn-warning mark-returning-btn" data-order-id="@Model.Order.Id">
                                        <i class="bi bi-box-arrow-up"></i> Mark as Returning
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-disabled" disabled>
                                        <i class="bi bi-box-arrow-up"></i> Mark as Returning
                                    </button>
                                }
                            }
                        }
                        
                        @* Hide Cancel Order for purchase-only orders *@
                        @if (!isPurchaseOnly)
                        {
                            <!-- Cancel Order Button (for both purchase and rental) -->
                            @if (Model.Order.Status != BusinessObject.Enums.OrderStatus.returned)
                            {
                                @if (Model.Order.Status == BusinessObject.Enums.OrderStatus.pending)
                                {
                                    <button class="btn btn-danger cancel-order-btn" data-order-id="@Model.Order.Id">
                                        <i class="bi bi-x-circle"></i> Cancel Order
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-disabled" disabled>
                                        <i class="bi bi-x-circle"></i> Cancel Order
                                    </button>
                                }
                            }
                        }
                    }
                </div>
            </div>
        </div>

        <aside class="sidebar">
            <div class="card">
                <h3 class="card-title">Order Summary</h3>
                <div class="summary-list">
                    <div class="summary-item">
                        <span>Subtotal</span>
                        <span>₫@Model.Order.Subtotal.ToString("N0")</span>
                    </div>
                    @if (hasRentalItems)
                    {
                        <div class="summary-item rental-period">
                            <span>Rental Period</span>
                            <span>
                                @Model.Order.RentalStartDate.ToString("dd/MM/yyyy") - @Model.Order.RentalEndDate.ToString("dd/MM/yyyy")
                            </span>
                        </div>
                    }
                    <div class="summary-item">
                        <span>Shipping</span>
                        <span>@(Model.Order.Shipping == 0 ? "FREE" : "₫" + Model.Order.Shipping.ToString("N0"))</span>
                    </div>
                    <div class="summary-item">
                        <span>Discount</span>
                        <span class="@(Model.Order.DiscountAmount > 0 ? "text-success" : "")">
                            @if (Model.Order.DiscountAmount > 0)
                            {
                                <text>-₫@Model.Order.DiscountAmount.ToString("N0")</text>
                                if (!string.IsNullOrEmpty(Model.Order.DiscountCodeName))
                                {
                                    <small class="text-muted ms-1">(@Model.Order.DiscountCodeName)</small>
                                }
                            }
                            else
                            {
                                <text>₫0</text>
                            }
                        </span>
                    </div>
                    @if (Model.Order.TotalDepositAmount > 0)
                    {
                        <div class="summary-item">
                            <span>Security Deposit <small class="text-muted">(refundable)</small></span>
                            <span>₫@Model.Order.TotalDepositAmount.ToString("N0")</span>
                        </div>
                    }
                    <div class="summary-total">
                        <span>Total <small class="text-muted" style="font-weight: normal;">(incl. deposit)</small></span>
                        <span>₫@Model.Order.TotalAmount.ToString("N0")</span>
                    </div>
                </div>
            </div>

            <div class="card">
                <h3 class="card-title"><i class="bi bi-geo-alt"></i> Shipping Address</h3>
                <div class="address-details">
                    <div class="address-email">
                        <i class="bi bi-envelope"></i> <span>@Model.Order.ShippingAddress.Email</span>
                    </div>
                    <p><strong>@Model.Order.ShippingAddress.FullName</strong></p>
                    <p>@Model.Order.ShippingAddress.Address</p>
                    <div class="address-phone">
                        <i class="bi bi-telephone"></i>
                        <span>@Model.Order.ShippingAddress.Phone</span>
                    </div>
                </div>
            </div>

            <div class="card">
                <h3 class="card-title"><i class="bi bi-credit-card"></i> Payment Method</h3>
                <p>@FormatPaymentMethod(Model.Order.PaymentMethod)</p>
            </div>
        </aside>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <h4>Order Not Found</h4>
            <p>The requested order could not be found or you don't have permission to view it.</p>
            <a asp-page="/Profile" asp-route-tab="orders" class="btn btn-primary">Back to Orders</a>
        </div>
    }
</div>

<!-- Payment Method Modal -->
<div id="payment-method-modal" class="modal-overlay hidden">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Select Payment Method</h3>
            <button id="payment-method-close-btn" class="modal-close-btn">&times;</button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="payment-order-id" />
            <input type="hidden" id="payment-order-amount" />
            
            <div class="payment-methods">
                <div class="payment-method-option" data-method="vnpay">
                    <div class="payment-method-card">
                        <i class="bi bi-credit-card" style="font-size: 2rem; color: #0066cc;"></i>
                        <h4>VNPay</h4>
                        <p>Pay securely via VNPay gateway</p>
                    </div>
                </div>
                <div class="payment-method-option" data-method="qr">
                    <div class="payment-method-card">
                        <i class="bi bi-qr-code" style="font-size: 2rem; color: #00aa00;"></i>
                        <h4>QR Bank Transfer</h4>
                        <p>Scan QR code to pay via bank</p>
                    </div>
                </div>
            </div>
            
            <div id="qr-code-section" class="hidden" style="text-align: center; margin-top: 20px;">
                <h4>Scan QR Code to Pay</h4>
                <img id="qr-code-image" src="" alt="QR Code" style="max-width: 300px; margin: 20px auto; display: block;" />
                <p class="text-muted">Waiting for payment confirmation...</p>
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
        <div class="modal-actions">
            <button id="payment-method-cancel-btn" class="btn btn-secondary">Cancel</button>
        </div>
    </div>
</div>

<!-- Rent Again Modal -->
<div id="rent-again-modal" class="modal-overlay hidden">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="modal-title">Rent Item(s) Again</h3>
            <button id="rent-again-close-btn" class="modal-close-btn">&times;</button>
        </div>
        <div class="modal-body">
            <form id="rent-again-form">
                @Html.AntiForgeryToken()
                <input type="hidden" id="rent-again-original-order-id" name="OriginalOrderId" />

                <div class="form-group mb-3">
                    <label for="new-rental-start-date" class="form-label">Rental Start Date</label>
                    <input type="date" id="new-rental-start-date" class="form-input" required />
                </div>
                <div class="form-group mb-3">
                    <label for="new-rental-end-date" class="form-label">Rental End Date</label>
                    <input type="date" id="new-rental-end-date" class="form-input" required />
                </div>
            </form>
        </div>
        <div class="modal-actions">
            <button id="rent-again-cancel-btn" class="btn btn-secondary">Cancel</button>
            <button id="rent-again-save-btn" class="btn btn-primary">Confirm Rent</button>
        </div>
    </div>
</div>

<style>
    .payment-methods {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        margin: 20px 0;
    }
    
    .payment-method-option {
        cursor: pointer;
    }
    
    .payment-method-card {
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        padding: 30px 20px;
        text-align: center;
        transition: all 0.3s ease;
    }
    
    .payment-method-card:hover {
        border-color: #0066cc;
        background-color: #f8f9fa;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .payment-method-card h4 {
        margin: 10px 0 5px;
        font-size: 1.2rem;
        color: #333;
    }
    
    .payment-method-card p {
        margin: 0;
        font-size: 0.9rem;
        color: #666;
    }
    
    .hidden {
        display: none !important;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // === PAY NOW FUNCTIONALITY ===
            let paymentPollingInterval = null;
            
            $('.pay-now-btn').on('click', function() {
                const orderId = $(this).data('order-id');
                const orderAmount = $(this).data('order-amount');
                
                $('#payment-order-id').val(orderId);
                $('#payment-order-amount').val(orderAmount);
                $('#payment-method-modal').removeClass('hidden');
                $('#qr-code-section').addClass('hidden');
                $('.payment-methods').show();
            });
            
            $('#payment-method-close-btn, #payment-method-cancel-btn').on('click', function() {
                $('#payment-method-modal').addClass('hidden');
                if (paymentPollingInterval) {
                    clearInterval(paymentPollingInterval);
                    paymentPollingInterval = null;
                }
            });
            
            $('.payment-method-option').on('click', function() {
                const method = $(this).data('method');
                const orderId = $('#payment-order-id').val();
                
                console.log('Payment method selected:', method);
                console.log('Order ID:', orderId);
                
                if (!orderId) {
                    alert('Order ID is missing');
                    return;
                }
                
                if (method === 'vnpay') {
                    // Create transaction and redirect to VNPay
                    $.ajax({
                        url: `@Model.ApiBaseUrl/payment/Vnpay/CreatePaymentUrl`,
                        type: 'POST',
                        headers: {
                            'Authorization': 'Bearer ' + '@(Request.Cookies["AccessToken"])',
                            'Content-Type': 'application/json'
                        },
                        data: JSON.stringify({
                            OrderIds: [orderId],
                            Note: `Payment for order ${orderId.substring(0, 8)}`
                        }),
                        success: function(response) {
                            console.log('VNPay response:', response);
                            const paymentUrl = response.data;
                            if (paymentUrl) {
                                window.location.href = paymentUrl;
                            } else {
                                alert('Could not get VNPay payment URL. Response: ' + JSON.stringify(response));
                            }
                        },
                        error: function(xhr) {
                            console.error('VNPay error:', xhr);
                            const error = xhr.responseJSON;
                            alert('Failed to initialize VNPay payment: ' + (error?.message || xhr.responseText || 'Unknown error'));
                        }
                    });
                } else if (method === 'qr') {
                    // Create transaction and show QR code
                    $.ajax({
                        url: `@Model.ApiBaseUrl/transactions/create`,
                        type: 'POST',
                        headers: {
                            'Authorization': 'Bearer ' + '@(Request.Cookies["AccessToken"])',
                            'Content-Type': 'application/json'
                        },
                        data: JSON.stringify({
                            OrderIds: [orderId]
                        }),
                        success: function(response) {
                            console.log('QR response:', response);
                            const qrImageUrl = response.data.qrImageUrl;
                            const transactionId = response.data.transactionId;
                            
                            if (!qrImageUrl || !transactionId) {
                                alert('Invalid QR response. Missing qrImageUrl or transactionId. Response: ' + JSON.stringify(response));
                                return;
                            }
                            
                            // Hide payment method selection, show QR code
                            $('.payment-methods').hide();
                            $('#qr-code-image').attr('src', qrImageUrl);
                            $('#qr-code-section').removeClass('hidden');
                            
                            // Start polling for transaction status
                            startPaymentPolling(transactionId);
                        },
                        error: function(xhr) {
                            console.error('QR error:', xhr);
                            const error = xhr.responseJSON;
                            alert('Failed to create QR code: ' + (error?.message || xhr.responseText || 'Unknown error'));
                        }
                    });
                }
            });
            
            function startPaymentPolling(transactionId) {
                let pollCount = 0;
                const maxPolls = 120; // Poll for 10 minutes (120 * 5 seconds)
                
                console.log('Starting payment polling for transaction:', transactionId);
                
                paymentPollingInterval = setInterval(function() {
                    pollCount++;
                    
                    if (pollCount > maxPolls) {
                        clearInterval(paymentPollingInterval);
                        alert('Payment timeout. Please check your order status later.');
                        $('#payment-method-modal').addClass('hidden');
                        return;
                    }
                    
                    $.ajax({
                        url: `@Model.ApiBaseUrl/transactions/${transactionId}/status`,
                        type: 'GET',
                        headers: {
                            'Authorization': 'Bearer ' + '@(Request.Cookies["AccessToken"])'
                        },
                        success: function(result) {
                            console.log(`Polling attempt ${pollCount}:`, result);
                            const status = result.data.status;
                            
                            if (status === 'completed') {
                                clearInterval(paymentPollingInterval);
                                alert('Payment successful! Your order has been approved.');
                                location.reload();
                            } else if (status === 'failed') {
                                clearInterval(paymentPollingInterval);
                                alert('Payment failed. Please try again.');
                                $('#payment-method-modal').addClass('hidden');
                            }
                        },
                        error: function(xhr) {
                            console.error('Status check failed:', xhr.status);
                        }
                    });
                }, 5000); // Check every 5 seconds
            }
            
            $('.confirm-delivery-btn').on('click', function() {
                const orderId = $(this).data('order-id');
                const button = $(this);

                if (confirm('Are you sure you want to confirm that you have received this order?')) {
                    button.prop('disabled', true).html('<i class="bi bi-hourglass"></i> Processing...');

                    $.ajax({
                        url: `@Model.ApiBaseUrl/orders/${orderId}/confirm-delivery`,
                        type: 'PUT',
                        headers: {
                            'Authorization': 'Bearer ' + '@(Request.Cookies["AccessToken"])',
                            'Content-Type': 'application/json'
                        },
                        success: function(response) {
                            alert('Order delivery confirmed successfully!');

                            // Reload notifications after order status change
                            if (window.loadNotifications) {
                                const notificationMenu = document.querySelector('.notification-menu');
                                const userId = notificationMenu ? notificationMenu.dataset.userid : null;
                                if (userId) {
                                    console.log('Reloading notifications after delivery confirmation...');
                                    setTimeout(() => window.loadNotifications(userId), 500);
                                }
                            }

                            location.reload(); // Reload để cập nhật status
                        },
                        error: function(xhr) {
                            alert('Error confirming delivery: ' + (xhr.responseJSON?.message || 'Unknown error'));
                            button.prop('disabled', false).html('<i class="bi bi-check-circle"></i> Confirm Received');
                        }
                    });
                }
            });

            $('.mark-returning-btn').on('click', function() {
                const orderId = $(this).data('order-id');
                const button = $(this);

                if (confirm('Are you sure you want to mark this order as returning?')) {
                    button.prop('disabled', true).html('<i class="bi bi-hourglass"></i> Processing...');

                    $.ajax({
                        url: `@Model.ApiBaseUrl/orders/${orderId}/mark-returning`,
                        type: 'PUT',
                        headers: {
                            'Authorization': 'Bearer ' + '@(Request.Cookies["AccessToken"])',
                            'Content-Type': 'application/json'
                        },
                        success: function(response) {
                            alert('Order marked as returning successfully!');

                            // Reload notifications after order status change
                            if (window.loadNotifications) {
                                const notificationMenu = document.querySelector('.notification-menu');
                                const userId = notificationMenu ? notificationMenu.dataset.userid : null;
                                if (userId) {
                                    console.log('Reloading notifications after marking returning...');
                                    setTimeout(() => window.loadNotifications(userId), 500);
                                }
                            }

                            location.reload(); // Reload để cập nhật status
                        },
                        error: function(xhr) {
                            alert('Error marking as returning: ' + (xhr.responseJSON?.message || 'Unknown error'));
                            button.prop('disabled', false).html('<i class="bi bi-box-arrow-up"></i> Mark as Returning');
                        }
                    });
                }
            });

            // Handle Cancel Order for pending orders
            $('.cancel-order-btn').on('click', function() {
                const orderId = $(this).data('order-id');
                const button = $(this);

                if (confirm('Are you sure you want to cancel this order? Once cancelled, you can remove it from your order list.')) {
                    button.prop('disabled', true).html('<i class="bi bi-hourglass-split"></i> Canceling...');

                    $.ajax({
                        url: `@Model.ApiBaseUrl/orders/${orderId}/cancel`,
                        type: 'PUT',
                        headers: {
                            'Authorization': 'Bearer ' + '@(Request.Cookies["AccessToken"])',
                            'Content-Type': 'application/json'
                        },
                        success: function(response) {
                            alert('Order cancelled successfully!');

                            // Reload notifications to reflect cancelled order status
                            if (window.loadNotifications) {
                                const notificationMenu = document.querySelector('.notification-menu');
                                const userId = notificationMenu ? notificationMenu.dataset.userid : null;
                                if (userId) {
                                    console.log('Reloading notifications after order cancellation...');
                                    setTimeout(() => {
                                        window.loadNotifications(userId);
                                    }, 500); // Small delay to ensure cancellation is processed
                                }
                            }

                            location.reload(); // Reload để cập nhật status
                        },
                        error: function(xhr) {
                            alert('Error cancelling order: ' + (xhr.responseJSON?.message || 'Unknown error'));
                            button.prop('disabled', false).html('<i class="bi bi-x-circle"></i> Cancel Order');
                        }
                    });
                }
            });

            // Logic cho chức năng "Rent Again"
            const rentAgainModal = document.getElementById('rent-again-modal');
            const rentAgainCloseBtn = document.getElementById('rent-again-close-btn');
            const rentAgainCancelBtn = document.getElementById('rent-again-cancel-btn');
            const rentAgainSaveBtn = document.getElementById('rent-again-save-btn');
            const originalOrderIdInput = document.getElementById('rent-again-original-order-id');
            const newRentalStartDateInput = document.getElementById('new-rental-start-date');
            const newRentalEndDateInput = document.getElementById('new-rental-end-date');

            // Bắt sự kiện click vào nút "Rent Again"
            document.querySelectorAll('.rent-again-btn').forEach(button => {
                button.addEventListener('click', () => {
                    const orderId = button.dataset.orderId;
                    originalOrderIdInput.value = orderId;

                    const today = new Date();
                    const tomorrow = new Date(today);
                    tomorrow.setDate(tomorrow.getDate() + 1);

                    newRentalStartDateInput.min = tomorrow.toISOString().split('T')[0];
                    newRentalStartDateInput.value = tomorrow.toISOString().split('T')[0];

                    const defaultEndDate = new Date(tomorrow);
                    defaultEndDate.setDate(tomorrow.getDate() + 7);
                    newRentalEndDateInput.min = defaultEndDate.toISOString().split('T')[0];
                    newRentalEndDateInput.value = defaultEndDate.toISOString().split('T')[0];

                    rentAgainModal.classList.remove('hidden');
                });
            });

            newRentalStartDateInput.addEventListener('change', () => {
                const startDate = new Date(newRentalStartDateInput.value);
                const minEndDate = new Date(startDate);
                minEndDate.setDate(startDate.getDate() + 1);

                newRentalEndDateInput.min = minEndDate.toISOString().split('T')[0];
                if (new Date(newRentalEndDateInput.value) < minEndDate) {
                    newRentalEndDateInput.value = minEndDate.toISOString().split('T')[0];
                }
            });

            const closeModal = () => {
                rentAgainModal.classList.add('hidden');
            };

            if (rentAgainCloseBtn) {
                rentAgainCloseBtn.addEventListener('click', closeModal);
            }
            if (rentAgainCancelBtn) {
                rentAgainCancelBtn.addEventListener('click', closeModal);
            }

            if (rentAgainSaveBtn) {
                rentAgainSaveBtn.addEventListener('click', async () => {
                    const originalOrderId = originalOrderIdInput.value;
                    const newRentalStartDate = newRentalStartDateInput.value;
                    const newRentalEndDate = newRentalEndDateInput.value;

                    if (!originalOrderId || !newRentalStartDate || !newRentalEndDate) {
                        alert('Vui lòng cung cấp đầy đủ thông tin ngày thuê.');
                        return;
                    }

                    try {
                        const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]').value;
                        const accessToken = '@(Request.Cookies["AccessToken"])';

                        const headers = {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': antiForgeryToken
                        };

                        if (accessToken) {
                            headers['Authorization'] = `Bearer ${accessToken}`;
                        }

                        const response = await fetch('@Model.ApiBaseUrl/orders/rent-again', {
                            method: 'POST',
                            headers: headers,
                            body: JSON.stringify({
                                OriginalOrderId: originalOrderId,
                                NewRentalStartDate: newRentalStartDate,
                                NewRentalEndDate: newRentalEndDate
                            })
                        });

                        if (response.ok) {
                            const result = await response.json();
                            const newOrderId = result.data;
                            if (newOrderId) {
                                alert(result.message || 'Order successfully created for rent again! Redirecting to checkout page.');
                                closeModal();
                                // Redirect to checkout page with new order ID
                                window.location.href = `/CheckoutPage/Checkout?orderId=${newOrderId}`;
                            } else {
                                alert('Unable to get new order ID from API response. Please try again.');
                            }
                        } else {
                            const errorData = await response.json();
                            alert('Lỗi khi đặt hàng lại: ' + (errorData.message || 'Unknown error'));
                        }
                    } catch (error) {
                        console.error('Rent again error:', error);
                        alert('Đã xảy ra lỗi khi đặt hàng lại.');
                    }
                });
            }
        });
    </script>
}