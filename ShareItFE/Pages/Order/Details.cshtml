            // Contact Support Functions
            let selectedEvidenceFiles = [];
            
            // Handle contact support button click (order status only)
            function openContactSupportModal() {
                // Reset form and show modal
                document.getElementById('report-item-form').reset();
                selectedEvidenceFiles = [];
                document.getElementById('evidence-preview').innerHTML = '';
                updateEvidenceCounter();
                document.getElementById('report-item-modal').classList.remove('hidden');
            }
            
            document.getElementById('contact-support-order-status-btn')?.addEventListener('click', openContactSupportModal);
            
            // Handle product selection change
            document.querySelectorAll('input[name="selectedProduct"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    if (this.checked) {
                        document.getElementById('report-item-id').value = this.value;
                    }
                });
            });
            
            // Handle Add Images button click
            document.getElementById('add-evidence-btn').addEventListener('click', function() {
                if (selectedEvidenceFiles.length >= 5) {
                    alert('Maximum 5 images allowed');
                    return;
                }
                document.getElementById('report-item-evidence').click();
            });
            
            // Handle evidence file selection (single file at a time)
            document.getElementById('report-item-evidence').addEventListener('change', function(e) {
                const files = Array.from(e.target.files);
                
                files.forEach((file) => {
                    // Check if we already have 5 images
                    if (selectedEvidenceFiles.length >= 5) {
                        alert('Maximum 5 images allowed');
                        return;
                    }
                    
                    if (file.size > 5 * 1024 * 1024) {
                        alert(`File ${file.name} is too large. Maximum 5MB per image.`);
                        return;
                    }
                    
                    if (!file.type.startsWith('image/')) {
                        alert(`File ${file.name} is not an image.`);
                        return;
                    }
                    
                    selectedEvidenceFiles.push(file);
                    addEvidencePreview(file);
                    updateEvidenceCounter();
                });
                
                // Clear the input so the same file can be selected again if needed
                e.target.value = '';
            });
            
            // Function to add evidence preview
            function addEvidencePreview(file) {
                const preview = document.getElementById('evidence-preview');
                const index = selectedEvidenceFiles.length - 1;
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    const previewDiv = document.createElement('div');
                    previewDiv.style.cssText = 'position: relative; display: inline-block;';
                    previewDiv.innerHTML = `
                        <img src="${e.target.result}" style="width: 80px; height: 80px; object-fit: cover; border-radius: 4px; border: 1px solid #ddd;">
                        <button type="button" onclick="removeEvidenceFile(${index})" style="position: absolute; top: -5px; right: -5px; background: #dc2626; color: white; border: none; border-radius: 50%; width: 20px; height: 20px; font-size: 12px; cursor: pointer;">&times;</button>
                    `;
                    preview.appendChild(previewDiv);
                };
                reader.readAsDataURL(file);
            }
            
            // Function to update evidence counter
            function updateEvidenceCounter() {
                const counter = document.getElementById('evidence-count');
                const count = selectedEvidenceFiles.length;
                counter.textContent = `${count}/5 images`;
                
                // Update button state
                const addBtn = document.getElementById('add-evidence-btn');
                if (count >= 5) {
                    addBtn.disabled = true;
                    addBtn.innerHTML = '<i class="bi bi-check-circle"></i> Max Images';
                } else {
                    addBtn.disabled = false;
                    addBtn.innerHTML = '<i class="bi bi-plus-circle"></i> Add Images';
                }
            }
            
            window.removeEvidenceFile = function(index) {
                selectedEvidenceFiles.splice(index, 1);
                refreshEvidencePreview();
                updateEvidenceCounter();
            };
            
            // Function to refresh all evidence previews
            function refreshEvidencePreview() {
                const preview = document.getElementById('evidence-preview');
                preview.innerHTML = '';
                
                selectedEvidenceFiles.forEach((file, index) => {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const previewDiv = document.createElement('div');
                        previewDiv.style.cssText = 'position: relative; display: inline-block;';
                        previewDiv.innerHTML = `
                            <img src="${e.target.result}" style="width: 80px; height: 80px; object-fit: cover; border-radius: 4px; border: 1px solid #ddd;">
                            <button type="button" onclick="removeEvidenceFile(${index})" style="position: absolute; top: -5px; right: -5px; background: #dc2626; color: white; border: none; border-radius: 50%; width: 20px; height: 20px; font-size: 12px; cursor: pointer;">&times;</button>
                        `;
                        preview.appendChild(previewDiv);
                    };
                    reader.readAsDataURL(file);
                });
            }
            
            window.closeReportItemModal = function() {
                document.getElementById('report-item-modal').classList.add('hidden');
                document.getElementById('report-item-form').reset();
                selectedEvidenceFiles = [];
                document.getElementById('evidence-preview').innerHTML = '';
                document.getElementById('report-item-id').value = '';
                // Uncheck all radio buttons
                document.querySelectorAll('input[name="selectedProduct"]').forEach(radio => {
                    radio.checked = false;
                });
                updateEvidenceCounter();
            };
            
            window.submitItemReport = async function() {
                const itemId = document.getElementById('report-item-id').value;
                const subject = document.getElementById('report-item-subject').value;
                const description = document.getElementById('report-item-description').value;
                const priority = document.getElementById('report-item-priority').value;
                const orderId = document.getElementById('report-item-order-id').value;
                const providerId = document.getElementById('report-provider-id-item').value;
                
                // Validation
                if (!itemId) {
                    alert('Please select a product to report');
                    return;
                }
                
                if (!subject) {
                    alert('Please select an issue type');
                    return;
                }
                
                if (!description || description.trim().length < 5) {
                    alert('Please provide a detailed description (minimum 5 characters)');
                    return;
                }
                
                try {
                    // Show loading state
                    const submitBtn = document.querySelector('#report-item-modal .btn-danger');
                    const originalText = submitBtn.innerHTML;
                    submitBtn.disabled = true;
                    submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Uploading...';
                    
                    // First upload evidence images via API if any
                    let evidenceUrls = [];
                    if (selectedEvidenceFiles.length > 0) {
                        const formData = new FormData();
                        selectedEvidenceFiles.forEach(file => {
                            formData.append('files', file);
                        });
                        
                        try {
                            const accessToken = '@(Request.Cookies["AccessToken"])';
                            const uploadResponse = await fetch('@Model.ApiBaseUrl/evidence/upload', {
                                method: 'POST',
                                headers: {
                                    'Authorization': `Bearer ${accessToken}`
                                },
                                body: formData
                            });
                            
                            if (uploadResponse.ok) {
                                const uploadResult = await uploadResponse.json();
                                evidenceUrls = uploadResult.urls || [];
                            } else {
                                const errorData = await uploadResponse.json().catch(() => ({ message: 'Failed to upload images' }));
                                alert(errorData.message || 'Failed to upload evidence images. Continuing without images.');
                                evidenceUrls = [];
                            }
                        } catch (error) {
                            console.error('Error uploading evidence images:', error);
                            alert('Error uploading evidence images. Continuing without images.');
                            evidenceUrls = [];
                        }
                    }
                    
                    const accessToken = '@(Request.Cookies["AccessToken"])';
                    const headers = {
                        'Content-Type': 'application/json'
                    };
                    
                    if (accessToken) {
                        headers['Authorization'] = `Bearer ${accessToken}`;
                    }
                    
                    const reportData = {
                        reporteeId: providerId,
                        orderId: orderId,
                        orderItemId: itemId,
                        reportType: 'OrderItem',
                        subject: subject,
                        description: description.trim(),
                        priority: priority,
                        evidenceImages: evidenceUrls
                    };
                    
                    const response = await fetch('@Model.ApiBaseUrl/report', {
                        method: 'POST',
                        headers: headers,
                        body: JSON.stringify(reportData)
                    });
                    
                    if (response.ok) {
                        alert('Your product report has been submitted successfully. Our team will review it shortly.');
                        closeReportItemModal();
                    } else {
                        const errorData = await response.json().catch(() => ({ message: 'Failed to submit report' }));
                        alert(errorData.message || 'Failed to submit report. Please try again.');
                        // Reset button state
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = originalText;
                    }
                } catch (error) {
                    console.error('Error submitting item report:', error);
                    alert('An error occurred while submitting your report. Please try again.');
                    // Reset button state
                    const submitBtn = document.querySelector('#report-item-modal .btn-danger');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="bi bi-send"></i> Submit Report';
                }
            };
            
            // Close item modal when clicking outside
            document.getElementById('report-item-modal')?.addEventListener('click', function(e) {
                if (e.target === this) {
                    closeReportItemModal();
                }
            });
        });
