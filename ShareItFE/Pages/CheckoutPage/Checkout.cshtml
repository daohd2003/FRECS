@page
@model ShareItFE.Pages.CheckoutPage.CheckoutModel
@{
    ViewData["Title"] = "Checkout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/discount-code-modal.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/checkout-modal.css" asp-append-version="true" />
}

@if (!string.IsNullOrEmpty(Model.QrCodeUrl))
{
    <div id="qr-modal-container">
        <div class="modal-overlay" id="modal-overlay-close"></div>
        <div class="modal-content">
            <button class="modal-close-btn" id="modal-icon-close">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>

            <h2 class="modal-title text-2xl font-bold text-gray-900 mb-2">Scan QR code to pay</h2>
            <div class="marquee-container mb-4">
                <div class="marquee-content">
                    SEPay only supports payments via: Vietcombank, VPBank, VIB, VietinBank, MBBank, ACB, Sacombank, TPBank, Eximbank, HDBank, BIDV, Techcombank, MSB, Shinhan Bank, Agribank, Public Bank (PublicBank Vietnam) and other banks such as OCB, KienlongBank, ABBANK, LPBank, Bac A Bank, SeaBank, SHB, NCB, Woori Bank, VietABank, Vietbank, Nam A Bank, PGBank
                </div>
            </div>

            <div class="qr-code-container p-2 border border-gray-200 rounded-lg inline-block mb-4">
                <img src="@Model.QrCodeUrl" alt="Payment QR code" class="qr-code-image mx-auto" />
            </div>

            <p class="modal-amount text-xl font-bold">Total amount: <span class="text-purple-600">@Model.Total.ToString("N0") VND</span></p>
            <p class="text-sm text-gray-500 mt-4 max-w-sm mx-auto">After successful payment, the order status will be updated. You don't need to perform any additional actions.</p>
        </div>
    </div>
}

<div class="min-h-screen bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        @* Toast Messages *@
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div id="toast-success" class="toast-message bg-success text-white p-3 position-fixed top-0 end-0 m-3 rounded">
                @Model.SuccessMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div id="toast-error" class="toast-message bg-danger text-white p-3 position-fixed top-0 end-0 m-3 rounded">
                @Model.ErrorMessage
            </div>
        }

        @* Header *@
        <div class="flex items-center space-x-4 mb-8">
            <a asp-page="/CartPage/Cart" class="flex items-center space-x-2 text-gray-600 hover:text-purple-600 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5"><path d="M19 12H5" /><path d="M12 19l-7-7 7-7" /></svg>
                <span>Back to cart</span>
            </a>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            @* Checkout Form *@
            <div class="lg:col-span-2 space-y-6">
                <form method="post" asp-page-handler="Checkout" class="space-y-6" id="checkoutForm" onsubmit="return validateCheckoutForm(event);">
                    @Html.AntiForgeryToken()

                    @if (Model.OrderId.HasValue && Model.OrderId.Value != Guid.Empty)
                    {
                        <input type="hidden" asp-for="OrderId" />
                    }

                    @* Validation Summary *@
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4">
                            <div class="flex items-start">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                </svg>
                                <div>
                                    <h3 class="font-semibold">Please correct the following errors:</h3>
                                    <div asp-validation-summary="All" class="text-sm mt-2"></div>
                                </div>
                            </div>
                        </div>
                    }

                    @* Contact & Delivery Information (Combined) *@
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                            <i class="bi bi-person h-5 w-5 mr-2"></i>
                            Contact & Delivery Information
                        </h2>

                        <div class="mb-4">
                            <div class="flex items-center">
                                <input type="checkbox" id="useSameProfile" name="Input.UseSameProfile" value="true"
                                       checked="@(Model.Input.UseSameProfile)" 
                                       disabled="@(!Model.HasRequiredProfileInfo)"
                                       onchange="toggleInputMethod(this.checked);"
                                       class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded @(!Model.HasRequiredProfileInfo ? "opacity-50 cursor-not-allowed" : "")">
                                <label for="useSameProfile" class="ml-2 text-sm text-gray-700 @(!Model.HasRequiredProfileInfo ? "opacity-50" : "")">Use information from my profile</label>
                            </div>
                            @if (!Model.HasRequiredProfileInfo)
                            {
                                <p class="mt-2 text-sm text-red-600" style="display: flex; align-items: center;">
                                    <svg xmlns="http://www.w3.org/2000/svg" style="width: 16px; height: 16px; min-width: 16px; min-height: 16px; margin-right: 6px;" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                                    </svg>
                                    <span>Please update your phone number and address in your <a asp-page="/Profile" class="underline font-medium hover:text-red-700">profile</a> to use this feature.</span>
                                </p>
                            }
                        </div>

                        <div id="manualInputFields" style="display: @(Model.Input.UseSameProfile ? "none" : "block");">
                            <div class="grid grid-cols-1 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Full name</label>
                                    <input type="text" name="Input.CustomerFullName" value="@Model.Input.CustomerFullName"
                                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" @(Model.Input.UseSameProfile ? "disabled" : "") />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                                    <input type="email" name="Input.Email" value="@Model.Input.Email"
                                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" @(Model.Input.UseSameProfile ? "disabled" : "") />
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Phone number</label>
                                    <input type="tel" id="phoneNumberInput" name="Input.PhoneNumber" value="@Model.Input.PhoneNumber"
                                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" 
                                           @(Model.Input.UseSameProfile ? "disabled" : "") 
                                           data-validation-required="true" />
                                    <div class="validation-message text-red-600 text-sm mt-1" style="display: none;" data-valmsg-for="Input.PhoneNumber">Phone number is required</div>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Address</label>
                                    <input type="text" id="addressInput" name="Input.Address" value="@Model.Input.Address"
                                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent" 
                                           @(Model.Input.UseSameProfile ? "disabled" : "") 
                                           data-validation-required="true" />
                                    <div class="validation-message text-red-600 text-sm mt-1" style="display: none;" data-valmsg-for="Input.Address">Address is required</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Payment Method *@
                    <div class="bg-white rounded-lg shadow-sm p-6">
                        <h2 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                            <i class="bi bi-credit-card h-5 w-5 mr-2"></i>
                            Payment Method
                        </h2>
                        <div class="space-y-4">
                            <div class="flex space-x-4">
                                <label class="flex items-center p-3 border rounded-lg has-[:checked]:bg-purple-50 has-[:checked]:border-purple-500 transition-all cursor-pointer">
                                    <input type="radio" name="Input.PaymentMethod" value="qr"
                                           checked="@(Model.Input.PaymentMethod == "qr" || string.IsNullOrEmpty(Model.Input.PaymentMethod))"
                                           class="h-4 w-4 text-purple-600 focus:ring-purple-500" />
                                    <span class="ml-3">QR Code (Bank Transfer)</span>
                                </label>
                                <label class="flex items-center p-3 border rounded-lg has-[:checked]:bg-purple-50 has-[:checked]:border-purple-500 transition-all cursor-pointer">
                                    <input type="radio" name="Input.PaymentMethod" value="vnpay"
                                           checked="@(Model.Input.PaymentMethod == "vnpay")"
                                           class="h-4 w-4 text-purple-600 focus:ring-purple-500" />
                                    <span class="ml-3">VNPay</span>
                                </label>
                            </div>
                        </div>
                    </div>


                    <button type="submit"
                            id="checkoutButton"
                            class="w-full bg-purple-600 text-white py-4 px-6 rounded-lg font-semibold hover:bg-purple-700 transition-colors flex items-center justify-center space-x-2">
                        <i class="bi bi-lock-fill h-5 w-5"></i>
                        <span>Complete order - @Model.Total.ToString("N0") VND</span>
                    </button>
                </form>
            </div>

            @* Order Summary *@
            <div class="lg:col-span-1">
                <div class="bg-white rounded-lg shadow-sm p-6 sticky top-8">
                    <h2 class="text-xl font-bold text-gray-900 mb-6">Order Summary</h2>

                    <div class="space-y-8 mb-6">
                        @if (Model.Cart != null && Model.Cart.Items.Any())
                        {
                            @foreach (var item in Model.Cart.Items)
                            {
                                <div class="bg-gray-50 border border-gray-200 rounded-lg p-4">
                                    <div class="flex items-start space-x-3">
                                        <!-- Small product image on left -->
                                        <img src="@(item.PrimaryImageUrl ?? "/images/placeholder.jpg")"
                                             alt="@item.ProductName"
                                             class="w-16 h-16 object-cover rounded-lg flex-shrink-0"
                                             style="width: 40%; margin-top: 10px;" />

                                        <!-- Product information on right -->
                                        <div class="flex-1 text-sm text-gray-800" style="margin-left: 10px; margin-top: 10px;">
                                            <p class="font-semibold mb-1">@item.ProductName</p>
                                            <p class="mb-1">Size: <span class="font-medium">@item.ProductSize</span></p>
                                            <p class="mb-1">Quantity: <span class="font-medium">@item.Quantity</span></p>

                                            @* Show transaction type *@
                                            @if (item.TransactionType == BusinessObject.Enums.TransactionType.purchase)
                                            {
                                                <span class="mb-2">Type: Purchase</span>
                                            }
                                            else
                                            {
                                                <span class="mb-2">Type: Rental</span>
                                            }

                                            @* Only show rental period for rental items *@
                                            @if (item.TransactionType == BusinessObject.Enums.TransactionType.rental)
                                            {
                                                <p class="mb-2">Rental period: @item.RentalDays days</p>
                                            }

                                            <p class="text-purple-600 font-bold text-base">Amount: @item.TotalItemPrice.ToString("N0") VND</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>


                    <!-- Price summary -->
                    <div class="space-y-4 mb-6">
                        <div class="flex justify-between">
                            <span class="text-gray-600">Subtotal</span>
                            <span class="font-semibold">@Model.Subtotal.ToString("N0") VND</span>
                        </div>

                        <div class="flex justify-between">
                            <span class="text-gray-600">Shipping fee</span>
                            <span class="font-semibold">@(Model.DeliveryFee == 0 ? "FREE" : Model.DeliveryFee.ToString("N0") + " VND")</span>
                        </div>

                        <div class="flex justify-between">
                            <span class="text-gray-600">Discount</span>
                            <span class="font-semibold text-green-600" id="checkout-discount">
                                @if (Model.DiscountAmount > 0)
                                {
                                    <text>-@Model.DiscountAmount.ToString("N0") VND</text>
                                    @if (Model.SelectedDiscountCode != null)
                                    {
                                        <span class="text-xs text-gray-500 ml-2">(@Model.SelectedDiscountCode.Code)</span>
                                    }
                                }
                                else
                                {
                                    <text>0 VND</text>
                                }
                            </span>
                        </div>

                        @* Security Deposit for rental items *@
                        @if (Model.TotalDeposit > 0)
                        {
                            <div class="flex justify-between">
                                <span class="text-gray-600">Security Deposit <span class="text-xs text-gray-500">(refundable)</span></span>
                                <span class="font-semibold text-orange-600">@Model.TotalDeposit.ToString("N0") VND</span>
                            </div>
                        }

                        <div class="border-t pt-4">
                            <div class="flex justify-between text-lg font-bold">
                                <span>Total <span class="text-sm font-normal text-gray-500">(incl. deposit)</span></span>
                                <span class="text-purple-600" id="checkout-total">@Model.Total.ToString("N0") VND</span>
                            </div>
                        </div>
                    </div>

                    <!-- Commitments -->
                    <div class="space-y-3 text-sm text-gray-600">
                        <div class="flex items-center space-x-3">
                            <i class="bi bi-shield-check text-green-500 text-sm"></i>
                            <span> Secure payment (SSL protected)</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i class="bi bi-arrow-clockwise text-blue-500 text-sm"></i>
                            <span> Money back guarantee</span>
                        </div>
                        <div class="flex items-center space-x-3">
                            <i class="bi bi-headset text-purple-500 text-sm"></i>
                            <span> Support service 24/7</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Global validation function called from form onsubmit
        function validateCheckoutForm(event) {
            console.log('🔍 validateCheckoutForm called');
            
            const useSameProfileCheckbox = document.getElementById('useSameProfile');
            const phoneNumberInput = document.getElementById('phoneNumberInput');
            const addressInput = document.getElementById('addressInput');
            const phoneValidationMsg = document.querySelector('[data-valmsg-for="Input.PhoneNumber"]');
            const addressValidationMsg = document.querySelector('[data-valmsg-for="Input.Address"]');
            
            console.log('Elements:', {
                useSameProfile: useSameProfileCheckbox?.checked,
                phoneInput: phoneNumberInput,
                phoneDisabled: phoneNumberInput?.disabled,
                phoneValue: phoneNumberInput?.value,
                addressInput: addressInput,
                addressDisabled: addressInput?.disabled,
                addressValue: addressInput?.value
            });
            
            // Only validate if NOT using profile info
            if (!useSameProfileCheckbox || !useSameProfileCheckbox.checked) {
                let isValid = true;
                
                console.log('📝 Validating manual inputs...');
                
                // Validate Phone Number
                if (phoneNumberInput && !phoneNumberInput.disabled) {
                    if (!phoneNumberInput.value || phoneNumberInput.value.trim() === '') {
                        console.log('❌ Phone number is EMPTY');
                        if (phoneValidationMsg) {
                            phoneValidationMsg.style.display = 'block';
                            console.log('✓ Phone validation message displayed');
                        }
                        phoneNumberInput.style.borderColor = '#ef4444';
                        phoneNumberInput.style.borderWidth = '2px';
                        isValid = false;
                    } else {
                        console.log('✅ Phone number is valid:', phoneNumberInput.value);
                        if (phoneValidationMsg) {
                            phoneValidationMsg.style.display = 'none';
                        }
                    }
                }
                
                // Validate Address
                if (addressInput && !addressInput.disabled) {
                    if (!addressInput.value || addressInput.value.trim() === '') {
                        console.log('❌ Address is EMPTY');
                        if (addressValidationMsg) {
                            addressValidationMsg.style.display = 'block';
                            console.log('✓ Address validation message displayed');
                        }
                        addressInput.style.borderColor = '#ef4444';
                        addressInput.style.borderWidth = '2px';
                        isValid = false;
                    } else {
                        console.log('✅ Address is valid:', addressInput.value);
                        if (addressValidationMsg) {
                            addressValidationMsg.style.display = 'none';
                        }
                    }
                }
                
                if (!isValid) {
                    console.log('🛑 VALIDATION FAILED - Blocking form submission');
                    if (event) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    
                    // Scroll to first error
                    setTimeout(() => {
                        const firstError = document.querySelector('[data-valmsg-for][style*="display: block"]');
                        if (firstError) {
                            firstError.parentElement?.scrollIntoView({ behavior: 'smooth', block: 'center' });
                        }
                    }, 100);
                    
                    return false; // Return false to prevent form submission
                } else {
                    console.log('✅ VALIDATION PASSED - Form will submit');
                }
            } else {
                console.log('ℹ️ Using profile info - Skipping validation');
            }
            
            return true; // Allow form submission
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            // --- 1. Logic cho Toast Messages ---
            const toastSuccess = document.getElementById('toast-success');
            if (toastSuccess) {
                setTimeout(() => { toastSuccess.style.display = 'none'; }, 4000);
            }

            const toastError = document.getElementById('toast-error');
            if (toastError) {
                setTimeout(() => { toastError.style.display = 'none'; }, 4000);
            }

            // --- 2. Logic cho Checkbox "Sử dụng thông tin hồ sơ của tôi" ---
            const useSameProfileCheckbox = document.getElementById('useSameProfile');
            const manualInputFields = document.getElementById('manualInputFields');

            // Hàm này sẽ điều khiển việc hiển thị/vô hiệu hóa các trường nhập liệu thủ công
            function toggleInputMethod(isChecked) {
                const inputs = manualInputFields.querySelectorAll('input, select');
                const phoneValidationMsg = document.querySelector('[data-valmsg-for="Input.PhoneNumber"]');
                const addressValidationMsg = document.querySelector('[data-valmsg-for="Input.Address"]');
                const phoneNumberInput = document.getElementById('phoneNumberInput');
                const addressInput = document.getElementById('addressInput');

                if (isChecked) {
                    manualInputFields.style.display = 'none';
                    inputs.forEach(input => {
                        input.setAttribute('disabled', 'disabled');
                    });
                    // Clear validation messages when using profile
                    if (phoneValidationMsg) phoneValidationMsg.style.display = 'none';
                    if (addressValidationMsg) addressValidationMsg.style.display = 'none';
                    if (phoneNumberInput) {
                        phoneNumberInput.style.borderColor = '';
                        phoneNumberInput.style.borderWidth = '';
                    }
                    if (addressInput) {
                        addressInput.style.borderColor = '';
                        addressInput.style.borderWidth = '';
                    }
                } else {
                    manualInputFields.style.display = 'block';
                    inputs.forEach(input => {
                        input.removeAttribute('disabled');
                    });
                }
            }

            if (useSameProfileCheckbox) {
                useSameProfileCheckbox.addEventListener('change', () => toggleInputMethod(useSameProfileCheckbox.checked));
                // Khởi tạo trạng thái ban đầu khi trang tải dựa trên giá trị Razor Model
                toggleInputMethod(useSameProfileCheckbox.checked);
            }
            
            // Add input event listeners to clear validation messages
            const phoneNumberInput = document.getElementById('phoneNumberInput');
            const addressInput = document.getElementById('addressInput');
            const phoneValidationMsg = document.querySelector('[data-valmsg-for="Input.PhoneNumber"]');
            const addressValidationMsg = document.querySelector('[data-valmsg-for="Input.Address"]');
            
            if (phoneNumberInput && phoneValidationMsg) {
                phoneNumberInput.addEventListener('input', function() {
                    if (this.value && this.value.trim()) {
                        phoneValidationMsg.style.display = 'none';
                        this.style.borderColor = '';
                        this.style.borderWidth = '';
                    }
                });
            }
            
            if (addressInput && addressValidationMsg) {
                addressInput.addEventListener('input', function() {
                    if (this.value && this.value.trim()) {
                        addressValidationMsg.style.display = 'none';
                        this.style.borderColor = '';
                        this.style.borderWidth = '';
                    }
                });
            }

            // --- 3. Logic cho Modal QR Code ---
            const qrModalContainer = document.getElementById('qr-modal-container');
            const transactionId = "@TempData["TransactionId"]"; // Lấy transactionId từ TempData Razor Pages
            const successMessage = "@Model.SuccessMessage"; // Check if there's a success message from POST

            if (qrModalContainer) { // Chỉ chạy logic modal nếu modal HTML tồn tại trên trang
                const closeBtnIcon = document.getElementById('modal-icon-close');
                const closeBtnOverlay = document.getElementById('modal-overlay-close');

                const openQrModal = () => qrModalContainer.classList.add('open');
                const closeQrModal = async () => {
                    qrModalContainer.classList.remove('open');
                    
                    try {
                        const accessToken = '@(Request.Cookies["AccessToken"])';
                        const headers = {
                            'Content-Type': 'application/json'
                        };
                        
                        if (accessToken) {
                            headers['Authorization'] = `Bearer ${accessToken}`;
                        }
                        
                        // Clear cart first
                        await fetch('@Model.ApiBaseUrl/cart/clear', {
                            method: 'DELETE',
                            headers: headers
                        });
                        
                        // Clear checkout session/TempData and send notification
                        const clearSessionUrl = transactionId && transactionId.trim() !== '' 
                            ? `/CheckoutPage/Checkout?handler=ClearSession&transactionId=${transactionId}`
                            : '/CheckoutPage/Checkout?handler=ClearSession';
                        
                        await fetch(clearSessionUrl, {
                            method: 'POST',
                            headers: {
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                            }
                        });
                        
                        // Wait a moment for notification to be created and broadcasted
                        await new Promise(resolve => setTimeout(resolve, 1000));
                        
                    } catch (e) {
                        console.log('Error during cleanup:', e);
                    }
                    
                    // Reload notifications after closing QR modal (after notification has been created)
                    try {
                        if (window.loadNotifications) {
                            const notificationMenu = document.querySelector('.notification-menu');
                            const userId = notificationMenu ? notificationMenu.dataset.userid : null;
                            if (userId) {
                                await window.loadNotifications(userId);
                            }
                        }
                    } catch (e) {
                        console.log('Error reloading notifications:', e);
                    }
                    
                    // Redirect to order history after closing QR modal
                    // PendingCartOrderIds is now stored in Session, so it won't be lost on redirect
                    setTimeout(() => {
                        window.location.href = "@(Url.Content(Model.frontendBaseUrl))" + "/Profile?tab=orders&page=1";
                    }, 500);
                };

                closeBtnIcon.addEventListener('click', closeQrModal);
                closeBtnOverlay.addEventListener('click', closeQrModal);

                // CHỈ tự động mở modal khi vừa tạo QR code (có transactionId và successMessage)
                if (transactionId && transactionId.trim() !== '' && successMessage && successMessage.includes('QR')) {
                    setTimeout(openQrModal, 100);
                }

                // Nếu có transactionId, bắt đầu kiểm tra trạng thái thanh toán định kỳ
                if (transactionId) {
                    let checkStatusInterval = setInterval(async () => { // Changed to 'let' to allow reassigning
                        try {
                            const response = await fetch(`@Model.ApiBaseUrl/transactions/${transactionId}/status`, {
                                credentials: "include" // Giữ nguyên nếu cần gửi cookie/token
                            });

                            if (!response.ok) {
                                console.error(`Error checking transaction status: ${response.status} - ${response.statusText}`);
                                clearInterval(checkStatusInterval);
                                alert('An error occurred while checking transaction status.');
                                return;
                            }

                            const apiResponse = await response.json();
                            const status = apiResponse.data?.status; // Đảm bảo truy cập an toàn

                            if (status === "completed") {
                                clearInterval(checkStatusInterval);
                                
                                // Clear pending cart order IDs from session since payment is successful
                                try {
                                    await fetch('/CheckoutPage/Checkout?handler=ClearPendingCartOrders', {
                                        method: 'POST',
                                        headers: {
                                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                                        }
                                    });
                                } catch (e) {
                                    console.log('Could not clear pending cart orders:', e);
                                }
                                
                                alert("Payment successful!");
                                // Chuyển hướng đến trang lịch sử đơn hàng sau khi thanh toán thành công
                                window.location.href = "@(Url.Content(Model.frontendBaseUrl))" + "/Profile?tab=orders&page=1";
                            } else {
                                console.log(`Transaction ${transactionId} status: ${status}. Checking again...`);
                            }
                        } catch (error) {
                            console.error('Failed to fetch transaction status:', error);
                            clearInterval(checkStatusInterval);
                            alert('An error occurred while checking transaction status.');
                        }
                    }, 3000); // Kiểm tra mỗi 3 giây

                    // Note: Interval will be stopped automatically when page redirects after modal close
                }
            }

        });
    </script>
}