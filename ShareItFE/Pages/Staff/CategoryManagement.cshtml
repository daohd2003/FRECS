@page
@model ShareItFE.Pages.Staff.CategoryManagementModel
@{
    ViewData["Title"] = "Category Management";
    Layout = Model.CurrentUserRole == "admin" ? "_AdminLayout" : "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/category-management.css" asp-append-version="true" />
}

<div class="category-management-container">
    <!-- Header Section -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-text">
                <h1 class="page-title">Category Management</h1>
                <p class="page-description">Manage product categories and their settings</p>
            </div>
            @if (Model.CurrentUserRole == "admin" || Model.CurrentUserRole == "staff")
            {
                <button id="addCategoryBtn" class="add-category-btn">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="5" x2="12" y2="19"></line>
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                    </svg>
                    <span>Add New Category</span>
                </button>
            }
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon stat-icon-blue">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Total Categories</p>
                <p class="stat-value" id="totalCategories">@Model.TotalCategories</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon stat-icon-green">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22,4 12,14.01 9,11.01"></polyline>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Active Categories</p>
                <p class="stat-value" id="activeCategories">@Model.ActiveCategories</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon stat-icon-red">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="15" y1="9" x2="9" y2="15"></line>
                    <line x1="9" y1="9" x2="15" y2="15"></line>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Inactive Categories</p>
                <p class="stat-value" id="inactiveCategories">@Model.InactiveCategories</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon stat-icon-purple">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Total Products</p>
                <p class="stat-value" id="totalProducts">@Model.TotalProducts</p>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="search-filter-container">
        <div class="search-section">
            <div class="search-input-group">
                <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="M21 21l-4.35-4.35"></path>
                </svg>
                <input type="text" id="searchInput" placeholder="Search categories by name or description..." class="search-input">
            </div>
        </div>
        <div class="filter-section">
            <select id="statusFilter" class="filter-select">
                <option value="all">All Status</option>
                <option value="active">Active Only</option>
                <option value="inactive">Inactive Only</option>
            </select>
            <select id="sortFilter" class="filter-select">
                <option value="name-asc">Name (A-Z)</option>
                <option value="name-desc">Name (Z-A)</option>
                <option value="createdAt-desc">Newest First</option>
                <option value="createdAt-asc">Oldest First</option>
                <option value="updatedAt-desc">Recently Updated</option>
            </select>
        </div>
    </div>

    <!-- Categories Table -->
    <div class="table-container">
        <div class="table-wrapper">
            <table class="categories-table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Category</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th>Products</th>
                        <th>Created At</th>
                        <th>Updated At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="categoriesTableBody">
                    @foreach (var category in Model.Categories)
                    {
                        <tr data-category-id="@category.Id" data-is-active="@category.IsActive.ToString().ToLower()">
                            <td>
                                <div class="category-image-cell">
                                    @if (!string.IsNullOrEmpty(category.ImageUrl))
                                    {
                                        <img src="@category.ImageUrl" alt="@category.Name" class="category-thumbnail" />
                                    }
                                    else
                                    {
                                        <div class="category-thumbnail no-image">
                                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                                <polyline points="21,15 16,10 5,21"></polyline>
                                            </svg>
                                        </div>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="category-info">
                                    <div class="category-indicator @(category.IsActive ? "active" : "inactive")"></div>
                                    <div class="category-details">
                                        <div class="category-name">@category.Name</div>
                                        <div class="category-id">ID: @category.Id.ToString("N")[..8]</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="category-description" 
                                     @if (!string.IsNullOrEmpty(category.Description) && category.Description.Length > 50)
                                     {
                                         <text>title="@category.Description"</text>
                                     }>
                                    @if (!string.IsNullOrEmpty(category.Description))
                                    {
                                        <span>@(category.Description.Length > 50 ? category.Description.Substring(0, 50) + "..." : category.Description)</span>
                                    }
                                    else
                                    {
                                        <span class="no-description">No description</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="status-toggle-wrapper">
                                    <label class="toggle-switch" data-category-id="@category.Id" data-is-active="@category.IsActive.ToString().ToLower()">
                                        <input type="checkbox" class="toggle-input" @(category.IsActive ? "checked" : "") />
                                        <span class="toggle-slider"></span>
                                    </label>
                                    <span class="status-label @(category.IsActive ? "active" : "inactive")">
                                        @(category.IsActive ? "Active" : "Inactive")
                                    </span>
                                </div>
                            </td>
                            <td>
                                <div class="product-count">
                                    <svg class="package-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                                    </svg>
                                    <span>@(category.Products?.Count ?? 0) products</span>
                                </div>
                            </td>
                            <td>
                                <div class="date-info">
                                    <svg class="calendar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                        <line x1="16" y1="2" x2="16" y2="6"></line>
                                        <line x1="8" y1="2" x2="8" y2="6"></line>
                                        <line x1="3" y1="10" x2="21" y2="10"></line>
                                    </svg>
                                    <span>@category.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                                </div>
                            </td>
                            <td>
                                <div class="date-info">
                                    @if (category.UpdatedAt.HasValue)
                                    {
                                        <svg class="calendar-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                                            <line x1="16" y1="2" x2="16" y2="6"></line>
                                            <line x1="8" y1="2" x2="8" y2="6"></line>
                                            <line x1="3" y1="10" x2="21" y2="10"></line>
                                        </svg>
                                        <span>@category.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                                    }
                                    else
                                    {
                                        <span class="never-updated">Never updated</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="action-btn edit-btn" data-category-id="@category.Id" title="Edit Category">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                        </svg>
                                    </button>
                                    <button class="action-btn delete-btn" 
                                            data-category-id="@category.Id" 
                                            data-has-products="@((category.Products?.Count ?? 0) > 0 ? "true" : "false")"
                                            title="@((category.Products?.Count ?? 0) > 0 ? $"Cannot delete - contains {category.Products.Count} product(s)" : "Delete Category")" 
                                            @((category.Products?.Count ?? 0) > 0 ? "disabled" : "")>
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="3,6 5,6 21,6"></polyline>
                                            <path d="M19,6v14a2,2,0,0,1-2,2H7a2,2,0,0,1-2-2V6m3,0V4a2,2,0,0,1,2-2h4a2,2,0,0,1,2,2V6"></path>
                                        </svg>
                                    </button>
                                    <button class="action-btn view-btn" data-category-id="@category.Id" title="View Products">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                            <circle cx="12" cy="12" r="3"></circle>
                                        </svg>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        <!-- Empty State -->
        <div id="emptyState" class="empty-state" style="display: none;">
            <svg class="empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
            <h3 class="empty-title">No categories found</h3>
            <p class="empty-description">Try adjusting your search or filter criteria.</p>
        </div>
    </div>
</div>

<!-- Add/Edit Category Modal -->
<div id="categoryModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <div class="modal-title-section">
                <div class="modal-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                </div>
                <div>
                    <h3 id="modalTitle">Add New Category</h3>
                    <p id="modalSubtitle">Create a new product category for your rental platform</p>
                </div>
            </div>
            <button class="modal-close" id="closeCategoryModal">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <form id="categoryForm" class="modal-form">
            <input type="hidden" id="categoryId" name="categoryId" />
            <input type="hidden" id="modalMode" name="modalMode" value="add" />
            
            <div class="form-group">
                <label for="categoryName" class="form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                    Category Name <span class="required">*</span>
                </label>
                <input type="text" id="categoryName" name="categoryName" class="form-input" placeholder="Enter category name (e.g., Evening Wear, Wedding Dresses)" required maxlength="150">
                <div class="char-counter">
                    <span id="nameCharCount">0</span>/150 characters
                </div>
            </div>
            
            <div class="form-group">
                <label for="categoryDescription" class="form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                        <polyline points="14,2 14,8 20,8"></polyline>
                        <line x1="16" y1="13" x2="8" y2="13"></line>
                        <line x1="16" y1="17" x2="8" y2="17"></line>
                        <polyline points="10,9 9,9 8,9"></polyline>
                    </svg>
                    Description
                </label>
                <textarea id="categoryDescription" name="categoryDescription" class="form-textarea" placeholder="Enter a brief description of this category" rows="4" maxlength="255" required></textarea>
                <div class="char-counter">
                    <span id="descCharCount">0</span>/255 characters
                </div>
            </div>
            
            <div class="form-group">
                <label class="form-label">
                    <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                    Category Image
                </label>
                <div class="image-upload-section">
                    <div class="image-preview-container">
                        <div id="imagePreview" class="image-preview">
                            <svg class="preview-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                <polyline points="21,15 16,10 5,21"></polyline>
                            </svg>
                            <p class="preview-text">No image selected</p>
                        </div>
                    </div>
                    <div class="upload-options">
                        <div class="upload-input-group">
                            <input type="file" id="categoryImage" name="categoryImage" class="file-input" accept="image/*">
                            <label for="categoryImage" class="file-label">
                                <svg class="upload-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                                    <polyline points="7,10 12,15 17,10"></polyline>
                                    <line x1="12" y1="15" x2="12" y2="3"></line>
                                </svg>
                                <span>Choose Image</span>
                            </label>
                        </div>
                        <div class="upload-info">
                            <p>Supported formats: JPG, PNG, GIF, WEBP (Max 5MB)</p>
                            <p class="text-muted">Image will be uploaded when you save the category</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-group">
                <div class="status-section">
                    <div class="status-info">
                        <div class="status-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                <polyline points="22,4 12,14.01 9,11.01"></polyline>
                            </svg>
                        </div>
                        <div class="status-text">
                            <h4>Category Status</h4>
                            <p id="statusDescription">Category is active and visible to customers</p>
                        </div>
                    </div>
                    <button type="button" id="statusToggle" class="status-toggle-btn active">
                        <svg class="toggle-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="20,6 9,17 4,12"></polyline>
                        </svg>
                        <span>Active</span>
                    </button>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="button" class="btn btn-secondary" id="cancelCategory">Cancel</button>
                <button type="submit" class="btn btn-primary" id="saveCategory">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                        <polyline points="17,21 17,13 7,13 7,21"></polyline>
                        <polyline points="7,3 7,8 15,8"></polyline>
                    </svg>
                    <span id="saveButtonText">Create Category</span>
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Confirmation Modal -->
<div id="confirmModal" class="modal" style="display: none;">
    <div class="modal-content modal-small">
        <div class="modal-header">
            <div class="modal-title-section">
                <div class="modal-icon warning">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                        <line x1="12" y1="9" x2="12" y2="13"></line>
                        <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                </div>
                <div>
                    <h3 id="confirmTitle">Delete Category</h3>
                    <p id="confirmMessage">Are you sure you want to delete this category?</p>
                </div>
            </div>
        </div>
        <div class="modal-actions">
            <button type="button" class="btn btn-secondary" id="cancelConfirm">Cancel</button>
            <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
        </div>
    </div>
</div>

<!-- View Products Modal -->
<div id="productsModal" class="modal products-modal" style="display: none;">
    <div class="modal-content modal-large">
        <div class="modal-header">
            <div class="modal-title-section">
                <div class="modal-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                    </svg>
                </div>
                <div>
                    <h3 id="productsModalTitle">Products in Category</h3>
                    <p id="productsModalSubtitle">View all products in this category</p>
                </div>
            </div>
            <button class="modal-close" id="closeProductsModal">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        
        <!-- Products Modal Body -->
        <div class="modal-body">
            <!-- Search and Filter -->
            <div class="products-controls">
                <div class="products-search">
                    <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="M21 21l-4.35-4.35"></path>
                    </svg>
                    <input type="text" id="productSearchInput" placeholder="Search products by name..." class="products-search-input">
                </div>
                <div class="products-filters">
                    <select id="productSortFilter" class="products-filter-select">
                        <option value="name-asc">Name (A-Z)</option>
                        <option value="name-desc">Name (Z-A)</option>
                        <option value="price-asc">Price (Low to High)</option>
                        <option value="price-desc">Price (High to Low)</option>
                        <option value="rating-desc">Rating (High to Low)</option>
                        <option value="newest">Newest First</option>
                    </select>
                    <select id="productTypeFilter" class="products-filter-select">
                        <option value="all">All Types</option>
                        <option value="RENTAL">Rental Only</option>
                        <option value="PURCHASE">Purchase Only</option>
                        <option value="BOTH">Both</option>
                    </select>
                </div>
            </div>
            
            <!-- Products Stats -->
            <div class="products-stats">
                <div class="stat-item">
                    <span class="stat-label">Total Products:</span>
                    <span class="stat-value" id="modalTotalProducts">0</span>
                </div>
                <div class="stat-item">
                    <span class="stat-label">Showing:</span>
                    <span class="stat-value" id="modalShowingProducts">0</span>
                </div>
            </div>
            
            <!-- Products Table -->
            <div class="products-table-container">
                <table class="products-table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Product Name</th>
                            <th>Provider</th>
                            <th>Type</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Rating</th>
                            <th>Stats</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="productsTableBody">
                        <!-- Products will be inserted here -->
                    </tbody>
                </table>
                
                <!-- Empty State -->
                <div id="productsEmptyState" class="products-empty-state" style="display: none;">
                    <svg class="empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="M21 21l-4.35-4.35"></path>
                    </svg>
                    <h4>No Products Found</h4>
                    <p>There are no products in this category yet.</p>
                </div>
                
                <!-- Loading State -->
                <div id="productsLoadingState" class="products-loading-state" style="display: none;">
                    <div class="loading-spinner"></div>
                    <p>Loading products...</p>
                </div>
            </div>
            
            <!-- Pagination -->
            <div class="products-pagination" id="productsPagination" style="display: none;">
                <div class="pagination-info">
                    <span>Showing <span id="paginationStart">1</span> to <span id="paginationEnd">10</span> of <span id="paginationTotal">0</span> products</span>
                </div>
                <div class="pagination-controls">
                    <button class="pagination-btn" id="productsPrevBtn" disabled>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="15 18 9 12 15 6"></polyline>
                        </svg>
                        Previous
                    </button>
                    <div class="pagination-numbers" id="paginationNumbers">
                        <!-- Page numbers will be inserted here -->
                    </div>
                    <button class="pagination-btn" id="productsNextBtn">
                        Next
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <polyline points="9 18 15 12 9 6"></polyline>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/category-management.js" asp-append-version="true"></script>
