@page
@model ShareItFE.Pages.Staff.ProviderApplicationManagementModel
@{
    ViewData["Title"] = "Provider Application Management";
    Layout = Model.CurrentUserRole == "admin" ? "_AdminLayout" : "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/provider-application-management.css" asp-append-version="true" />
}

<div class="provider-application-container">
    <!-- Header Section -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-text">
                <h1 class="page-title">Provider Application Management</h1>
                <p class="page-description">Review and approve provider registration applications</p>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon stat-icon-yellow">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Pending Review</p>
                <p class="stat-value" id="pendingCount">0</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon stat-icon-green">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                    <polyline points="22 4 12 14.01 9 11.01"></polyline>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Approved Today</p>
                <p class="stat-value" id="approvedToday">0</p>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon stat-icon-red">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="15" y1="9" x2="9" y2="15"></line>
                    <line x1="9" y1="9" x2="15" y2="15"></line>
                </svg>
            </div>
            <div class="stat-content">
                <p class="stat-label">Rejected Today</p>
                <p class="stat-value" id="rejectedToday">0</p>
            </div>
        </div>
    </div>

    <!-- Search and Filter Section -->
    <div class="search-filter-container">
        <div class="search-section">
            <div class="search-input-group">
                <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="M21 21l-4.35-4.35"></path>
                </svg>
                <input type="text" id="searchInput" placeholder="Search by business name, applicant, tax ID..." class="search-input">
            </div>
        </div>
        <div class="filter-section">
            <select id="statusFilter" class="filter-select">
                <option value="all" selected>All Status</option>
                <option value="pending">Pending Only</option>
                <option value="approved">Approved</option>
                <option value="rejected">Rejected</option>
            </select>
            <select id="providerTypeFilter" class="filter-select">
                <option value="all" selected>All Types</option>
                <option value="individual">Individuals</option>
                <option value="business">Businesses</option>
                <option value="unknown">Unknown</option>
            </select>
            <select id="sortFilter" class="filter-select">
                <option value="created-desc">Newest First</option>
                <option value="created-asc">Oldest First</option>
                <option value="name-asc">Business Name (A-Z)</option>
                <option value="name-desc">Business Name (Z-A)</option>
            </select>
        </div>
    </div>

    <!-- Applications Table -->
    <div class="table-container">
        <div class="table-info">
            <span>Showing <span id="showingCount">0</span> applications</span>
        </div>
        <div class="table-wrapper">
            <table class="applications-table">
                <thead>
                    <tr>
                        <th>Business Name</th>
                        <th>Applicant</th>
                        <th>Tax ID</th>
                        <th>Provider Type</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="applicationsTableBody">
                    <!-- Applications will be loaded here via JavaScript -->
                </tbody>
            </table>
        </div>

        <!-- Empty State -->
        <div id="emptyState" class="empty-state" style="display: none;">
            <svg class="empty-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            <h3 class="empty-title">No applications found</h3>
            <p class="empty-description">Try adjusting your search or filter criteria.</p>
        </div>

        <!-- Loading State -->
        <div id="loadingState" class="loading-state" style="display: none;">
            <div class="loading-spinner"></div>
            <p>Loading applications...</p>
        </div>

        <!-- Pagination -->
        <div class="pagination-container" id="paginationContainer" style="display: none;">
            <div class="pagination-info">
                <span>Showing <span id="paginationStart">1</span> to <span id="paginationEnd">10</span> of <span id="paginationTotal">0</span> applications</span>
            </div>
            <div class="pagination-controls">
                <button class="pagination-btn" id="prevPageBtn" disabled>
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="15 18 9 12 15 6"></polyline>
                    </svg>
                    Previous
                </button>
                <div class="pagination-numbers" id="paginationNumbers">
                    <!-- Page numbers will be inserted here -->
                </div>
                <button class="pagination-btn" id="nextPageBtn">
                    Next
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Approve Confirmation Modal -->
<div id="approveModal" class="modal" style="display: none;">
    <div class="modal-content modal-small">
        <div class="modal-header">
            <div class="modal-title-section">
                <div class="modal-icon success">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                        <polyline points="22 4 12 14.01 9 11.01"></polyline>
                    </svg>
                </div>
                <div>
                    <h3>Confirm Approval</h3>
                    <p id="approveMessage">Are you sure you want to approve this application?</p>
                </div>
            </div>
            <button class="modal-close" onclick="closeApproveModal()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="modal-actions">
            <button type="button" class="btn btn-secondary" onclick="closeApproveModal()">Cancel</button>
            <button type="button" class="btn btn-success" id="confirmApproveBtn">Approve</button>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div id="rejectModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <div class="modal-title-section">
                <div class="modal-icon danger">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                        <line x1="15" y1="9" x2="9" y2="15"></line>
                        <line x1="9" y1="9" x2="15" y2="15"></line>
                    </svg>
                </div>
                <div>
                    <h3>Reject Application</h3>
                </div>
            </div>
            <button class="modal-close" onclick="closeRejectModal()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="modal-body">
            <div class="info-section">
                <h4>Application Information</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Business:</span>
                        <span class="info-value" id="rejectBusinessName"></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Applicant:</span>
                        <span class="info-value" id="rejectApplicantName"></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Email:</span>
                        <span class="info-value" id="rejectApplicantEmail"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="rejectionReason" class="form-label">
                    Rejection Reason <span class="required">*</span>
                </label>
                <textarea id="rejectionReason"
                          class="form-textarea"
                          rows="5"
                          placeholder="Please enter the reason for rejecting this application..."
                          required></textarea>
                <div class="form-hint">This reason will be sent to the applicant via email.</div>
            </div>

            <div class="alert alert-warning">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"></path>
                    <line x1="12" y1="9" x2="12" y2="13"></line>
                    <line x1="12" y1="17" x2="12.01" y2="17"></line>
                </svg>
                <div>
                    <strong>Important Note:</strong>
                    <p>After rejection, the application cannot be approved again. The applicant will need to create a new application if they wish to reapply.</p>
                </div>
            </div>
        </div>
        <div class="modal-actions">
            <button type="button" class="btn btn-secondary" onclick="closeRejectModal()">Cancel</button>
            <button type="button" class="btn btn-danger" id="confirmRejectBtn">Reject Application</button>
        </div>
    </div>
</div>

<!-- Detail Modal to View ID Card Images -->
<div id="detailModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <div class="modal-title-section">
                <div>
                    <h3>Application Details</h3>
                    <p id="detailBusinessName" style="font-size: 0.9em; color: #666;"></p>
                </div>
            </div>
            <button class="modal-close" onclick="closeDetailModal()">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="modal-body">
            <div class="info-section">
                <h4>Applicant Information</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Full Name:</span>
                        <span class="info-value" id="detailApplicantName"></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Email:</span>
                        <span class="info-value" id="detailApplicantEmail"></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Tax ID / Personal ID:</span>
                        <span class="info-value" id="detailTaxId"></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Contact Phone:</span>
                        <span class="info-value" id="detailContactPhone"></span>
                    </div>
                </div>
            </div>

            <div class="info-section">
                <h4>Business Information</h4>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Business Name:</span>
                        <span class="info-value" id="detailBusinessNameFull"></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Notes:</span>
                        <span class="info-value" id="detailNotes"></span>
                    </div>
                </div>
            </div>

            <!-- ID Card Images for Individual Verification -->
            <div id="idCardSection" class="info-section" style="display: none;">
                <h4>ID Card Verification</h4>
                <p class="text-muted small mb-3">Applicant uploaded ID card images for verification.</p>
                <div class="id-card-images" style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-top: 15px;">
                    <div>
                        <label style="font-weight: 600; display: block; margin-bottom: 10px;">Front Side</label>
                        <img id="idCardFrontImage" src="" alt="ID Card Front" style="width: 100%; border: 1px solid #ddd; border-radius: 4px; cursor: pointer; max-height: 300px; object-fit: cover;" onclick="enlargeImage(this)">
                    </div>
                    <div>
                        <label style="font-weight: 600; display: block; margin-bottom: 10px;">Back Side</label>
                        <img id="idCardBackImage" src="" alt="ID Card Back" style="width: 100%; border: 1px solid #ddd; border-radius: 4px; cursor: pointer; max-height: 300px; object-fit: cover;" onclick="enlargeImage(this)">
                    </div>
                </div>
            </div>

            <!-- Selfie Image (Individual Only) -->
            <div id="selfieSection" class="info-section" style="display: none;">
                <h4>Selfie Image (Face Verification)</h4>
                <p class="text-muted small mb-3">Selfie for face matching with ID card.</p>
                <div style="display: flex; gap: 15px; align-items: start;">
                    <img id="selfieImage" src="" alt="Selfie" style="max-width: 300px; border: 1px solid #ddd; border-radius: 8px; cursor: pointer;" onclick="enlargeImage(this)">
                    <div id="faceMatchInfo" style="flex: 1;">
                        <!-- Face match info will be inserted here -->
                    </div>
                </div>
            </div>

            <!-- Business License (Business Only) -->
            <div id="businessLicenseSection" class="info-section" style="display: none;">
                <h4>Business License</h4>
                <p class="text-muted small mb-3">Business registration document.</p>
                <img id="businessLicenseImage" src="" alt="Business License" style="max-width: 500px; border: 1px solid #ddd; border-radius: 8px; cursor: pointer;" onclick="enlargeImage(this)">
            </div>
        </div>
        <div class="modal-actions">
            <button type="button" class="btn btn-secondary" onclick="closeDetailModal()">Close</button>
        </div>
    </div>
</div>

<!-- Image Enlargement Modal -->
<div id="imageEnlargeModal" class="modal" style="display: none;">
    <div class="modal-content" style="width: 96vw; height: 96vh; max-width: 96vw; max-height: 96vh; padding: 8px; position: relative; overflow: hidden;">
        <button class="modal-close" onclick="closeImageEnlargeModal()" style="position: absolute; top: 8px; right: 8px;">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
        </button>
        <div id="enlargeCanvas" style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; cursor: grab; background: rgba(0,0,0,.02);">
            <img id="enlargedImage" src="" alt="Enlarged Image" style="user-select:none; pointer-events: none; max-width: none; max-height: none; transform-origin: center center;" />
        </div>
        <div style="position: absolute; bottom: 10px; right: 10px; display: flex; gap: 8px;">
            <button type="button" class="btn btn-light btn-sm" onclick="zoomEnlarged(-1)" title="Zoom out">−</button>
            <button type="button" class="btn btn-light btn-sm" onclick="zoomEnlarged(1)" title="Zoom in">+</button>
            <button type="button" class="btn btn-light btn-sm" onclick="resetEnlarged()" title="Reset">Reset</button>
        </div>
        <div style="position: absolute; left: 12px; bottom: 10px; color: #666; font-size: 12px;">Scroll to zoom • Drag to pan</div>
    </div>
</div>

<!-- Lightbox overlay similar to Product Administration -->
<div id="paImageLightbox" style="display:none; position:fixed; inset:0; background: rgba(0,0,0,0.9); z-index:10000; align-items:center; justify-content:center;">
    <span onclick="closePAImageLightbox()" style="position:absolute; top:16px; right:22px; color:#fff; font-size:34px; width:44px; height:44px; border-radius:50%; display:flex; align-items:center; justify-content:center; background: rgba(255,255,255,0.12); cursor:pointer;">&times;</span>
    <img id="paLightboxImage" src="" alt="Full Size" style="max-width:90%; max-height:90vh; border-radius:8px; box-shadow: 0 20px 60px rgba(0,0,0,0.5); cursor: zoom-in; transition: transform .2s;" onclick="togglePAZoom(event)" />
    <div style="position:absolute; bottom:20px; color:#fff; font-size:12px; background: rgba(0,0,0,.6); padding:6px 12px; border-radius: 14px;">Click image to zoom • Scroll to zoom • Drag to pan</div>
</div>

@section Scripts {
    <script src="~/js/provider-application-management.js" asp-append-version="true"></script>
    <script>
        // Initialize the page with config
        window.providerApplicationConfig = {
            apiBaseUrl: '@Model.ApiBaseUrl',
            accessToken: '@Model.AccessToken',
            currentUserRole: '@Model.CurrentUserRole'
        };
    </script>
}

