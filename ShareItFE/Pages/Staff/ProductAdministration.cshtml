    // Submit Flag Violation
    async function submitFlagViolation() {
        const productId = document.getElementById('flagProductId').value;
        const reason = document.getElementById('flagViolationReason').value.trim();
        const termsInput = document.getElementById('flagViolatedTerms').value.trim();
        
        if (!reason) {
            showToast('Please enter a violation reason', 'error');
            return;
        }
        
        const violatedTerms = termsInput ? termsInput.split(',').map(t => t.trim()) : [];
        
        try {
            const response = await fetch(`${API_BASE_URL}/products/admin/${productId}/flag`, {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${ACCESS_TOKEN}`,
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ reason, violatedTerms })
            });
            
            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.message || 'Failed to flag product');
            }
            
            showToast('Product flagged and email sent to provider', 'success');
            closeFlagModal();
            
            // Reload current tab
            const activeTab = document.querySelector('.tab-button.active').getAttribute('data-tab');
            loadTabData(activeTab);
            await loadStatistics();
        } catch (error) {
            console.error('Error flagging product:', error);
            showToast(error.message || 'Failed to flag product', 'error');
        }
    }
    
