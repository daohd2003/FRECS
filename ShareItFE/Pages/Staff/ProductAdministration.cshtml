<script>
    // Modal functions
    function closeEditModal() {
        document.getElementById('editProductModal').classList.remove('active');
    }
    
    function closeFlagModal() {
        document.getElementById('flagViolationModal').classList.remove('active');
    }
    
    // Image lightbox functions with zoom
    let lightboxScale = 1;
    let lightboxPosX = 0;
    let lightboxPosY = 0;
    let isDragging = false;
    let startX = 0;
    let startY = 0;
    
    function openImageLightbox(imageSrc) {
        const img = document.getElementById('lightboxImage');
        img.src = imageSrc;
        img.style.transform = 'translate(0, 0) scale(1)';
        img.classList.remove('zoomed');
        lightboxScale = 1;
        lightboxPosX = 0;
        lightboxPosY = 0;
        document.getElementById('imageLightbox').classList.add('active');
    }
    
    function closeImageLightbox() {
        document.getElementById('imageLightbox').classList.remove('active');
        const img = document.getElementById('lightboxImage');
        img.classList.remove('zoomed');
        lightboxScale = 1;
    }
    
    function toggleZoom(event) {
        event.stopPropagation();
        const img = event.target;
        
        if (lightboxScale === 1) {
            lightboxScale = 2;
            img.classList.add('zoomed');
        } else {
            lightboxScale = 1;
            lightboxPosX = 0;
            lightboxPosY = 0;
            img.classList.remove('zoomed');
        }
        
        img.style.transform = `translate(${lightboxPosX}px, ${lightboxPosY}px) scale(${lightboxScale})`;
    }
    
    // Mouse wheel zoom
    document.getElementById('lightboxImage').addEventListener('wheel', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        const delta = e.deltaY > 0 ? -0.1 : 0.1;
        lightboxScale = Math.min(Math.max(0.5, lightboxScale + delta), 5);
        
        if (lightboxScale > 1) {
            this.classList.add('zoomed');
        } else {
            this.classList.remove('zoomed');
            lightboxPosX = 0;
            lightboxPosY = 0;
        }
        
        this.style.transform = `translate(${lightboxPosX}px, ${lightboxPosY}px) scale(${lightboxScale})`;
    });
    
    // Drag to pan
    document.getElementById('lightboxImage').addEventListener('mousedown', function(e) {
        if (lightboxScale > 1) {
            isDragging = true;
            startX = e.clientX - lightboxPosX;
            startY = e.clientY - lightboxPosY;
            this.style.cursor = 'grabbing';
            e.preventDefault();
        }
    });
    
    document.addEventListener('mousemove', function(e) {
        if (isDragging) {
            lightboxPosX = e.clientX - startX;
            lightboxPosY = e.clientY - startY;
            document.getElementById('lightboxImage').style.transform = `translate(${lightboxPosX}px, ${lightboxPosY}px) scale(${lightboxScale})`;
        }
    });
    
    document.addEventListener('mouseup', function() {
        if (isDragging) {
            isDragging = false;
            const img = document.getElementById('lightboxImage');
            img.style.cursor = lightboxScale > 1 ? 'grab' : 'zoom-in';
        }
    });
    
    // Close lightbox with ESC key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeImageLightbox();
        }
    });
    
    // Close modals when clicking overlay
    document.getElementById('editProductModal').addEventListener('click', closeEditModal);
    document.getElementById('flagViolationModal').addEventListener('click', closeFlagModal);
    
