@section Scripts {
    <script>
        const API_BASE_URL = '@Model.ApiBaseUrl';
        const ACCESS_TOKEN = '@Model.AccessToken';
        const pageSize = 10; // Sá»‘ sáº£n pháº©m trÃªn má»—i trang
        
        // Tab switching
        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', () => {
                const tabId = button.getAttribute('data-tab');
                
                // Update active tab button
                document.querySelectorAll('.tab-button').forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
                
                // Update active tab content
                document.querySelectorAll('.tab-content').forEach(content => content.classList.remove('active'));
                document.getElementById(tabId).classList.add('active');
                
                // Show/hide provider select based on tab
                const providerSelect = document.getElementById('providerSelect');
                if (tabId === 'by-provider') {
                    providerSelect.style.display = 'block';
                } else {
                    providerSelect.style.display = 'none';
                }
                
                // Load data for the selected tab
                loadTabData(tabId);
            });
        });

        // Initial load
        loadTabData('all-products');

        async function loadTabData(tabId) {
            switch(tabId) {
                case 'all-products':
                    await loadAllProducts();
                    break;
                case 'by-provider':
                    await loadProductsByProvider();
                    break;
                case 'pending-review':
                    await loadPendingProducts();
                    break;
            }
        }

        async function loadAllProducts(page = 1) {
            try {
                currentPage.all = page;
                
                // Get filter values
                const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
                const statusFilter = document.getElementById('statusFilter').value;
                const sortFilter = document.getElementById('sortFilter').value;
                const typeFilter = document.getElementById('typeFilter').value;
                
                const response = await fetch(`${API_BASE_URL}/products/admin/all?page=${page}&pageSize=${pageSize}`, {
                    headers: {
                        'Authorization': `Bearer ${ACCESS_TOKEN}`
                    }
                });

                if (!response.ok) throw new Error('Failed to load products');

                const result = await response.json();
                let products = result.data?.items || [];
                const totalPages = result.data?.totalPages || 1;
                
                // Debug: Log first product to check structure
                if (products.length > 0 && searchTerm) {
                    console.log('Search term:', searchTerm);
                    console.log('Sample product:', products[0]);
                    console.log('Product fields:', {
                        name: products[0].name,
                        providerName: products[0].providerName,
                        category: products[0].category,
                        description: products[0].description
                    });
                }
                
                // Apply client-side filters
                if (searchTerm) {
                    products = products.filter(p => {
                        const name = (p.name || '').toLowerCase();
                        const providerName = (p.providerName || '').toLowerCase();
                        const category = (p.category || '').toLowerCase();
                        const description = (p.description || '').toLowerCase();
                        
                        return name.includes(searchTerm) ||
                               providerName.includes(searchTerm) ||
                               category.includes(searchTerm) ||
                               description.includes(searchTerm);
                    });
                }
                
                if (statusFilter && statusFilter !== 'all') {
                    products = products.filter(p => 
                        p.availabilityStatus.toLowerCase() === statusFilter.toLowerCase()
                    );
                }
                
                if (typeFilter && typeFilter !== 'all') {
                    products = products.filter(p => {
                        const isRental = p.rentalStatus === 'Available';
                        const isPurchase = p.purchaseStatus === 'Available';
                        
                        if (typeFilter === 'rental') return isRental && !isPurchase;
                        if (typeFilter === 'purchase') return !isRental && isPurchase;
                        if (typeFilter === 'both') return isRental && isPurchase;
                        return true;
                    });
                }
                
                // Apply sorting
                products = sortProducts(products, sortFilter);
                
                const tbody = document.getElementById('allProductsTableBody');
                
                if (products.length === 0) {
                    tbody.innerHTML = '<tr><td colspan="9" style="text-align: center; padding: 40px; color: #94a3b8;">No products found</td></tr>';
                    return;
                }
                
                tbody.innerHTML = products.map(product => {
                    // Build pricing display
                    let pricingDisplay = '';
                    const isRentalAvailable = product.rentalStatus === 'Available';
                    const isPurchaseAvailable = product.purchaseStatus === 'Available';
                    
                    if (isRentalAvailable && isPurchaseAvailable) {
                        pricingDisplay = `
