                html += `<span class="page-number" onclick="changeProviderPage(1)">1</span>`;
                if (startPage > 2) html += `<span class="pagination-info">...</span>`;
            }
            
            for (let i = startPage; i <= endPage; i++) {
                html += `<span class="page-number ${i === currentPage ? 'active' : ''}" onclick="changeProviderPage(${i})">${i}</span>`;
            }
            
            if (endPage < totalPages) {
                if (endPage < totalPages - 1) html += `<span class="pagination-info">...</span>`;
                html += `<span class="page-number" onclick="changeProviderPage(${totalPages})">${totalPages}</span>`;
            }
            
            html += `
                <button class="pagination-btn" ${currentPage === totalPages ? 'disabled' : ''} onclick="changeProviderPage(${currentPage + 1})">
                    Next â†’
