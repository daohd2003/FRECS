        function filterAndDisplayProviderProducts() {
            const providerId = document.getElementById('providerSelect').value;
            const searchTerm = document.getElementById('searchInput').value.toLowerCase().trim();
            const statusFilter = document.getElementById('statusFilter').value;
            const sortFilter = document.getElementById('sortFilter').value;
            const typeFilter = document.getElementById('typeFilter').value;
            
            const providerGroup = window.providerData?.find(g => g.providerId === providerId);
            if (!providerGroup) return;
            
            let filteredProducts = [...providerGroup.products];
            
            // Apply search filter
            if (searchTerm) {
                filteredProducts = filteredProducts.filter(p => {
                    const name = (p.name || '').toLowerCase();
                    const category = (p.category || '').toLowerCase();
                    const id = (p.id || '').toLowerCase();
                    const description = (p.description || '').toLowerCase();
                    
                    return name.includes(searchTerm) ||
                           category.includes(searchTerm) ||
                           id.includes(searchTerm) ||
                           description.includes(searchTerm);
                });
            }
            
            // Apply status filter
            if (statusFilter && statusFilter !== 'all') {
                filteredProducts = filteredProducts.filter(p => 
                    p.availabilityStatus.toLowerCase() === statusFilter.toLowerCase()
                );
            }
            
            // Apply type filter
            if (typeFilter && typeFilter !== 'all') {
                filteredProducts = filteredProducts.filter(p => {
                    const isRental = p.rentalStatus === 'Available';
                    const isPurchase = p.purchaseStatus === 'Available';
                    
                    if (typeFilter === 'rental') return isRental && !isPurchase;
                    if (typeFilter === 'purchase') return !isRental && isPurchase;
                    if (typeFilter === 'both') return isRental && isPurchase;
                    return true;
                });
            }
            
            // Apply sorting
            filteredProducts = sortProducts(filteredProducts, sortFilter);
            
            // Display results
            displayProviderProducts(providerGroup, filteredProducts);
        }
        
        function sortProducts(products, sortFilter) {
            const [field, order] = sortFilter.split('-');
            
            return products.sort((a, b) => {
                let aVal, bVal;
                
                switch(field) {
                    case 'name':
                        aVal = a.name.toLowerCase();
                        bVal = b.name.toLowerCase();
                        break;
                    case 'createdAt':
                        aVal = new Date(a.createdAt);
                        bVal = new Date(b.createdAt);
                        break;
                    case 'price':
                        // Use the lowest available price for sorting
                        aVal = Math.min(
                            a.rentalStatus === 'Available' ? a.pricePerDay : Infinity,
                            a.purchaseStatus === 'Available' ? a.purchasePrice : Infinity
                        );
                        bVal = Math.min(
                            b.rentalStatus === 'Available' ? b.pricePerDay : Infinity,
                            b.purchaseStatus === 'Available' ? b.purchasePrice : Infinity
                        );
                        break;
                    default:
                        return 0;
                }
                
                if (order === 'asc') {
                    return aVal > bVal ? 1 : aVal < bVal ? -1 : 0;
                } else {
                    return aVal < bVal ? 1 : aVal > bVal ? -1 : 0;
                }
            });
        }
        
