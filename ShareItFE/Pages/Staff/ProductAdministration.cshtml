    }
    
    // Save Product Changes - Using ADMIN endpoint
    async function saveProductChanges() {
        const productId = document.getElementById('editProductId').value;
        
        // Get rental/purchase selection
        const rentalStatus = document.getElementById('editRentalStatus').value;
        const purchaseStatus = document.getElementById('editPurchaseStatus').value;
        
        // Validate rental fields if rental is available
        if (rentalStatus === 'Available') {
            const pricePerDay = document.getElementById('editPricePerDay').value;
            const rentalQuantity = document.getElementById('editRentalQuantity').value;
            const securityDeposit = document.getElementById('editSecurityDeposit').value;
            
            if (!pricePerDay || pricePerDay <= 0) {
                showToast('Please enter a valid rental price', 'error');
                return;
            }
            if (!rentalQuantity || rentalQuantity <= 0) {
                showToast('Please enter a valid rental quantity', 'error');
                return;
            }
            if (!securityDeposit || securityDeposit <= 0) {
                showToast('Please enter a valid security deposit', 'error');
                return;
            }
        }
        
        // Validate purchase fields if purchase is available
        if (purchaseStatus === 'Available') {
            const purchasePrice = document.getElementById('editPurchasePrice').value;
            const purchaseQuantity = document.getElementById('editPurchaseQuantity').value;
            
            if (!purchasePrice || purchasePrice <= 0) {
                showToast('Please enter a valid purchase price', 'error');
                return;
            }
            if (!purchaseQuantity || purchaseQuantity <= 0) {
                showToast('Please enter a valid purchase quantity', 'error');
                return;
            }
        }
        
        // Build product data matching AdminProductUpdateDTO
        const productData = {
            name: document.getElementById('editProductName').value.trim(),
            description: document.getElementById('editProductDescription').value.trim(),
            categoryId: document.getElementById('editProductCategory').value,
            category: null, // Let backend handle this
            size: document.getElementById('editProductSize').value.trim() || null,
            color: document.getElementById('editProductColor').value.trim() || null,
            gender: document.getElementById('editProductGender').value,
            rentalStatus: rentalStatus,
            purchaseStatus: purchaseStatus,
            pricePerDay: rentalStatus === 'Available' ? parseFloat(document.getElementById('editPricePerDay').value) || 0 : 0,
            rentalQuantity: rentalStatus === 'Available' ? parseInt(document.getElementById('editRentalQuantity').value) || 0 : null,
            securityDeposit: rentalStatus === 'Available' ? parseFloat(document.getElementById('editSecurityDeposit').value) || 0 : 0,
            purchasePrice: purchaseStatus === 'Available' ? parseFloat(document.getElementById('editPurchasePrice').value) || 0 : null,
            purchaseQuantity: purchaseStatus === 'Available' ? parseInt(document.getElementById('editPurchaseQuantity').value) || 0 : null,
            availabilityStatus: document.getElementById('editAvailabilityStatus').value
        };
        
        // Validate basic required fields
        if (!productData.name) {
            showToast('Product name is required', 'error');
            return;
        }
        if (!productData.description) {
            showToast('Description is required', 'error');
            return;
        }
        if (!productData.categoryId) {
            showToast('Category is required', 'error');
            return;
        }
        if (!productData.gender) {
            showToast('Gender is required', 'error');
            return;
        }
        
        try {
            console.log('Sending product data:', productData); // Debug log
            
            // USE ADMIN ENDPOINT to preserve ProviderId
            const response = await fetch(`${API_BASE_URL}/products/admin/${productId}`, {
                method: 'PUT',
                headers: {
                    'Authorization': `Bearer ${ACCESS_TOKEN}`,
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(productData)
            });
            
            if (!response.ok) {
                const errorText = await response.text();
                console.error('Error response:', errorText); // Debug log
                
                try {
                    const error = JSON.parse(errorText);
                    
                    // âœ… CHECK IF IT'S A CONTENT VIOLATION ERROR
                    if (response.status === 400 && error.data) {
                        const violationData = error.data;
                        
                        // Check if it's a content moderation violation
                        if (violationData.reason && violationData.violatedTerms) {
                            console.log('Content violation detected:', violationData);
                            
                            // Show violation popup instead of toast
                            openUpdateViolationModal(
                                violationData.reason, 
                                violationData.violatedTerms
                            );
                            return; // Don't throw error, just show popup
                        }
                    }
                    
                    // For other errors, show normal error message
                    const errorMessage = error.message || error.Message || 'Failed to update product';
                    throw new Error(errorMessage);
                } catch (parseError) {
                    if (parseError instanceof SyntaxError) {
                        throw new Error(errorText || 'Failed to update product');
                    }
                    throw parseError;
                }
            }
            
            showToast('Product updated successfully', 'success');
            closeEditModal();
            
            // Reload current tab data
            const activeTab = document.querySelector('.tab-button.active').getAttribute('data-tab');
            loadTabData(activeTab);
            await loadStatistics();
        } catch (error) {
            console.error('Error saving product:', error);
            showToast(error.message || 'Failed to save changes', 'error');
        }
    }
    
