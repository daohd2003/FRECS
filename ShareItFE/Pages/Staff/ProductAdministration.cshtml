    // Re-check Moderation with AI
    async function recheckModeration(productId) {
        if (!confirm('Re-check this product with AI moderation system?')) return;
        
        showToast('Running AI moderation check...', 'info');
        
        try {
            const response = await fetch(`${API_BASE_URL}/products/admin/${productId}/recheck-moderation`, {
                method: 'POST',
                headers: {
                    'Authorization': `Bearer ${ACCESS_TOKEN}`,
                    'Content-Type': 'application/json'
                }
            });
            
            if (!response.ok) {
                const error = await response.json();
                throw new Error(error.message || 'Failed to re-check moderation');
            }
            
            const result = await response.json();
            const data = result.data;
            
            if (data.isAppropriate) {
                // PASSED - Show success toast
                showToast('PASSED: Product content is appropriate', 'success');
            } else {
                // VIOLATED - Show ERROR POPUP (instead of toast)
                showViolationErrorModal(data.reason, data.violatedTerms);
            }
            
            // Reload current tab
            const activeTab = document.querySelector('.tab-button.active').getAttribute('data-tab');
            loadTabData(activeTab);
            await loadStatistics();
        } catch (error) {
            console.error('Error re-checking moderation:', error);
            showToast(error.message || 'Failed to re-check moderation', 'error');
        }
    }
    
