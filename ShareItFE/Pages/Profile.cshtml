@section Scripts {
    <script>
        const backendBaseUrl = "@Model.ApiBaseUrl";
        const accessToken = "@Model.AccessToken";
        document.addEventListener('DOMContentLoaded', () => {
            // Ẩn toast sau 4 giây
            const toastSuccess = document.getElementById('toast-success');
            const toastError = document.getElementById('toast-error');

            if (toastSuccess) {
                setTimeout(() => { toastSuccess.style.display = 'none'; }, 4000);
            }
            if (toastError) {
                setTimeout(() => { toastError.style.display = 'none'; }, 4000);
            }

            // Toggle hiển thị/ẩn mật khẩu
            document.querySelectorAll('.toggle-password').forEach(icon => {
                icon.addEventListener('click', () => {
                    // Tìm input nằm trong cùng .position-relative (hoặc div cha)
                    const wrapper = icon.closest('.position-relative');
                    const input = wrapper ? wrapper.querySelector('input') : null;
                    if (!input) return;

                    const isPassword = input.type === 'password';
                    input.type = isPassword ? 'text' : 'password';

                    icon.classList.toggle('bi-eye');
                    icon.classList.toggle('bi-eye-slash');
                });
            });

            // Toggle hiển thị form đổi mật khẩu
            const toggleBtn = document.getElementById('change-password-toggle-btn');
            const passwordForm = document.getElementById('change-password-form');

            if (toggleBtn && passwordForm) {
                toggleBtn.addEventListener('click', () => {
                    passwordForm.classList.toggle('d-none');
                    toggleBtn.textContent = passwordForm.classList.contains('d-none') ? 'Change' : 'Cancel';
                });
            }

            // Bắt sự kiện click vào nút "Confirm Received" trên mỗi thẻ đơn hàng
            document.querySelectorAll('.confirm-delivery-btn').forEach(button => {
                button.addEventListener('click', async () => {
                    const orderId = button.dataset.orderId;
                    
                    if (confirm('Are you sure you want to confirm that you have received this order?')) {
                        button.disabled = true;
                        button.innerHTML = '<i class="bi bi-hourglass"></i> Processing...';
                        
                        try {
                            const response = await fetch(`@Model.ApiBaseUrl/orders/${orderId}/confirm-delivery`, {
                                method: 'PUT',
                                headers: {
                                    'Authorization': `Bearer ${accessToken}`,
                                    'Content-Type': 'application/json'
                                }
                            });
                            
                        if (response.ok) {
                            alert('Order delivery confirmed successfully!');
                            
                            // Reload notifications after order status change
                            if (window.loadNotifications) {
                                const notificationMenu = document.querySelector('.notification-menu');
                                const userId = notificationMenu ? notificationMenu.dataset.userid : null;
                                if (userId) {
                                    console.log('Reloading notifications after delivery confirmation...');
                                    setTimeout(() => window.loadNotifications(userId), 500);
                                }
                            }
                            
                            location.reload(); // Reload để cập nhật status
                        } else {
                                const errorData = await response.json();
                                alert('Error confirming delivery: ' + (errorData.message || 'Unknown error'));
                                button.disabled = false;
                                button.innerHTML = '<i class="bi bi-check-circle"></i> Confirm Received';
                            }
                        } catch (error) {
                            alert('Error confirming delivery: ' + error.message);
                            button.disabled = false;
                            button.innerHTML = '<i class="bi bi-check-circle"></i> Confirm Received';
                        }
                    }
                });
            });

            // Bắt sự kiện click vào nút "Mark as Returning" trên mỗi thẻ đơn hàng
            document.querySelectorAll('.mark-returning-btn').forEach(button => {
                button.addEventListener('click', async () => {
                    const orderId = button.dataset.orderId;
                    
                    if (confirm('Are you sure you want to mark this order as returning?')) {
                        button.disabled = true;
                        button.innerHTML = '<i class="bi bi-hourglass"></i> Processing...';
                        
                        try {
                            const response = await fetch(`@Model.ApiBaseUrl/orders/${orderId}/mark-returning`, {
                                method: 'PUT',
                                headers: {
                                    'Authorization': `Bearer ${accessToken}`,
                                    'Content-Type': 'application/json'
                                }
                            });
                            
                        if (response.ok) {
                            alert('Order marked as returning successfully!');
                            
                            // Reload notifications after order status change
                            if (window.loadNotifications) {
                                const notificationMenu = document.querySelector('.notification-menu');
                                const userId = notificationMenu ? notificationMenu.dataset.userid : null;
                                if (userId) {
                                    console.log('Reloading notifications after marking returning...');
                                    setTimeout(() => window.loadNotifications(userId), 500);
                                }
                            }
                            
                            location.reload(); // Reload để cập nhật status
                        } else {
                                const errorData = await response.json();
                                alert('Error marking as returning: ' + (errorData.message || 'Unknown error'));
                                button.disabled = false;
                                button.innerHTML = '<i class="bi bi-box-arrow-up"></i> Mark as Returning';
                            }
                        } catch (error) {
                            alert('Error marking as returning: ' + error.message);
                            button.disabled = false;
                            button.innerHTML = '<i class="bi bi-box-arrow-up"></i> Mark as Returning';
                        }
                    }
                });
            });

            // Bắt sự kiện click vào nút "Rent Again" trên mỗi thẻ đơn hàng
            document.querySelectorAll('.rent-again-btn').forEach(button => {
                button.addEventListener('click', async () => {
                    const orderId = button.dataset.orderId;
                    
                    if (!confirm('This will clear your current cart and add all items from this order. Continue?')) {
                        return;
                    }
                    
                    button.disabled = true;
                    button.innerHTML = '<i class="bi bi-hourglass"></i> Processing...';

                    try {
                        // Clear pending session before starting rent again flow
                        await fetch('/CheckoutPage/Checkout?handler=ClearPendingSession', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                            }
                        });

                        const headers = {
                            'Content-Type': 'application/json'
                        };

                        if (accessToken) {
                            headers['Authorization'] = `Bearer ${accessToken}`;
                        }

                        const response = await fetch(`${backendBaseUrl}/cart/rent-again/${orderId}`, {
                            method: 'POST',
                            headers: headers
                        });

                        if (response.ok) {
                            const result = await response.json();
                            alert(result.message || 'Items added to cart successfully! Redirecting to cart page.');
                            window.location.href = '/CartPage/Cart';
                        } else {
                            let errorMessage = 'Unable to process your request. Please try again.';
                            try {
                                const errorData = await response.json();
                                errorMessage = errorData.message || errorMessage;
                            } catch (jsonError) {
                                if (response.status === 404) {
                                    errorMessage = 'Order not found. Please refresh the page and try again.';
                                } else if (response.status === 401) {
                                    errorMessage = 'You are not authorized to access this order.';
                                } else {
                                    errorMessage = 'Unable to add items to cart. Please try again later.';
                                }
                            }
                            alert(errorMessage);
                            button.disabled = false;
                            button.innerHTML = 'Rent Again';
                        }
                    } catch (error) {
                        alert('An error occurred. Please try again.');
                        button.disabled = false;
                        button.innerHTML = 'Rent Again';
                    }
                });
            });

            // Handle Delete Order for Cancelled orders
            document.querySelectorAll('.delete-order-btn').forEach(button => {
                button.addEventListener('click', async (e) => {
                    const orderId = button.dataset.orderId;
                    
                    // Confirm before deleting permanently
                    if (!confirm('Are you sure you want to permanently delete this cancelled order? This action cannot be undone and the order will be removed from the database.')) {
                        return;
                    }
                    
                    button.disabled = true;
                    button.innerHTML = '<i class="bi bi-hourglass-split"></i> Deleting...';
                    
                    try {
                        // Debug: Log the API call details
                        const deleteUrl = `${backendBaseUrl}/orders/${orderId}`;
                        
                        const response = await fetch(deleteUrl, {
                            method: 'DELETE',
                            headers: {
                                'Authorization': `Bearer ${accessToken}`,
                                'Content-Type': 'application/json',
                                'Accept': 'application/json'
                            }
                        });
                        
                        console.log('DELETE Response Status:', response.status);
                        console.log('DELETE Response OK:', response.ok);
                        
                        if (response.ok) {
                            // Success - remove the order card from the UI
                            const orderCard = button.closest('.order-card');
                            orderCard.style.opacity = '0.5';
                            orderCard.style.transform = 'scale(0.95)';
                            setTimeout(() => {
                                orderCard.remove();
                            }, 300);
                            
                            console.log('Order deleted successfully:', orderId);
                            
                            // Reload notifications to remove cancelled order notifications
                            if (window.loadNotifications) {
                                // Get user ID from notification menu data attribute
                                const notificationMenu = document.querySelector('.notification-menu');
                                const userId = notificationMenu ? notificationMenu.dataset.userid : null;
                                if (userId) {
                                    console.log('Reloading notifications after order deletion...');
                                    setTimeout(() => {
                                        window.loadNotifications(userId);
                                    }, 500); // Small delay to ensure delete is processed
                                } else {
                                    console.log('User ID not found, cannot reload notifications');
                                }
                            }
                            
                            alert('Order deleted permanently!');
                        } else {
                            const errorText = await response.text();
                            console.error('DELETE Error Response:', errorText);
                            
                            try {
                                const errorData = JSON.parse(errorText);
                                alert(`Error: ${errorData.message || 'Failed to delete order'}`);
                            } catch {
                                alert(`Error: ${response.status} - ${response.statusText}`);
                            }
                        }
                    } catch (error) {
                        console.error('Error deleting order:', error);
                        alert('Network error occurred. Please try again.');
                    } finally {
                        button.disabled = false;
                        button.innerHTML = '<i class="bi bi-trash"></i> Delete';
                    }
                });
            });
        });
    </script>

    <script src="~/js/profile.js" asp-append-version="true"></script>
}