                                        </svg>
                                        break;
                                        case "package":
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                                                <line x1="3" y1="6" x2="21" y2="6"></line>
                                                <path d="M16 10a4 4 0 0 1-8 0"></path>
                                        </svg>
                                        break;
                                        case "alert-circle":
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <circle cx="12" cy="12" r="10"></circle>
                                                <line x1="12" y1="8" x2="12" y2="12"></line>
                                                <line x1="12" y1="16" x2="12.01" y2="16"></line>
                                        </svg>
                                        break;
                                    default:
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10"></circle>
                                        </svg>
                                        break;
                                }
                                </div>
                            </div>
                            <div class="activity-content">
                                <p class="activity-description">@activity.Description</p>
                                <span class="activity-time">@Model.GetTimeAgo(activity.Timestamp)</span>
                            </div>
                        </a>
                    }
                }
                else
                {
                    <div class="empty-state">
                        <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="12" y1="8" x2="12" y2="12"></line>
                            <line x1="12" y1="16" x2="12.01" y2="16"></line>
                        </svg>
                        <p>No recent activity</p>
                    </div>
                }
            </div>
        </div>

        <!-- Active Users Dashboard -->
        <div class="active-users-card">
            <div class="active-users-header">
                <div class="header-left">
                    <h3 class="active-users-title">Active Users</h3>
                    <span class="active-users-badge" id="activeUsersCount">0</span>
                </div>
                <div class="connection-status" id="connectionStatus">
                    <div class="status-dot"></div>
                    <span>Connecting...</span>
                </div>
            </div>
            <div class="active-users-container" id="activeUsersContainer">
                <div class="loading-state">
                    <div class="spinner"></div>
                    <p>Loading active users...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Detail Modal -->
<div id="detailModal" class="detail-modal" style="display: none;">
