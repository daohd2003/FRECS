@page
@model ShareItFE.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Revenue Dashboard & Analytics";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<div class="admin-revenue-dashboard">
    <!-- Header -->
    <div class="dashboard-header-section">
        <div class="header-content">
            <div>
                <h1 class="dashboard-main-title">Revenue Dashboard & Analytics</h1>
                <p class="dashboard-subtitle">Comprehensive revenue analytics and system insights</p>
            </div>
            <div class="header-actions">
                <button class="btn-export" onclick="exportDashboard()">
                    <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                    </svg>
                    Export
                </button>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert-error">
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="8" x2="12" y2="12"></line>
                <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <span>@Model.ErrorMessage</span>
        </div>
    }

    <!-- Date Range Filter -->
    <div class="date-filter-card">
        <div class="date-filter-content">
            <div class="date-filter-label">
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                    <line x1="16" y1="2" x2="16" y2="6"></line>
                    <line x1="8" y1="2" x2="8" y2="6"></line>
                    <line x1="3" y1="10" x2="21" y2="10"></line>
                </svg>
                <span>Date Range:</span>
            </div>
            <form method="get" class="date-filter-form" id="dateFilterForm">
                <!-- Hidden input to preserve preset selection -->
                <input type="hidden" name="Preset" id="presetInput" value="@Model.Preset" />
                
                <div class="preset-buttons">
                    <button type="button" class="preset-btn @(Model.Preset == "Today" ? "active" : "")" onclick="setDatePreset('Today')">Today</button>
                    <button type="button" class="preset-btn @(Model.Preset == "Last 7 Days" ? "active" : "")" onclick="setDatePreset('Last 7 Days')">Last 7 Days</button>
                    <button type="button" class="preset-btn @(Model.Preset == "Last 30 Days" ? "active" : "")" onclick="setDatePreset('Last 30 Days')">Last 30 Days</button>
                    <button type="button" class="preset-btn @(Model.Preset == "This Month" ? "active" : "")" onclick="setDatePreset('This Month')">This Month</button>
                    <button type="button" class="preset-btn @(Model.Preset == "Last Month" ? "active" : "")" onclick="setDatePreset('Last Month')">Last Month</button>
                </div>
                <div class="custom-date-picker">
                    <input type="date" name="StartDate" id="startDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" class="date-input" onchange="setCustomDate()" />
                    <span class="date-separator">to</span>
                    <input type="date" name="EndDate" id="endDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" class="date-input" onchange="setCustomDate()" />
                </div>
            </form>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="kpi-grid">
        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-info">
                    <p class="kpi-label">Total Revenue</p>
                    <h3 class="kpi-value">@Model.DashboardData.KPIs.TotalRevenue.ToString("N0")₫</h3>
                    <div class="kpi-change">
                        <svg class="icon @(Model.DashboardData.KPIs.RevenueChange >= 0 ? "trend-up" : "trend-down")" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            @if (Model.DashboardData.KPIs.RevenueChange >= 0)
                            {
                                <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                                <polyline points="17 6 23 6 23 12"></polyline>
                            }
                            else
                            {
                                <polyline points="23 18 13.5 8.5 8.5 13.5 1 6"></polyline>
                                <polyline points="17 18 23 18 23 12"></polyline>
                            }
                        </svg>
                        <span class="@(Model.DashboardData.KPIs.RevenueChange >= 0 ? "positive" : "negative")">
                            @(Model.DashboardData.KPIs.RevenueChange >= 0 ? "+" : "")@Model.DashboardData.KPIs.RevenueChange.ToString("N1")%
                        </span>
                        <span class="kpi-comparison">vs previous period</span>
                    </div>
                </div>
                <div class="kpi-icon bg-green">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="12" y1="1" x2="12" y2="23"></line>
                        <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                    </svg>
                </div>
            </div>
        </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-info">
                    <p class="kpi-label">Total Orders</p>
                    <h3 class="kpi-value">@Model.DashboardData.KPIs.TotalOrders.ToString("N0")</h3>
                    <div class="kpi-change">
                        <svg class="icon @(Model.DashboardData.KPIs.OrdersChange >= 0 ? "trend-up" : "trend-down")" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            @if (Model.DashboardData.KPIs.OrdersChange >= 0)
                            {
                                <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                                <polyline points="17 6 23 6 23 12"></polyline>
                            }
                            else
                            {
                                <polyline points="23 18 13.5 8.5 8.5 13.5 1 6"></polyline>
                                <polyline points="17 18 23 18 23 12"></polyline>
                            }
                        </svg>
                        <span class="@(Model.DashboardData.KPIs.OrdersChange >= 0 ? "positive" : "negative")">
                            @(Model.DashboardData.KPIs.OrdersChange >= 0 ? "+" : "")@Model.DashboardData.KPIs.OrdersChange.ToString("N1")%
                        </span>
                        <span class="kpi-comparison">vs previous period</span>
                    </div>
                </div>
                <div class="kpi-icon bg-blue">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="9" cy="21" r="1"></circle>
                        <circle cx="20" cy="21" r="1"></circle>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                    </svg>
                </div>
            </div>
    </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-info">
                    <p class="kpi-label">Total Users</p>
                    <h3 class="kpi-value">@Model.DashboardData.Users.TotalUsers.ToString("N0")</h3>
                    <div class="kpi-change">
                        <svg class="icon @(Model.DashboardData.KPIs.UsersChange >= 0 ? "trend-up" : "trend-down")" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            @if (Model.DashboardData.KPIs.UsersChange >= 0)
                            {
                                <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                                <polyline points="17 6 23 6 23 12"></polyline>
                            }
                            else
                            {
                                <polyline points="23 18 13.5 8.5 8.5 13.5 1 6"></polyline>
                                <polyline points="17 18 23 18 23 12"></polyline>
                            }
                        </svg>
                        <span class="@(Model.DashboardData.KPIs.UsersChange >= 0 ? "positive" : "negative")">
                            @(Model.DashboardData.KPIs.UsersChange >= 0 ? "+" : "")@Model.DashboardData.KPIs.UsersChange.ToString("N1")%
                        </span>
                        <span class="kpi-comparison">vs previous period</span>
                    </div>
                </div>
                <div class="kpi-icon bg-purple">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
            </div>
            </div>
        </div>

        <div class="kpi-card">
            <div class="kpi-header">
                <div class="kpi-info">
                    <p class="kpi-label">Active Products</p>
                    <h3 class="kpi-value">@Model.DashboardData.Products.AvailableProducts.ToString("N0")</h3>
                    <div class="kpi-change">
                        <svg class="icon @(Model.DashboardData.KPIs.ProductsChange >= 0 ? "trend-up" : "trend-down")" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            @if (Model.DashboardData.KPIs.ProductsChange >= 0)
                            {
                                <polyline points="23 6 13.5 15.5 8.5 10.5 1 18"></polyline>
                                <polyline points="17 6 23 6 23 12"></polyline>
                            }
                            else
                            {
                                <polyline points="23 18 13.5 8.5 8.5 13.5 1 6"></polyline>
                                <polyline points="17 18 23 18 23 12"></polyline>
                            }
                        </svg>
                        <span class="@(Model.DashboardData.KPIs.ProductsChange >= 0 ? "positive" : "negative")">
                            @(Model.DashboardData.KPIs.ProductsChange >= 0 ? "+" : "")@Model.DashboardData.KPIs.ProductsChange.ToString("N1")%
                        </span>
                        <span class="kpi-comparison">vs previous period</span>
                    </div>
                </div>
                <div class="kpi-icon bg-orange">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <path d="M16 10a4 4 0 0 1-8 0"></path>
                </svg>
            </div>
            </div>
        </div>
    </div>

    <!-- Revenue Chart -->
    <div class="chart-card">
        <div class="chart-header">
            <div>
                <h2 class="chart-title">Revenue Over Time</h2>
                <p class="chart-subtitle">Total revenue for selected period: @Model.DashboardData.Revenue.TotalRevenue.ToString("N0")₫</p>
            </div>
            <div class="chart-legend">
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="20" x2="18" y2="10"></line>
                    <line x1="12" y1="20" x2="12" y2="4"></line>
                    <line x1="6" y1="20" x2="6" y2="14"></line>
                </svg>
                <span>Daily Revenue Trend</span>
            </div>
        </div>
        <div class="chart-container">
            <canvas id="revenueChart"></canvas>
            </div>
        </div>

    <!-- Secondary Metrics Grid -->
    <div class="secondary-metrics-grid">
        <!-- User Breakdown -->
        <div class="chart-card-half">
            <div class="chart-header">
                <h3 class="chart-title">User Distribution</h3>
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                    <circle cx="9" cy="7" r="4"></circle>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                </svg>
            </div>
            <div class="chart-container-small">
                <canvas id="userDistributionChart"></canvas>
            </div>
            <div class="metric-stats" style="margin-top: 15px; border-top: 1px solid #e2e8f0; padding-top: 15px;">
                <div class="stat-row">
                    <span class="stat-label">Total Users</span>
                    <span class="stat-value">@Model.DashboardData.Users.TotalUsers</span>
                </div>
                <div class="stat-row highlight">
                    <span class="stat-label">New This Period</span>
                    <span class="stat-value text-green">+@Model.DashboardData.Users.NewUsersThisMonth</span>
                </div>
            </div>
        </div>

        <!-- Product Metrics -->
        <div class="metric-card">
            <div class="metric-header">
                <h3 class="metric-title">Product Statistics</h3>
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <path d="M16 10a4 4 0 0 1-8 0"></path>
                </svg>
            </div>
            <div class="metric-stats">
                <div class="stat-row stat-clickable" onclick="showDetailModal('products', 'all')">
                    <span class="stat-label">Total Products</span>
                    <span class="stat-value">@Model.DashboardData.Products.TotalProducts</span>
                </div>
                <div class="stat-row stat-clickable" onclick="showDetailModal('products', 'available')">
                    <span class="stat-label">Available</span>
                    <span class="stat-value text-green">@Model.DashboardData.Products.AvailableProducts</span>
                </div>
                <div class="stat-row stat-clickable" onclick="showDetailModal('products', 'rented')">
                    <span class="stat-label">Rented</span>
                    <span class="stat-value text-blue">@Model.DashboardData.Products.RentedProducts</span>
                </div>
                        <div class="stat-row stat-clickable" onclick="showDetailModal('products', 'purchased')">
                            <span class="stat-label">Purchased</span>
                            <span class="stat-value">@Model.DashboardData.Products.TotalSoldItems</span>
                        </div>
                <div class="stat-row highlight">
                    <span class="stat-label">New This Period</span>
                    <span class="stat-value text-green">+@Model.DashboardData.Products.NewProductsThisMonth</span>
            </div>
        </div>
    </div>

        <!-- Order Status -->
        <div class="metric-card">
            <div class="metric-header">
                <h3 class="metric-title">Order Status</h3>
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="9" cy="21" r="1"></circle>
                    <circle cx="20" cy="21" r="1"></circle>
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                    </svg>
                </div>
            <div class="metric-stats">
                <div class="stat-row stat-clickable" onclick="showDetailModal('orders', 'all')">
                    <span class="stat-label">Total Orders</span>
                    <span class="stat-value">@Model.DashboardData.Orders.TotalOrders</span>
                </div>
                <div class="stat-row stat-clickable" onclick="showDetailModal('orders', 'in_use')">
                    <span class="stat-label">In Use</span>
                    <span class="stat-value text-blue">@Model.DashboardData.Orders.InUseOrders</span>
                </div>
                <div class="stat-row stat-clickable" onclick="showDetailModal('orders', 'returned_with_issue')">
                    <span class="stat-label">Returned with Issue</span>
                    <span class="stat-value text-yellow">@Model.DashboardData.Orders.ReturnedWithIssueOrders</span>
                </div>
                <div class="stat-row stat-clickable" onclick="showDetailModal('orders', 'completed')">
                    <span class="stat-label">Completed</span>
                    <span class="stat-value text-green">@Model.DashboardData.Orders.CompletedOrders</span>
                </div>
                <div class="stat-row highlight">
                    <span class="stat-label">Completion Rate</span>
                    <span class="stat-value text-green">@Model.DashboardData.Orders.CompletionRate.ToString("N1")%</span>
                </div>
            </div>
        </div>

        <!-- System Health -->
        <div class="metric-card">
            <div class="metric-header">
                <h3 class="metric-title">System Health</h3>
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 12h-4l-3 9L9 3l-3 9H2"></path>
                    </svg>
                </div>
            <div class="metric-stats">
                <div class="stat-row stat-clickable" onclick="showDetailModal('reports', 'pending')">
                    <span class="stat-label">Pending Reports</span>
                    <span class="stat-value @(Model.DashboardData.SystemHealth.PendingReports > 0 ? "text-red" : "")">@Model.DashboardData.SystemHealth.PendingReports</span>
                </div>
                <div class="stat-row stat-clickable" onclick="showDetailModal('violations', 'active')">
                    <span class="stat-label">Active Violations</span>
                    <span class="stat-value @(Model.DashboardData.SystemHealth.ActiveViolations > 0 ? "text-yellow" : "")">@Model.DashboardData.SystemHealth.ActiveViolations</span>
                </div>
                <div class="stat-row stat-clickable" onclick="showDetailModal('users', 'banned')">
                    <span class="stat-label">Banned Users</span>
                    <span class="stat-value text-red">@Model.DashboardData.SystemHealth.BannedUsers</span>
                </div>
                <div class="stat-row">
                    <span class="stat-label">Success Rate</span>
                    <span class="stat-value text-green">@Model.DashboardData.Revenue.SuccessRate.ToString("N1")%</span>
                </div>
                <div class="stat-row highlight">
                    <span class="stat-label">Pending Applications</span>
                    <span class="stat-value text-yellow">@Model.DashboardData.Users.PendingProviderApplications</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="charts-row">
        <div class="chart-card-half">
            <div class="chart-header">
                <h3 class="chart-title">Payment Methods</h3>
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                    <line x1="1" y1="10" x2="23" y2="10"></line>
                    </svg>
                </div>
            <div class="chart-container-small">
                <canvas id="paymentMethodChart"></canvas>
            </div>
        </div>

        <div class="chart-card-half">
            <div class="chart-header">
                <h3 class="chart-title">Transaction Status</h3>
                <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
                    </svg>
                </div>
            <div class="chart-container-small">
                <canvas id="transactionStatusChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Top Providers & Popular Products -->
    <div class="tables-row">
        <!-- Top Providers -->
        <div class="table-card">
            <div class="table-header">
                <h3 class="table-title">Top Providers</h3>
                <span class="table-badge">Top 5</span>
            </div>
            <div class="table-container">
                @if (Model.DashboardData.TopProviders != null && Model.DashboardData.TopProviders.Any())
                {
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Provider</th>
                                <th>Revenue</th>
                                <th>Orders</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var provider in Model.DashboardData.TopProviders)
                            {
                                <tr>
                                    <td>
                                        <div class="provider-info">
                                            @if (!string.IsNullOrEmpty(provider.AvatarUrl))
                                            {
                                                <img src="@provider.AvatarUrl" alt="@provider.ProviderName" class="avatar" />
                                            }
                                            else
                                            {
                                                <div class="avatar-placeholder">@provider.ProviderName.Substring(0, 1)</div>
                                            }
                                            <div>
                                                <div class="provider-name">@provider.ProviderName</div>
                                                <div class="provider-products">@provider.TotalProducts products</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="revenue-cell">@provider.TotalRevenue.ToString("N0")₫</td>
                                    <td>@provider.TotalOrders</td>
                                    <td>
                                        <span class="rating-badge">@provider.AverageRating.ToString("N1") ⭐</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>No provider data available</p>
                    </div>
                }
            </div>
                </div>

        <!-- Popular Products -->
        <div class="table-card">
            <div class="table-header">
                <h3 class="table-title">Popular Products</h3>
                <span class="table-badge">Top 5</span>
            </div>
            <div class="table-container">
                @if (Model.DashboardData.PopularProducts != null && Model.DashboardData.PopularProducts.Any())
                {
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Rents</th>
                                <th>Revenue</th>
                                <th>Rating</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.DashboardData.PopularProducts)
                            {
                                <tr>
                                    <td>
                                        <div class="product-info">
                                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                                            {
                                                <img src="@product.ImageUrl" alt="@product.ProductName" class="product-thumb" />
                                            }
                                            else
                                            {
                                                <div class="product-thumb-placeholder">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                                        <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                                        <polyline points="21 15 16 10 5 21"></polyline>
                    </svg>
                </div>
                                            }
                                            <div>
                                                <div class="product-name">@product.ProductName</div>
                                                <div class="product-provider">@product.ProviderName</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@product.RentCount</td>
                                    <td class="revenue-cell">@product.Revenue.ToString("N0")₫</td>
                                    <td>
                                        <span class="rating-badge">@product.AverageRating.ToString("N1") ⭐</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <p>No product data available</p>
                    </div>
