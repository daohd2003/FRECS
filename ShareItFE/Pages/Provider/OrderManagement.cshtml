@page "/provider/orders"
@model ShareItFE.Pages.Provider.OrderManagementModel
@{
    ViewData["Title"] = "Order Management";
}

<script src="https://cdn.tailwindcss.com?plugins=forms"></script>
<script src="https://unpkg.com/lucide@latest"></script>

<div class="min-h-screen bg-gray-50">
    @Html.AntiForgeryToken()
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Order Management</h1>
            <p class="text-gray-600 mt-1">Track and manage all rental deliveries and returns</p>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- To Ship -->
            <div class="bg-white rounded-xl shadow-sm p-6 border border-purple-200 hover:border-purple-300 transition-colors">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                            <i data-lucide="package-check" class="h-6 w-6 text-purple-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">To Ship</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.ToShipCount</p>
                        <p class="text-xs text-gray-400 mt-1">Ready to deliver</p>
                    </div>
                </div>
            </div>

            <!-- In Transit -->
            <div class="bg-white rounded-xl shadow-sm p-6 border border-blue-200 hover:border-blue-300 transition-colors">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                            <i data-lucide="truck" class="h-6 w-6 text-blue-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">In Transit</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.InTransitCount</p>
                        <p class="text-xs text-gray-400 mt-1">On the way</p>
                    </div>
                </div>
            </div>

            <!-- In Use -->
            <div class="bg-white rounded-xl shadow-sm p-6 border border-green-200 hover:border-green-300 transition-colors">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                            <i data-lucide="shopping-bag" class="h-6 w-6 text-green-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">In Use</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.InUseCount</p>
                        <p class="text-xs text-gray-400 mt-1">Active rentals</p>
                    </div>
                </div>
            </div>

            <!-- To Confirm Return -->
            <div class="bg-white rounded-xl shadow-sm p-6 border border-orange-200 hover:border-orange-300 transition-colors">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center">
                            <i data-lucide="package-x" class="h-6 w-6 text-orange-600"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500">To Confirm Return</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.ToConfirmReturnCount</p>
                        <p class="text-xs text-gray-400 mt-1">Need confirmation</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Search and Filters -->
        <div class="bg-white rounded-xl shadow-sm p-6 mb-8">
            <form method="get" class="space-y-4">
                <input type="hidden" name="CurrentPage" value="1" />
                <input type="hidden" name="PageSize" value="@Model.PageSize" />
                
                <div class="flex flex-col md:flex-row gap-4">
                    <!-- Search Box -->
                    <div class="flex-1">
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i data-lucide="search" class="h-5 w-5 text-gray-400"></i>
                            </div>
                            <input type="text" 
                                   name="SearchQuery" 
                                   value="@Model.SearchQuery" 
                                   placeholder="Search by Order ID,customer..."
                                   class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500" />
                        </div>
                    </div>

                    <!-- Status Filter Dropdown -->
                    <div class="w-full md:w-64">
                        <select name="StatusFilter" class="w-full rounded-lg border-gray-300 focus:ring-purple-500 focus:border-purple-500">
                            @foreach (var option in Model.StatusOptions)
                            {
                                <option value="@option.Value" selected="@(Model.StatusFilter == option.Value)">@option.Text</option>
                            }
                        </select>
                    </div>

                    <!-- Search Button -->
                    <button type="submit" class="px-6 py-2 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors">
                        Search
                    </button>
                </div>
            </form>
        </div>

        <!-- Orders Table -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
            @if (Model.Orders != null && Model.Orders.Any())
            {
                <div class="overflow-x-auto">
                    <table class="w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Delivery</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Items</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Address</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Dates</th>
                                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var order in Model.Orders)
                            {
                                <tr class="hover:bg-gray-50">
                                    <!-- Delivery -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div>
                                            <div class="text-sm text-gray-900">Order: @order.OrderCode</div>
                                            <div class="text-xs text-gray-500">@order.CreatedAt.ToString("MMM dd, yyyy")</div>
                                        </div>
                                    </td>

                                    <!-- Customer -->
                                    <td class="px-6 py-4">
                                        <div>
                                            <div class="text-sm font-medium text-gray-900">@order.CustomerName</div>
                                            <div class="text-sm text-gray-500">@order.CustomerEmail</div>
                                        </div>
                                    </td>

                                    <!-- Items -->
                                    <td class="px-6 py-4">
                                        <div class="flex items-center">
                                            @if (order.Items != null && order.Items.Any())
                                            {
                                                var firstItem = order.Items.First();
                                                @if (!string.IsNullOrEmpty(firstItem.PrimaryImageUrl))
                                                {
                                                    <img class="h-12 w-12 rounded-lg object-cover mr-3" 
                                                         src="@firstItem.PrimaryImageUrl" 
                                                         alt="@firstItem.ProductName">
                                                }
                                                else
                                                {
                                                    <div class="h-12 w-12 rounded-lg bg-gray-200 flex items-center justify-center mr-3">
                                                        <i data-lucide="image" class="h-6 w-6 text-gray-400"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <div class="text-sm font-medium text-gray-900">
                                                        @firstItem.ProductName
                                                        @if (order.Items.Count > 1)
                                                        {
                                                            <span class="text-gray-500">and @(order.Items.Count - 1) more</span>
                                                        }
                                                    </div>
                                                    @if (firstItem.RentalDays > 0)
                                                    {
                                                        <div class="text-xs text-gray-500">@firstItem.RentalDays days</div>
                                                    }
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="text-sm text-gray-500">No items</div>
                                            }
                                        </div>
                                    </td>

                                    <!-- Address -->
                                    <td class="px-6 py-4">
                                        <div class="text-sm text-gray-900">
                                            <i data-lucide="map-pin" class="h-4 w-4 inline mr-1 text-gray-400"></i>
                                            @(order.DeliveryAddress ?? "N/A")
                                        </div>
                                    </td>

                                    <!-- Status -->
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @Model.GetStatusBadgeClass(order.Status)">
                                            <i data-lucide="@Model.GetStatusIcon(order.Status)" class="h-4 w-4 mr-1"></i>
                                            @Model.GetStatusDisplayText(order.Status)
                                        </span>
                                    </td>

                                    <!-- Dates -->
                                    <td class="px-6 py-4">
                                        <div class="text-xs space-y-1">
                                            <div class="flex items-center whitespace-nowrap">
                                                <i data-lucide="calendar" class="h-3 w-3 mr-1 text-gray-400"></i>
                                                <span class="text-gray-500">Scheduled:</span>
                                                <span class="ml-1 text-gray-900">@order.ScheduledDate.ToString("yyyy-MM-dd")</span>
                                            </div>
                                            @if (order.DeliveredDate.HasValue)
                                            {
                                                <div class="flex items-center whitespace-nowrap">
                                                    <i data-lucide="check" class="h-3 w-3 mr-1 text-green-500"></i>
                                                    <span class="text-gray-500">Delivered:</span>
                                                    <span class="ml-1 text-gray-900">@order.DeliveredDate.Value.ToString("yyyy-MM-dd")</span>
                                                </div>
                                            }
                                            @if (order.ReturnDate.HasValue)
                                            {
                                                <div class="flex items-center whitespace-nowrap">
                                                    <i data-lucide="rotate-ccw" class="h-3 w-3 mr-1 text-blue-500"></i>
                                                    <span class="text-gray-500">Return:</span>
                                                    <span class="ml-1 text-gray-900">@order.ReturnDate.Value.ToString("yyyy-MM-dd")</span>
                                                </div>
                                            }
                                        </div>
                                    </td>

                                    <!-- Actions -->
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <div class="flex items-center space-x-3">
                                            <a href="/provider/order/@order.Id" 
                                               class="text-blue-600 hover:text-blue-900" 
                                               title="View">
                                                View
                                            </a>
                                            
                                            @if (order.Status == BusinessObject.Enums.OrderStatus.approved)
                                            {
                                                <button type="button" 
                                                        onclick="markAsShipped('@order.Id')" 
                                                        class="text-green-600 hover:text-green-900" 
                                                        title="Ship Order">
                                                    Ship
                                                </button>
                                            }
                                            
                                            @if (order.Status == BusinessObject.Enums.OrderStatus.returning)
                                            {
                                                <button type="button" 
                                                        onclick="confirmReturn('@order.Id')" 
                                                        class="text-purple-600 hover:text-purple-900" 
                                                        title="Confirm Return">
                                                    Receive
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Results Info & Pagination -->
                <div class="bg-white px-4 py-3 border-t border-gray-200 flex items-center justify-between">
                    <div>
                        <p class="text-sm text-gray-700">
                            Showing <span class="font-medium">@((Model.CurrentPage - 1) * Model.PageSize + 1)</span> to <span class="font-medium">@Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalOrdersCount)</span> of <span class="font-medium">@Model.TotalOrdersCount</span> results
                        </p>
                    </div>
                    
                    @if (Model.TotalPages > 1)
                    {
                        <div>
                            <form method="get" id="paginationForm" class="flex items-center gap-2">
                                <input type="hidden" name="SearchQuery" value="@Model.SearchQuery" />
                                <input type="hidden" name="StatusFilter" value="@Model.StatusFilter" />
                                <input type="hidden" name="PageSize" value="@Model.PageSize" />
                                <input type="hidden" name="CurrentPage" id="paginationPageInput" value="@Model.CurrentPage" />

                                <button type="submit" onclick="setPage(@(Model.CurrentPage - 1))"
                                        class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg disabled:opacity-50 disabled:cursor-not-allowed hover:bg-gray-200"
                                        disabled="@(Model.CurrentPage <= 1)">
                                    Previous
                                </button>

                                @{
                                    var paginationItems = ShareItFE.Utilities.PaginationHelper.GetPaginationItems(Model.CurrentPage, Model.TotalPages);
                                }
                                @foreach (var item in paginationItems)
                                {
                                    if (item.ToString() == "...")
                                    {
                                        <span class="px-4 py-2 text-gray-500">...</span>
                                    }
                                    else
                                    {
                                        var pageNum = (int)item;
                                        <button type="submit" onclick="setPage(@pageNum)"
                                                class="px-4 py-2 rounded-lg @(pageNum == Model.CurrentPage ? "bg-purple-600 text-white" : "bg-gray-100 text-gray-700 hover:bg-gray-200")">
                                            @pageNum
                                        </button>
                                    }
                                }

                                <button type="submit" onclick="setPage(@(Model.CurrentPage + 1))"
                                        class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg disabled:opacity-50 disabled:cursor-not-allowed hover:bg-gray-200"
                                        disabled="@(Model.CurrentPage >= Model.TotalPages)">
                                    Next
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <i data-lucide="package-x" class="mx-auto h-12 w-12 text-gray-400"></i>
                    <h3 class="mt-2 text-sm font-medium text-gray-900">No orders found</h3>
                    <p class="mt-1 text-sm text-gray-500">No orders match your current filters.</p>
                </div>
            }
        </div>

    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();

        // Auto-submit form on filter change
        document.querySelector('select[name="StatusFilter"]').addEventListener('change', function() {
            this.form.submit();
        });

        function markAsShipped(orderId) {
            if (confirm('Mark this order as shipped? The delivered date will be set to now.')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/provider/orders?handler=ShipOrder';
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                
                const orderIdInput = document.createElement('input');
                orderIdInput.type = 'hidden';
                orderIdInput.name = 'orderId';
                orderIdInput.value = orderId;
                
                form.appendChild(tokenInput);
                form.appendChild(orderIdInput);
                document.body.appendChild(form);
                form.submit();
            }
        }

        function confirmReturn(orderId) {
            if (confirm('Confirm that the item has been returned? This will mark the order as returned.')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/provider/orders?handler=ConfirmReturn';
                
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                const tokenInput = document.createElement('input');
                tokenInput.type = 'hidden';
                tokenInput.name = '__RequestVerificationToken';
                tokenInput.value = token;
                
                const orderIdInput = document.createElement('input');
                orderIdInput.type = 'hidden';
                orderIdInput.name = 'orderId';
                orderIdInput.value = orderId;
                
                form.appendChild(tokenInput);
                form.appendChild(orderIdInput);
                document.body.appendChild(form);
                form.submit();
            }
        }

        // Pagination function
        function setPage(page) {
            document.getElementById('paginationPageInput').value = page;
            document.getElementById('paginationForm').submit();
        }

        // Success/Error messages
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                alert('@TempData["SuccessMessage"]');
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                alert('@TempData["ErrorMessage"]');
            </text>
        }
    </script>
}

