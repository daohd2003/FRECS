<!-- Escalate Modal -->
<div id="escalate-modal" class="modal-overlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 9999; align-items: center; justify-content: center;">
    <div class="modal-content" style="background: white; border-radius: 12px; padding: 30px; max-width: 500px; width: 90%; box-shadow: 0 20px 60px rgba(0,0,0,0.3);">
        <div class="modal-header" style="margin-bottom: 20px;">
            <h3 style="margin: 0; color: #2d3748;"><i class="bi bi-shield-exclamation"></i> Escalate to Admin</h3>
        </div>
        <div class="modal-body">
            <p style="color: #4a5568; margin-bottom: 16px;">This will send all rejected violations to admin for final review. The admin will make the final decision.</p>
            <label style="display: block; margin-bottom: 8px; font-weight: 600; color: #2d3748;">Reason (Optional):</label>
            <textarea id="escalate-reason" placeholder="Explain why you need admin intervention..." style="width: 100%; min-height: 100px; padding: 12px; border: 1px solid #e2e8f0; border-radius: 8px; font-family: inherit;"></textarea>
        </div>
        <div class="modal-actions" style="display: flex; gap: 12px; justify-content: flex-end; margin-top: 20px;">
            <button type="button" class="btn btn-secondary" onclick="closeEscalateModal()">
                <i class="bi bi-x"></i> Cancel
            </button>
            <button type="button" class="btn btn-warning" onclick="confirmEscalateAll()">
                <i class="bi bi-send"></i> Send to Admin
            </button>
        </div>
    </div>
</div>

<script>
    // Escalate functions
    function showEscalateModal() {
        document.getElementById('escalate-modal').style.display = 'flex';
    }

    function closeEscalateModal() {
        document.getElementById('escalate-modal').style.display = 'none';
        document.getElementById('escalate-reason').value = '';
    }

    async function confirmEscalateAll() {
        const reason = document.getElementById('escalate-reason').value.trim();

        try {
            @if (Model.ExistingViolations != null && Model.ExistingViolations.Any())
            {
                var rejectedViolations = Model.ExistingViolations.Where(v => v.Status == BusinessObject.Enums.ViolationStatus.CUSTOMER_REJECTED).ToList();
                if (rejectedViolations.Any())
                {
                    <text>
                    const rejectedViolationIds = @Html.Raw(JsonSerializer.Serialize(rejectedViolations.Select(v => v.ViolationId)));
                    
                    // Escalate each violation
                    const escalatePromises = rejectedViolationIds.map(violationId => 
                        fetch(`@Model.ApiBaseUrl/rental-violations/${violationId}/escalate`, {
                            method: 'POST',
                            headers: {
                                'Authorization': 'Bearer @(Request.Cookies["AccessToken"])',
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ reason: reason || null })
                        })
                    );

                    const results = await Promise.all(escalatePromises);
                    const allSuccess = results.every(r => r.ok);

                    if (allSuccess) {
                        window.location.href = '/provider/order/@Model.Order.Id';
                    } else {
                        alert('Failed to escalate. Please try again.');
                    }
                    </text>
                }
            }
        } catch (error) {
            console.error('Error escalating violations:', error);
            alert('An error occurred. Please try again.');
        }
    }

    // Close modal when clicking outside
    document.getElementById('escalate-modal')?.addEventListener('click', function(e) {
        if (e.target === this) {
            closeEscalateModal();
        }
    });

    // Provider respond to customer's rejection
    async function submitProviderResponse(violationId) {
        const textarea = document.getElementById(`provider-response-${violationId}`);
        const response = textarea?.value?.trim();

        if (!response) {
            alert('Please enter your response before submitting.');
            return;
        }

        try {
            const result = await fetch(`@Model.ApiBaseUrl/rental-violations/${violationId}/provider-respond`, {
                method: 'POST',
                headers: {
                    'Authorization': 'Bearer @(Request.Cookies["AccessToken"])',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ response: response })
            });

            if (result.ok) {
                alert('Response sent successfully!');
                window.location.reload();
            } else {
                const errorData = await result.json();
                alert('Failed to send response: ' + (errorData.message || 'Unknown error'));
            }
        } catch (error) {
            console.error('Error sending provider response:', error);
            alert('An error occurred. Please try again.');
        }
    }
</script>
