                                        <button type="button" onclick="setPenalty('@item.Id', 50)">50%</button>
                                        <button type="button" onclick="setPenalty('@item.Id', 75)">75%</button>
                                        <button type="button" onclick="setPenalty('@item.Id', 100)">100%</button>
                                    </div>
                                </div>

                                <div class="result-row">
                                    <span>Penalty Amount:</span>
                                    <strong id="penalty_amt_@item.Id" class="text-danger">0 VND</strong>
                                </div>

                                <div class="info-row">
                                    <span>Refund Amount to Customer:</span>
                                    <strong id="refund_@item.Id" class="text-success">0 VND</strong>
                                </div>

                                <input type="hidden" 
                                       name="violations[@item.Id].PenaltyAmount"
                                       id="penalty_amt_val_@item.Id" />
                            </div>
                        </div>
                    </div>
                    }
                }
            }
            else
            {
                <div class="alert alert-info">
                    <p>No items in this order.</p>
                </div>
            }
        </div>

        <!-- Summary Box -->
        <div class="summary-box" id="summaryBox" style="display: none;">
            <h5>
                <i class="fas fa-calculator"></i>
                SUMMARY
            </h5>
            <p>
                <span>Total Deposit to Process:</span>
                <strong id="totalDeposit">0 VND</strong>
            </p>
            <p>
                <span>Total Penalty:</span>
                <strong id="totalPenalty">0 VND</strong>
            </p>
            <p>
                <span>Total Refund to Customer:</span>
                <strong id="totalRefund">0 VND</strong>
            </p>
        </div>

        <!-- Form Actions -->
        @{
            // Check if any violation is in a finalized or pending admin review status
            var hasNonEditableViolation = Model.ExistingViolations?.Any(v => 
                v.Status == BusinessObject.Enums.ViolationStatus.CUSTOMER_ACCEPTED ||
                v.Status == BusinessObject.Enums.ViolationStatus.RESOLVED ||
