                                                @if (existingViolation.ProviderResponseAt.HasValue)
                                                {
                                                    <div class="small-text" style="margin-top: 6px; color: #1e40af;">
                                                        <i class="bi bi-clock"></i> Responded at: @existingViolation.ProviderResponseAt.Value.ToLocalTime().ToString("MMM dd, yyyy HH:mm")
                                                    </div>
                                                }
                                            </div>
